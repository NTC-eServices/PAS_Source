		<div class="mainDiv">
			<h1
				style="margin-top: 0%; text-align: center; color: #ffffff; background-color: #404d6f !important;"
				class="common_form_header">Assign Divisional Secretariat Divisions</h1>

			<div style="width: 95%;" class="subDiv">
				<h:form id="form">
					<br></br>
					<p:panel id="panelOne">
						<p:panelGrid columns="4"
							columnClasses="ui-grid-col-3,ui-grid-col-3,ui-grid-col-4,ui-grid-col-2"
							layout="grid">
							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="District Code" for="districtCode"></p:outputLabel>
								<p:outputLabel value="*" style="color:red;"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:selectOneMenu id="districtCode" style="width:70%"
									value="#{assignDivSecBackingBean.assignDivSecDTO.districtCode}"
									effect="fold" filter="true" filterMatchMode="contains"
									tabindex="1">
									<p:ajax
										listener="#{assignDivSecBackingBean.onDistrictCodeSelect}"
										update="districtDes,assignedDivSecTable,panelTwo,cmdbtnAdd,cmdbtnClear" />

									<f:selectItem itemLabel="-- Select District Code --" itemValue=""
										noSelectionOption="true" />
									<f:selectItems value="#{assignDivSecBackingBean.getDistrictList}"
										var="b" itemValue="#{b.districtCode}"
										itemLabel="#{b.districtCode} - #{b.districtDes}" />
								</p:selectOneMenu>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>


							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="District" for="districtDes"></p:outputLabel>

							</p:panelGrid>
							<p:panelGrid>
								<p:inputText id="districtDes" style="width:70%"
									value="#{assignDivSecBackingBean.assignDivSecDTO.districtDes}"
									readonly="true">
								</p:inputText>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>

						</p:panelGrid>
					</p:panel>
					<br></br>
					<center>
						<p:commandButton id="cmdbtnSearch" value="Search"
							class="mainActionbtn" update="panelTwo,assignedDivSecTable,form"
							action="#{assignDivSecBackingBean.search}">
						</p:commandButton>
						<p:commandButton id="cmdbtnClearPage" value="Clear"
							class="mainActionbtn"
							update="panelOne,panelTwo,assignedDivSecTable,cmdbtnAdd,cmdbtnClear"
							action="#{assignDivSecBackingBean.clearPage}">
						</p:commandButton>
					</center>
					<br></br>
					<p:panel id="panelTwo">
						<br></br>
						<p:panelGrid columns="4"
							columnClasses="ui-grid-col-3,ui-grid-col-3,ui-grid-col-4,ui-grid-col-2"
							layout="grid">
							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="D.S. Division Code"></p:outputLabel>
								<p:outputLabel value="*"
									rendered="#{assignDivSecBackingBean.searchedRecord}"
									style="color:red;"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:inputText maxlength="5" style="width: 15%;font-weight: bold;"
									value="#{assignDivSecBackingBean.assignDivSecDTO.districtCode}"
									readonly="true"
									disabled="#{!assignDivSecBackingBean.searchedRecord || assignDivSecBackingBean.disableBranchCode}">
								</p:inputText> 
								<p:outputLabel value=" - "></p:outputLabel>
								<p:inputText maxlength="5" style="width:30%"
									value="#{assignDivSecBackingBean.assignDivSecDTO.divSecCode}"
									disabled="#{!assignDivSecBackingBean.searchedRecord || assignDivSecBackingBean.disableBranchCode}"
									onkeyup="this.value = this.value.toUpperCase();"
									onblur="this.value = this.value.toUpperCase();">
									<p:keyFilter regEx="/[a-z0-9_]/i" />
								</p:inputText>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>
							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="D.S. Division (English)"></p:outputLabel>
								<p:outputLabel value="*"
									rendered="#{assignDivSecBackingBean.searchedRecord}"
									style="color:red;"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:inputText maxlength="30" style="width:70%"
									disabled="#{!assignDivSecBackingBean.searchedRecord}"
									onkeyup="this.value = this.value.toUpperCase();"
									value="#{assignDivSecBackingBean.assignDivSecDTO.divSec_description_english}">
								</p:inputText>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>
							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="D.S. Division (Sinhala)"></p:outputLabel>
								<p:outputLabel value="*"
									rendered="#{assignDivSecBackingBean.searchedRecord}"
									style="color:red;"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:inputText maxlength="30" style="width:70%"
									disabled="#{!assignDivSecBackingBean.searchedRecord}"
									onkeyup="this.value = this.value.toUpperCase();"
									value="#{assignDivSecBackingBean.assignDivSecDTO.divSec_description_sinhala}">
								</p:inputText>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>
							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="D.S. Division (Tamil)"></p:outputLabel>
								<p:outputLabel value="*"
									rendered="#{assignDivSecBackingBean.searchedRecord}"
									style="color:red;"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:inputText maxlength="30" style="width:70%"
									disabled="#{!assignDivSecBackingBean.searchedRecord}"
									onkeyup="this.value = this.value.toUpperCase();"
									value="#{assignDivSecBackingBean.assignDivSecDTO.divSec_description_tamil}">
								</p:inputText>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>

						</p:panelGrid>

					</p:panel>
					<br></br>

					<center>
						<p:commandButton id="cmdbtnAdd" value="Save" class="mainActionbtn"
							update="panelTwo,assignedDivSecTable"
							action="#{assignDivSecBackingBean.saveDivSecFunction}"
							disabled="#{!assignDivSecBackingBean.searchedRecord}">
						</p:commandButton>
						<p:commandButton id="cmdbtnClear" value="Clear"
							class="mainActionbtn" update="panelTwo,assignedDivSecTable"
							action="#{assignDivSecBackingBean.clearAddForm}"
							disabled="#{!assignDivSecBackingBean.searchedRecord}">
						</p:commandButton>

					</center>
					<br></br>

					<p:growl id="msgs" showDetail="true" />
					<center>
						<p:dataTable id="assignedDivSecTable" var="item"
							value="#{assignDivSecBackingBean.assignedDivSec}"
							rows="#{msg['reference.page.gridvalue.parameter']}"
							style="width:100%;" paginator="true"
							paginatorTemplate="{CurrentPageReport} {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
							rowsPerPageTemplate="5,10,15">
<!-- 
							<p:column style="width:12%;" headerText="District Code">
								<h:outputText
									value="#{assignDivSecBackingBean.assignDivSecDTO.districtCode}" />
							</p:column>

							<p:column style="width:12%;" headerText="District">
								<h:outputText style="font-size:90%;"
									value="#{assignDivSecBackingBean.assignDivSecDTO.districtDes}" />
							</p:column>
 -->
							<p:column style="width:12%;" headerText="D.S. Division Code">
								<h:outputText style="font-size:90%;" value="#{item.divSecCode}" />
							</p:column>

							<p:column headerText="D.S. Division (English)">
								<h:outputText style="font-size:90%;"
									value="#{item.divSec_description_english}" />
							</p:column>

							<p:column headerText="D.S. Division (Sinhala)">
								<h:outputText style="font-size:90%;"
									value="#{item.divSec_description_sinhala}" />
							</p:column>

							<p:column headerText="D.S. Division (Tamil)">
								<h:outputText style="font-size:90%;"
									value="#{item.divSec_description_tamil}" />
							</p:column>

							<p:column headerText="Edit"
								style="width:10%;text-align:center;padding-top :1px !important;padding-bottom :1px !important;width:50px">
								<p:commandLink action="#{assignDivSecBackingBean.editAction(item)}" update="@form">
									<p:graphicImage library="images" name="edit.png"
										style="width:20px;height:20px;" title="Edit"></p:graphicImage>
								</p:commandLink>
							</p:column>

							<p:column headerText="Delete"
								style="width:10%;text-align:center;padding-top :1px !important;padding-bottom :1px !important;width:50px">
								<p:commandLink
									action="#{sessionBackingBean.showMessage(null,null,'CONFIRM_DIALOG')}"
									ajax="true" update="assignedDivSecTable">
									<ui:param name="bean" value="#{assignDivSecBackingBean}" />
									<ui:param name="method" value="deleteAction" />
									<f:setPropertyActionListener
										target="#{assignDivSecBackingBean.deleteAssignDivSecDTO}"
										value="#{item}" />
									<p:graphicImage library="images" name="delete.png"
										style="padding-top :10px;width:20px;height:20px;"
										title="Delete"></p:graphicImage>
								</p:commandLink>
							</p:column>
						</p:dataTable>
					</center>
					<br></br>
				</h:form>
			</div>
		</div>
