<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:p="http://primefaces.org/ui"
	xmlns:f="http://java.sun.com/jsf/core"
	template="/WEB-INF/template/template.xhtml">
	<ui:define name="metadata">
	</ui:define>
	<ui:define name="content">

		<style>
.ui-dialog .ui-dialog-titlebar {
	padding: .4em .4em .4em 1em;
	position: relative;
	background: #07295b !important;
	padding: 5px 5px 5px 5px;
	margin: 0px 0px 0px 0px;
	color: #ffffff;
}

.ui-panelgrid .ui-panelgrid-cell {
	background-color: #f1f1f1;
}

.ui-icon.ui-confirm-dialog-severity {
	background-position: 0 0 !important;
	background-image: none !important;
}

.colorHighlight {
	background: yellow !important;
}

.ui-dialog .ui-widget .ui-widget-content .ui-corner-all .ui-shadow .ui-hidden-container .ui-draggable
	{
	width: 50%;
}

.firstColumn {
	width: 100%;
}

.secondColumn {
	width: 100%;
}

.dashboardNRResendDocRecord {
	background-color: #16e5d7 !important;
}

.ui-state-default a, .ui-state-default a:link, .ui-state-default a:visited
	{
	color: #07295b;
}

.ui-datatable-scrollable-theadclone {
	visibility: collapse;
}

.mainDiv {
	width: 99%;
	height: auto;
	border-left: solid;
	border-right: solid;
	border-bottom: solid;
	border-top: solid;
	border-color: #07295b;
	border-width: 1px;
	margin-left: 5px;
	margin-top: 5px;
	margin-bottom: 5px;
	/*background-image: linear-gradient(to right bottom, #d9ddfa, #ccd4fb, #bdcafc, #aec2fe,
		#9cb9ff);*/
	background-image: linear-gradient(to right bottom, #f1f1f1, #dfdfe4, #f1f1f1, #e9eaeb,
		#bbb5b5);
}

.ui-inputfield, .ui-widget-content .ui-inputfield, .ui-widget-header .ui-inputfield
	{
	color: #07295b;
}

.mainLinkButton {
	font-weight: bold;
	background: #2571fa !important;
	text-align: center;
	padding: 7px 25px 7px 25px !important;
	height: 35px !important;
	text-decoration: none !important;
	color: white !important;
	white-space: nowrap !important;
	border-radius: 5px !important;
}

.mainLinkButton:hover {
	background: #fba026 !important;
}

.otherLinkButton {
	font-weight: bold;
	background: #296807 !important;
	text-align: center;
	padding: 7px 25px 7px 25px !important;
	height: 35px !important;
	text-decoration: none !important;
	color: white !important;
	white-space: nowrap !important;
	border-radius: 5px !important;
}

.otherLinkButton:hover {
	background: #fba026 !important;
}

.mainActionbtn {
	font-weight: bold;
	background: #2571fa !important;
	height: 30px !important;
	border-radius: 5px !important;
	color: white !important;
	text-align: center;
	width: 80px;
	white-space: nowrap !important;
	-webkit-transition: background-color 0.3s ease-out;
	-moz-transition: background-color 0.3s ease-out;
	-o-transition: background-color 0.3s ease-out;
	transition: background-color 0.3s ease-out;
}

.mainActionbtn1 {
	font-weight: bold;
	background: #2571fa !important;
	height: 30px !important;
	border-radius: 5px !important;
	color: white !important;
	text-align: center;
	width: 180px;
	white-space: nowrap !important;
	-webkit-transition: background-color 0.3s ease-out;
	-moz-transition: background-color 0.3s ease-out;
	-o-transition: background-color 0.3s ease-out;
	transition: background-color 0.3s ease-out;
}

.mainActionbtn:hover {
	background: #fba026 !important;
}

.OthActionbtn {
	font-weight: bold;
	background: #296807 !important;
	height: 30px !important;
	border-radius: 5px !important;
	color: white !important;
	text-align: center;
	width: 80px;
	white-space: nowrap !important;
	-webkit-transition: background-color 0.3s ease-out;
	-moz-transition: background-color 0.3s ease-out;
	-o-transition: background-color 0.3s ease-out;
	transition: background-color 0.3s ease-out;
	margin-bottom: 5px;
}

.OthActionbtn:hover {
	background: #fba026 !important;
}

.subDiv {
	margin: 0 auto;
	background: rgb(254, 255, 255); /* Old browsers */
	background: -moz-linear-gradient(-45deg, rgba(254, 255, 255, 1) 0%,
		rgba(210, 235, 249, 1) 100%); /* FF3.6-15 */
	background: -webkit-linear-gradient(-45deg, rgba(254, 255, 255, 1) 0%,
		rgba(210, 235, 249, 1) 100%); /* Chrome10-25,Safari5.1-6 */
	background: linear-gradient(135deg, rgba(254, 255, 255, 1) 0%,
		rgba(210, 235, 249, 1) 100%);
	/* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#feffff',
		endColorstr='#d2ebf9', GradientType=1);
	/* IE6-9 fallback on horizontal gradient */
}

.calendarClass input {
	width: 62% !important
}

.ui-datatable thead th, .ui-datatable tbody td, .ui-datatable tfoot td,
	.ui-datatable tfoot th {
	padding: 4px 4px;
	overflow: hidden;
	border-width: 1px;
	border-style: solid;
}
</style>


		<div class="mainDiv">
			<h1
				style="margin-top: 0%; text-align: center; color: #ffffff; background-color: #404d6f !important;"
				class="common_form_header">Approval for Suspend Permit/ Driver
				ID/ Conductor ID</h1>

			<div style="width: 95%;" class="subDiv">

				<h:form id="frmSuspend">
					<br />

					<p:panel id="pnl-search">

						<p:panelGrid columns="4"
							columnClasses="ui-grid-col-3,ui-grid-col-3,ui-grid-col-3,ui-grid-col-3"
							layout="grid">

							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Suspend Category"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:selectOneMenu id="suspendCategory" style="width:65%;"
									effect="fold"
									value="#{approveSuspendBean.searchDTO.suspendCategory}">
									<f:selectItem itemLabel="-Select Category-" itemValue="" />
									<f:selectItem itemValue="P" itemLabel="Permit"></f:selectItem>
									<f:selectItem itemValue="D" itemLabel="Driver"></f:selectItem>
									<f:selectItem itemValue="C" itemLabel="Conductor"></f:selectItem>
								</p:selectOneMenu>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>

							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Type of Suspend"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:selectOneMenu id="suspendType" style="width:65%;"
									effect="fold"
									value="#{approveSuspendBean.searchDTO.suspendTypeCode}">
									<f:selectItem itemLabel="--Select Suspend Type--" itemValue="" />
									<f:selectItems value="#{approveSuspendBean.suspendTypeList}"
										var="suspendType" itemLabel="#{suspendType.description}"
										itemValue="#{suspendType.code}" />
								</p:selectOneMenu>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>


							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Vehicle No."></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:autoComplete id="vehicleNo"
									value="#{approveSuspendBean.searchDTO.vehicleNo}"
									completeMethod="#{approveSuspendBean.completeVehicleNo}"
									size="18" onkeyup="this.value=this.value.toUpperCase();" />
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>

							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Permit No."></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:autoComplete id="permitNo"
									value="#{approveSuspendBean.searchDTO.permitNo}"
									completeMethod="#{approveSuspendBean.completePermitNo}"
									size="18" onkeyup="this.value=this.value.toUpperCase();" />

								<!-- <p:inputText style="width:91%;" id="permitNo"
								value="#{approveSuspendBean.searchDTO.permitNo}"></p:inputText> -->
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>

							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Driver ID"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>

								<p:autoComplete id="driverId"
									value="#{approveSuspendBean.searchDTO.driverID}"
									completeMethod="#{approveSuspendBean.completeDriver}" size="18"
									onkeyup="this.value=this.value.toUpperCase();" />


							</p:panelGrid>
							<p:panelGrid></p:panelGrid>

							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Conductor ID"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>

								<p:autoComplete id="conductorId"
									value="#{approveSuspendBean.searchDTO.conductorID}"
									completeMethod="#{approveSuspendBean.completeConductor}"
									size="18" onkeyup="this.value=this.value.toUpperCase();" />


							</p:panelGrid>
							<p:panelGrid></p:panelGrid>

						</p:panelGrid>

						<p:panelGrid columns="4" style="margin-top:2%;"
							columnClasses="ui-grid-col-3,ui-grid-col-3,ui-grid-col-3,ui-grid-col-3"
							layout="grid">

							<p:panelGrid></p:panelGrid>

							<p:commandButton id="searchBtn" styleClass="mainLinkButton"
								style="width: 100%" value="Search" update="@form"
								action="#{approveSuspendBean.searchButtonAction}">

							</p:commandButton>

							<p:commandButton id="clearBtn" styleClass="mainLinkButton"
								style="width: 100%" value="Clear" update="@form"
								action="#{approveSuspendBean.clearButtonAction}">
							</p:commandButton>

							<p:panelGrid></p:panelGrid>

						</p:panelGrid>

					</p:panel>

					<p:panel style="border-bottom:5px solid #404d6f;" />

					<p:panel>
						<h1
							style="margin-top: 1%; margin-bottom: 2%; text-align: left; color: #000000;">Suspend
							Information</h1>

						<p:dataTable id="dataTableOne" var="p" rows="5" paginator="true"
							value="#{approveSuspendBean.savedSuspendList}"
							selectionMode="single"
							selection="#{approveSuspendBean.selectedDTO}"
							rowKey="#{p.suspendRefNo}"
							paginatorTemplate="{CurrentPageReport} {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
							rowsPerPageTemplate="5,10,15" resizableColumns="false"
							liveResize="true" tableStyle="width:100%;font-size:12px;"
							rowIndexVar="index" styleClass="myTable"
							emptyMessage="No Data Available">

							<p:ajax event="rowSelect"
								listener="#{approveSuspendBean.onRowSelect}"
								update=":frmSuspend" />
							<p:ajax event="rowUnselect"
								listener="#{approveSuspendBean.onRowUnselect}"
								update=":frmSuspend" />

							<p:column headerText="Suspend Ref" style="text-align:left;"
								width="80px;">
								<h:outputText value="#{p.suspendRefNo}" />
							</p:column>

							<p:column headerText="Charge Ref" style="text-align: left;"
								width="80px;">
								<h:outputText value="#{p.chargeRefNo}" />
							</p:column>

							<p:column headerText="Suspend Type" width="60px;"
								style="text-align: left;">
								<h:outputText value="#{p.suspendTypeDesc}" />
							</p:column>

							<p:column headerText="Permit No" width="60px;"
								style="text-align: left;">
								<h:outputText value="#{p.permitNo}" />
							</p:column>

							<p:column headerText="Driver ID" width="60px;"
								style="text-align: left;" visible="true">
								<h:outputText value="#{p.driverID}" />
							</p:column>

							<p:column headerText="Conductor ID" width="60px;"
								style="text-align: left;" visible="true">
								<h:outputText value="#{p.conductorID}" />
							</p:column>

							<p:column headerText="Start Date" width="60px;"
								style="text-align: left;" visible="true">
								<h:outputText value="#{p.suspendStartDate}" />
							</p:column>

							<p:column headerText="End Date" width="60px;"
								style="text-align: left;" visible="true">
								<h:outputText value="#{p.suspendEndDate}" />
							</p:column>

							<p:column headerText="Status" width="40px;"
								style="text-align: left;" visible="true">
								<h:outputText value="#{p.suspendStatusDesc}" />
							</p:column>


						</p:dataTable>
						<br></br>
						<p:panelGrid columns="2">
							<p:column>
								<p:outputLabel value="Reject Reason" for="remark"></p:outputLabel>

							</p:column>
							<p:column>
								<p:inputTextarea rows="10" cols="30" counter="display"
									maxlength="200" counterTemplate="{0} characters remaining."
									autoResize="false" id="remark" style="width:500px"
									value="#{approveSuspendBean.remarks}"
									onkeyup="this.value=this.value.toUpperCase();" />
								<h:outputText id="display" />

							</p:column>
						</p:panelGrid>
					</p:panel>

					<p:panel>

						<center>

							<p:panelGrid columns="4" style="margin-top:2%;"
								columnClasses="ui-grid-col-3,ui-grid-col-3,ui-grid-col-3,ui-grid-col-3"
								layout="grid">

								<p:commandButton id="approveBtn" styleClass="mainLinkButton"
									style="width: 100%" value="Approve" update="@form"
									disabled="#{!approveSuspendBean.enableNormalApprove}"
									action="#{approveSuspendBean.approveButtonAction}">

								</p:commandButton>

								<p:commandButton id="rejectBtn" styleClass="mainLinkButton"
									style="width: 100%" value="Reject" update="@form"
									disabled="#{!approveSuspendBean.enableNormalApprove}"
									action="#{approveSuspendBean.rejectButtonAction}">
								</p:commandButton>

								<p:commandButton id="directorApproveBtn"
									styleClass="mainLinkButton" style="width: 100%"
									value="Director Approve" update="@form"
									disabled="#{!approveSuspendBean.enableDirectorApprove}"
									action="#{approveSuspendBean.dirApproveButtonAction}">
								</p:commandButton>

								<p:commandButton id="directorRejectBtn"
									styleClass="mainLinkButton" style="width: 100%"
									value="Director Reject" update="@form"
									disabled="#{!approveSuspendBean.enableDirectorApprove}"
									action="#{approveSuspendBean.dirRejButtonAction}">
								</p:commandButton>

							</p:panelGrid>

							<p:panelGrid columns="4" style="margin-top:1%;"
								columnClasses="ui-grid-col-3,ui-grid-col-3,ui-grid-col-3,ui-grid-col-3"
								layout="grid">


								<p:panelGrid></p:panelGrid>

								<!-- Generate Suspend Letters -->
								<p:commandButton id="letterPrintBtn" styleClass="mainLinkButton"
									style="width: 100%" value="Print Suspend Letter" update="@form"
									disabled="#{!approveSuspendBean.enableLetterPrint}"
									action="#{approveSuspendBean.generateSuspendLetters}"
									oncomplete="window.open('/InfoNTC/showUpload?reportName=Suspend Letter')" process="@this"
									ajax="true">
								</p:commandButton>



								<p:commandButton id="letterPrintBtn2"
									styleClass="mainLinkButton" style="width: 110%"
									value="Print Permit Suspend Letter" update="@form"
									disabled="#{!approveSuspendBean.enablePermitPrint}"
									action="#{approveSuspendBean.getPermitSuspendLetter}"
									oncomplete="window.open('/InfoNTC/showUpload?reportName=Permit Suspend Letter')" process="@this"
									ajax="true">
								</p:commandButton>

								<p:panelGrid></p:panelGrid>


							</p:panelGrid>

						</center>

					</p:panel>

				</h:form>

				<p:dialog id="errorDialog" global="true" modal="true" header="Error"
					width="30%" severity="info" widgetVar="errorDialog"
					closeOnEscape="true" resizable="false">
					<h:form id="frmError">

						<center>
							<p:panelGrid columns="2" styleClass="ui-noborder">
								<p:graphicImage library="images" name="error-24.png"></p:graphicImage>
								<p:outputLabel value="#{approveSuspendBean.errorMsg}"></p:outputLabel>
							</p:panelGrid>
							<br></br>
							<p:commandButton style="margin-top:10px;margin-bottom:10px"
								process="frmError" value="OK" onclick="PF('errorDialog').hide()">
							</p:commandButton>

						</center>
					</h:form>
				</p:dialog>

				<p:dialog id="successDialog" global="true" modal="true"
					header="Success" width="30%" severity="info"
					widgetVar="successDialog" closeOnEscape="true" resizable="false">
					<h:form id="frmSuccess">

						<center>
							<p:panelGrid columns="2" styleClass="ui-noborder">
								<p:graphicImage library="images" name="success-24.png"></p:graphicImage>
								<p:outputLabel value="#{approveSuspendBean.successMsg}"></p:outputLabel>
							</p:panelGrid>
							<br></br>
							<p:commandButton style="margin-top:10px;margin-bottom:10px"
								process="frmSuccess" value="OK"
								onclick="PF('successDialog').hide()">
							</p:commandButton>
						</center>

					</h:form>
				</p:dialog>


			</div>

		</div>

	</ui:define>
</ui:composition>
