<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:p="http://primefaces.org/ui"
	xmlns:f="http://java.sun.com/jsf/core"
	template="/WEB-INF/template/template.xhtml">
	<ui:define name="metadata">
	</ui:define>

	<ui:define name="content">

		<style>
.dateTimeField input {
	width: 100px;
}

.dateTimeField img {
	vertical-align: right;
}

.ui-dialog .ui-dialog-titlebar {
	padding: .4em .4em .4em 1em;
	position: relative;
	background: #07295b !important;
	padding: 5px 5px 5px 5px;
	margin: 0px 0px 0px 0px;
	color: #ffffff;
}

.ui-panelgrid .ui-panelgrid-cell {
	background-color: #f1f1f1;
}

.ui-icon.ui-confirm-dialog-severity {
	background-position: 0 0 !important;
	background-image: none !important;
}

.colorHighlight {
	background: yellow !important;
}

.ui-dialog .ui-widget .ui-widget-content .ui-corner-all .ui-shadow .ui-hidden-container .ui-draggable
	{
	width: 50%;
}

.firstColumn {
	width: 100%;
}

.secondColumn {
	width: 100%;
}

.dashboardNRResendDocRecord {
	background-color: #16e5d7 !important;
}

.ui-state-default a, .ui-state-default a:link, .ui-state-default a:visited
	{
	color: #07295b;
}

.mainDiv {
	width: 99%;
	height: auto;
	border-left: solid;
	border-right: solid;
	border-bottom: solid;
	border-top: solid;
	border-color: #07295b;
	border-width: 1px;
	margin-left: 5px;
	margin-top: 5px;
	margin-bottom: 5px;
	background-image: linear-gradient(to right bottom, #f1f1f1, #dfdfe4, #f1f1f1, #e9eaeb,
		#bbb5b5);
}

.ui-inputfield, .ui-widget-content .ui-inputfield, .ui-widget-header .ui-inputfield
	{
	color: #07295b;
}

.mainLinkButton {
	font-weight: bold;
	background: #2571fa !important;
	text-align: center;
	padding: 7px 25px 7px 25px !important;
	height: 35px !important;
	text-decoration: none !important;
	color: white !important;
	white-space: nowrap !important;
	border-radius: 5px !important;
}

.mainLinkButton:hover {
	background: #fba026 !important;
}

.otherLinkButton {
	font-weight: bold;
	background: #296807 !important;
	text-align: center;
	padding: 7px 25px 7px 25px !important;
	height: 35px !important;
	text-decoration: none !important;
	color: white !important;
	white-space: nowrap !important;
	border-radius: 5px !important;
}

.otherLinkButton:hover {
	background: #fba026 !important;
}

.mainActionbtn {
	font-weight: bold;
	background: #2571fa !important;
	height: 30px !important;
	border-radius: 5px !important;
	color: white !important;
	text-align: center;
	width: 80px;
	white-space: nowrap !important;
	-webkit-transition: background-color 0.3s ease-out;
	-moz-transition: background-color 0.3s ease-out;
	-o-transition: background-color 0.3s ease-out;
	transition: background-color 0.3s ease-out;
}

.mainActionbtn:hover {
	background: #fba026 !important;
}

.OthActionbtn {
	font-weight: bold;
	background: #296807 !important;
	height: 30px !important;
	border-radius: 5px !important;
	color: white !important;
	text-align: center;
	width: 80px;
	white-space: nowrap !important;
	-webkit-transition: background-color 0.3s ease-out;
	-moz-transition: background-color 0.3s ease-out;
	-o-transition: background-color 0.3s ease-out;
	transition: background-color 0.3s ease-out;
	margin-bottom: 5px;
}

.OthActionbtn:hover {
	background: #fba026 !important;
}

.subDiv {
	margin: 0 auto;
	background: rgb(254, 255, 255); /* Old browsers */
	background: -moz-linear-gradient(-45deg, rgba(254, 255, 255, 1) 0%,
		rgba(210, 235, 249, 1) 100%); /* FF3.6-15 */
	background: -webkit-linear-gradient(-45deg, rgba(254, 255, 255, 1) 0%,
		rgba(210, 235, 249, 1) 100%); /* Chrome10-25,Safari5.1-6 */
	background: linear-gradient(135deg, rgba(254, 255, 255, 1) 0%,
		rgba(210, 235, 249, 1) 100%);
	/* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#feffff',
		endColorstr='#d2ebf9', GradientType=1);
	/* IE6-9 fallback on horizontal gradient */
}

.ui-input {
	margin-top: -20px;
}
</style>



		<h:form id="form">
			<div class="mainDiv">
				<h1
					style="margin-top: 0%; text-align: center; color: #ffffff; background-color: #404d6f !important;"
					class="common_form_header">Payment Update Function</h1>
				<div style="width: 90%;" class="subDiv">


					<p:panel id="panelOne">

						<p:panelGrid columns="4" style="margin-left:50px"
							columnClasses="ui-grid-col-2,ui-grid-col-3,ui-grid-col-5,ui-grid-col-2"
							layout="grid">

							<!-- Service Type Filed Start -->
							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Service Type"></p:outputLabel>
							</p:panelGrid>

							<p:panelGrid>
								<p:selectOneMenu id="serviceType" style="width:68%"
									onkeyup="this.value=this.value.toUpperCase();"
									value="#{subSidyPaymentUpdateBean.subSidyDTO.serviceCode}"
									filter="true" filterMatchMode="contains" tabindex="1"
									placeholder="-- All --">

									<p:ajax listener="#{subSidyPaymentUpdateBean.ajaxselectType}"
										update="@form" />

									<f:selectItem itemLabel="-- All --" itemValue="" />
									<f:selectItems
										value="#{subSidyPaymentUpdateBean.getServiceTypeList}" var="s"
										itemValue="#{s.serviceCode}" itemLabel="#{s.serviceType}" />
								</p:selectOneMenu>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>
							<!--  Service Type Filed End -->

							<!-- voucher No Filed Start -->
							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Voucher No" style="text-align: left;"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>

								<p:selectOneMenu id="voucherNo" style="width:68%"
									onkeyup="this.value=this.value.toUpperCase();"
									disabled="#{subSidyPaymentUpdateBean.disabledVoucherNo}"
									value="#{subSidyPaymentUpdateBean.subSidyDTO.voucherNo}"
									filter="true" filterMatchMode="contains" tabindex="1"
									placeholder="-- All --">


									<p:ajax
										listener="#{subSidyPaymentUpdateBean.ajaxVoucherSelect}"
										update="@form" />

									<f:selectItem itemLabel="-- All --" itemValue="" />
									<f:selectItems
										value="#{subSidyPaymentUpdateBean.getVoucherNoList}" var="s"
										itemValue="#{s.voucherNo}" itemLabel="#{s.voucherNo}" />
								</p:selectOneMenu>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>
							<!--  voucher No Filed End -->


							<!-- Request Start Date Filed Start -->
							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Start Date"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:calendar id="startDate" styleClass="dateTimeField"
									navigator="true" showOn="button"
									disabled="#{subSidyPaymentUpdateBean.disabledStartDate}"
									value="#{subSidyPaymentUpdateBean.subSidyDTO.voucherStartDate}"
									pattern="dd/MM/yyyy" placeholder="DD/MM/YYYY">

									<p:ajax listener="#{subSidyPaymentUpdateBean.ajaxDateSelect}"
										update="@form" />

								</p:calendar>

							</p:panelGrid>
							<p:panelGrid></p:panelGrid>
							<!-- Request Start Date Filed End -->

							<!-- Request End Date Filed Start -->
							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="End Date"></p:outputLabel>
							</p:panelGrid>

							<p:panelGrid>
								<p:calendar id="endDate" styleClass="dateTimeField"
									navigator="true" showOn="button"
									disabled="#{subSidyPaymentUpdateBean.disabledEndDate}"
									value="#{subSidyPaymentUpdateBean.subSidyDTO.voucherEndDate}"
									pattern="dd/MM/yyyy" placeholder="DD/MM/YYYY">

									<p:ajax listener="#{subSidyPaymentUpdateBean.ajaxDateSelect}"
										update="@form" />

								</p:calendar>

							</p:panelGrid>
							<p:panelGrid></p:panelGrid>
							<!--Request End Date Filed End -->



						</p:panelGrid>

						<br />

						<center>
							<p:commandButton value="Search" styleClass="mainActionbtn"
								id="cmdBtnSearch" action="#{subSidyPaymentUpdateBean.search}"
								update="@form,frmsuccess,frmError,frmAlert" />

							<p:commandButton value="Clear" styleClass="mainActionbtn"
								action="#{subSidyPaymentUpdateBean.clearOne}" update="@form" />

						</center>
					</p:panel>




					<!--Data Table -->
					<p:panel id="panelTwo">
						<center>


							<p:dataTable id="dataTable" var="p" rows="10" paginator="true"
								value="#{subSidyPaymentUpdateBean.paymentUpdateList}"
								selection="#{subSidyPaymentUpdateBean.selectDTO}"
								selectionMode="single" rowKey="#{p.voucherNo}"
								paginatorTemplate="{CurrentPageReport} {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
								rowsPerPageTemplate="10,20" resizableColumns="false"
								liveResize="true" tableStyle="width:100%;font-size:12px;"
								rowIndexVar="index" styleClass="myTable" editable="true"
								sortBy="#{p.voucherNo}" sortOrder="descending" editMode="cell"
								emptyMessage="No data available">



								<p:ajax event="rowSelect"
									listener="#{subSidyPaymentUpdateBean.ajaxUpdatePayment}"
									update="@form" />
								<p:column headerText="" visible="false">
									<h:outputText value="#{p.bulkSeq}" />

								</p:column>
								<p:column headerText="Voucher No.">
									<h:outputText value="#{p.voucherNo}" />

								</p:column>

								<p:column headerText="Transaction Date" width="15%">
									<h:outputText value="#{p.transationDateString}" />
								</p:column>

								<p:column headerText="No. of Logs" width="10%">
									<h:outputText value="#{p.noOfLog}" />
								</p:column>

								<p:column headerText="Total Amount (Rs.)"
									style="text-align:right;">
									<h:outputText value="#{p.totalAmount}">
										<f:convertNumber pattern="##,###.00" />
									</h:outputText>

								</p:column>

								<p:column headerText=" Payment Status" style="width:10%">
									<h:outputText value="#{p.status}" />
								</p:column>

								<p:column headerText="Reference" style="width:10%"
									visible="true">
									<h:outputText value="#{p.referenceNo}" />
								</p:column>

								<p:column headerText="Payment Reference" style="width:15%">
									<h:outputText value="#{p.paymentRefNo}" />
								</p:column>


								<p:column headerText="">

									<p:commandLink action="#{subSidyPaymentUpdateBean.view}"
										update="@form">

										<f:setPropertyActionListener value="#{p}"
											target="#{subSidyPaymentUpdateBean.viewSelect}" />

										<p:graphicImage library="images" name="view.png"
											style="width:24px;height:24px;" title="view"></p:graphicImage>
									</p:commandLink>

								</p:column>




							</p:dataTable>
						</center>
					</p:panel>


					<p:panel>
						<p:dataTable id="e2" var="showDetails2" rows="5" paginator="true"
							update="@form"
							rendered="#{subSidyPaymentUpdateBean.renderViewList}"
							value="#{subSidyPaymentUpdateBean.showSubsidyLogSheetData}"
							paginatorTemplate="{CurrentPageReport} {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
							tableStyle="width:100%;font-size:12px;"
							rowsPerPageTemplate="10,20" resizableColumns="false"
							liveResize="true" rowIndexVar="index" styleClass="myTable"
							emptyMessage="No records are available">


							<p:column headerText="Log Refference No."
								style="text-align:left;" visible="true">
								<h:outputText style="text-align:left;width:80%"
									value="#{showDetails2.logRefNo}" visible="true" />
							</p:column>
							<p:column headerText="Service  No." style="text-align:left;"
								visible="false">
								<h:outputText style="width:80%;text-align:left;"
									value="#{showDetails2.serviceNo}" />
							</p:column>

							<p:column headerText="Year" style="text-align:left;">
								<h:outputText style="width:80%;text-align:left;"
									value="#{showDetails2.year}" />
							</p:column>
							<p:column headerText="Month" style="text-align:left;">
								<h:outputText style="text-align:left;width:80%"
									value="#{showDetails2.month}" />
							</p:column>
							<p:column headerText="School Days" style="text-align:left;">
								<h:outputText style="text-align:left;width:80%"
									value="#{showDetails2.schoolDays}" />
							</p:column>

							<p:column headerText="Turns" style="text-align:left;">
								<h:outputText style="text-align:left;width:80%"
									value="#{showDetails2.turns}" />
							</p:column>


							<p:column headerText=" % " style="text-align:left;"
								visible="false">
								<h:outputText style="text-align:left;width:80%"
									value="#{showDetails2.turns}" />
							</p:column>

							<p:column headerText="Length" style="text-align:left;">
								<h:outputText style="text-align:left;width:80%"
									value="#{showDetails2.length}" />
							</p:column>
							<p:column headerText="Subsidy Rs." style="text-align:right;">
								<h:outputText style="text-align:right;width:80%"
									value="#{showDetails2.subsidyFee}">
									<f:convertNumber pattern="##,###.00" />
								</h:outputText>
							</p:column>
							<p:column headerText="Late Fee Rs." style="text-align:right;">
								<h:outputText style="text-align:right;width:80%"
									value="#{showDetails2.lateFee}">
									<f:convertNumber pattern="##,###.00" />
								</h:outputText>
							</p:column>
							<p:column headerText="Penalty Rs." style="text-align:right;">
								<h:outputText style="text-align:right;width:80%"
									value="#{showDetails2.penaltyFee}">
									<f:convertNumber pattern="##,###.00" />
								</h:outputText>
							</p:column>
							<p:column headerText="Final Payment Rs."
								style="text-align:right;">
								<h:outputText style="text-align:right;width:80%"
									value="#{showDetails2.paidAmmount}">
									<f:convertNumber pattern="##,###.00" />
								</h:outputText>
							</p:column>
							<p:column headerText="Final Pending Payment Rs."
								style="text-align:right;">
								<h:outputText style="text-align:right;width:80%"
									value="#{showDetails2.pendingFinalAmount}">
									<f:convertNumber pattern="##,###.00" />
								</h:outputText>
							</p:column>

						</p:dataTable>



					</p:panel>



				</div>
			</div>

		</h:form>



		<p:dialog styleClass="" id="errorMSG" global="true" modal="true"
			header="Error" width="30%" severity="info" widgetVar="errorMessage"
			closeOnEscape="true" resizable="false">

			<h:form id="frmError">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="error-24.png"></p:graphicImage>

						<p:outputLabel value="#{subSidyPaymentUpdateBean.errorMessage}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						value="OK" process="frmError" onclick="PF('errorMessage').hide()">
					</p:commandButton>
				</center>
			</h:form>
		</p:dialog>

		<p:dialog styleClass="" id="successMSG" global="true" modal="true"
			header="Info" width="30%" severity="info" widgetVar="successMessage"
			closeOnEscape="true" resizable="false">

			<h:form id="frmsuccess">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="success-24.png"></p:graphicImage>

						<p:outputLabel value="#{subSidyPaymentUpdateBean.successMessage}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						value="OK" process="frmsuccess"
						onclick="PF('successMessage').hide()">
					</p:commandButton>
				</center>
			</h:form>
		</p:dialog>

		<p:dialog styleClass="" id="alertMessage" global="true" modal="true"
			header="Alert" width="30%" severity="info" widgetVar="alertMSG"
			closeOnEscape="true" resizable="false">

			<h:form id="frmAlert">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="warning.png"></p:graphicImage>

						<p:outputLabel value="#{subSidyPaymentUpdateBean.alertMSG}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						value="OK" process="frmAlert" onclick="PF('alertMSG').hide()">
					</p:commandButton>
				</center>
			</h:form>
		</p:dialog>

		<p:dialog styleClass="" id="confirmMSG" global="true" modal="true"
			header="Confirmation" width="30%" severity="info"
			widgetVar="confirmMSG" closeOnEscape="true" resizable="false">

			<h:form id="frmcomfirm">

				<p:panelGrid columns="1">

					<br />
					<p:outputLabel value="Please enter the payment reference no."></p:outputLabel>
				</p:panelGrid>
				<br />
				<center>
					<p:panelGrid columns="1">
						<p:inputText id="paymentrefno" style="width:100%"
							value="#{subSidyPaymentUpdateBean.subSidyDTO.enteredPaymentRefNo}"></p:inputText>

					</p:panelGrid>

					<br />
					<p:commandButton style="margin-top:5px;margin-bottom:10px"
						styleClass="mainActionbtn" value="Update" process="frmcomfirm"
						update="frmsuccess,frmError,frmcomfirm,form"
						action="#{subSidyPaymentUpdateBean.updatePayment}">
					</p:commandButton>

					<p:commandButton
						style="margin-top:10px;margin-bottom:5px;margin-left:10px"
						styleClass="mainActionbtn" value="Cancel" process="frmcomfirm"
						onclick="PF('confirmMSG').hide()">
					</p:commandButton>
				</center>
			</h:form>
		</p:dialog>

	</ui:define>
</ui:composition>