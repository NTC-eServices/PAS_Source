<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui">

	<style>
.common_lable_h2N {
	color: white !important;
	font-weight: bold !important;
}
</style>
	<h:form id="frmCommonDialogs">



		<p:dialog id="saveSuccess" header="Success" global="true"
			resizable="false" showEffect="fade" appendTo="@(body)" width="400"
			severity="info" widgetVar="saveSuccess" closeOnEscape="true">
			<center>
				<p:panelGrid columns="2">
					<p:graphicImage library="images" name="success-24.png"></p:graphicImage>
					<p:outputLabel value="Successfully saved"></p:outputLabel>

				</p:panelGrid>
				<p:commandButton value="OK" style="margin-top:20px"
					onclick="PF('saveSuccess').hide()" />

			</center>
		</p:dialog>


		<p:dialog id="duplicateCode" header="Error" global="true"
			resizable="false" showEffect="fade" appendTo="@(body)" width="400"
			severity="info" widgetVar="duplicateCode" closeOnEscape="true">
			<center>
				<p:panelGrid columns="2">
					<p:graphicImage library="images" name="error-24.png"></p:graphicImage>
					<p:outputLabel value="Duplicate record"></p:outputLabel>

				</p:panelGrid>
				<p:commandButton value="OK" style="margin-top:20px"
					onclick="PF('duplicateCode').hide()" />

			</center>
		</p:dialog>


		<p:dialog id="allFieldsMandatory" header="Error" global="true"
			resizable="false" showEffect="fade" appendTo="@(body)" width="400"
			severity="info" widgetVar="allFieldsMandatory" closeOnEscape="true">
			<center>
				<p:panelGrid columns="2">
					<p:graphicImage library="images" name="error-24.png"></p:graphicImage>
					<p:outputLabel value="All fields are mandatory"></p:outputLabel>

				</p:panelGrid>
				<p:commandButton value="OK" style="margin-top:20px"
					onclick="PF('allFieldsMandatory').hide()" />

			</center>
		</p:dialog>



		<!-- Error Dialog -->
		<p:dialog id="dlgCommonError" widgetVar="dlgCommonError"
			dynamic="true" hideEffect="fade" modal="true" showEffect="fade"
			closeOnEscape="true" closable="true" resizable="false">
			<f:facet name="header">
				<h:outputText value="Error" styleClass="common_lable_h2N"
					rendered="#{sessionBackingBean.messageHeader == null}" />
				<h:outputText value="#{sessionBackingBean.messageHeader}"
					styleClass="common_lable_h2N"
					rendered="#{sessionBackingBean.messageHeader != null}" />
			</f:facet>
			<p:panelGrid columns="1">
				<h:panelGrid columns="3" styleClass="ui-noborder">
					<p:graphicImage library="images" name="error-24.png"></p:graphicImage>
					<p:spacer width="10"></p:spacer>
					<h:outputText value="#{sessionBackingBean.message}" />
				</h:panelGrid>

				<h:panelGroup style="display:block; text-align:center">
					<p:commandButton value="OK" onclick="PF('dlgCommonError').hide()"
						style="margin:0 auto !important;"
						action="#{sessionBackingBean.updateDialogAction}" />
				</h:panelGroup>
			</p:panelGrid>
		</p:dialog>

		<!-- Warning Dialog -->
		<p:dialog id="dlgCommonWarning" widgetVar="dlgCommonWarning"
			dynamic="true" hideEffect="fade" modal="true" showEffect="fade"
			closeOnEscape="true" closable="true" resizable="false">
			<f:facet name="header">
				<h:outputText value="Warning" styleClass=""
					rendered="#{sessionBackingBean.messageHeader == null}" />
				<h:outputText value="#{sessionBackingBean.messageHeader}"
					styleClass="common_lable_h2N"
					rendered="#{sessionBackingBean.messageHeader != null}" />
			</f:facet>
			<p:panelGrid columns="1">
				<h:panelGrid columns="3" styleClass="ui-noborder">
					<h:graphicImage library="images" name="warning_24.png"></h:graphicImage>
					<p:spacer width="10"></p:spacer>
					<h:outputText value="#{sessionBackingBean.message}" />
				</h:panelGrid>

				<h:panelGroup style="display:block; text-align:center">
					<p:commandButton value="OK" onclick="PF('dlgCommonWarning').hide()"
						style="margin:0 auto !important;"
						action="#{sessionBackingBean.updateDialogAction}" />
				</h:panelGroup>
			</p:panelGrid>
		</p:dialog>

		<!-- Info Dialog -->
		<p:dialog id="dlgCommonInfo" widgetVar="dlgCommonInfo" dynamic="true"
			hideEffect="fade" modal="true" showEffect="fade" closeOnEscape="true"
			closable="true" resizable="false">
			<f:facet name="header">
				<h:outputText value="Confirmation" styleClass=""
					rendered="#{sessionBackingBean.messageHeader == null}" />
				<h:outputText value="#{sessionBackingBean.messageHeader}"
					rendered="#{sessionBackingBean.messageHeader != null}" />
			</f:facet>
			<p:panelGrid columns="1">
				<h:panelGrid columns="3" styleClass="ui-noborder">
					<h:graphicImage library="images" name="success-24.png"></h:graphicImage>
					<p:spacer width="10"></p:spacer>
					<h:outputText value="#{sessionBackingBean.message}"
						styleClass="common_lable_h3" />
				</h:panelGrid>

				<h:panelGroup style="display:block; text-align:center">
					<p:commandButton value="OK" onclick="PF('dlgCommonInfo').hide()"
						style="margin:0 auto !important;"
						action="#{sessionBackingBean.updateDialogAction}" />
				</h:panelGroup>
			</p:panelGrid>
		</p:dialog>

		<!-- Common delete -->
		<p:dialog widgetVar="dlgCommonConfirm" resizable="false" modal="true">
			<f:facet name="header">
				<h:outputText value="Warning" styleClass=""
					rendered="#{sessionBackingBean.messageHeader == null}" />
				<h:outputText value="#{sessionBackingBean.messageHeader}"
					styleClass="common_lable_h2N"
					rendered="#{sessionBackingBean.messageHeader != null}" />
			</f:facet>
			<p:panelGrid columns="1">
				<h:panelGrid columns="3"
					columnClasses="msg-box-icon-col msg-box-msg-col">
					<p:graphicImage library="images" name="warning.png"></p:graphicImage>
					<p:spacer width="10"></p:spacer>

					<h:outputText value="Do you want to delete this record?"
						rendered="#{sessionBackingBean.message == null}" />
					<h:outputText value="#{sessionBackingBean.message}"
						rendered="#{sessionBackingBean.message != null}" />
				</h:panelGrid>

				<h:panelGroup style="display:block; text-align:center">
					<p:commandButton
						value="#{msg['reference.page.delete.conf.button.yes']}"
						action="#{bean[method]}" style="width:80px"
						onclick="PF('refDelete').hide() " update="@form"
						actionListener="#{sessionBackingBean.updateDialogAction}" />
					<p:commandButton
						value="#{msg['reference.page.delete.conf.button.no']}"
						style="width:80px;" onclick="PF('refDelete').hide();"
						action="#{sessionBackingBean.updateDialogAction}" />
				</h:panelGroup>
			</p:panelGrid>
		</p:dialog>

		<!-- Success dialog -->
		<p:dialog id="dlgCommonSuccess" widgetVar="dlgCommonSuccess"
			dynamic="true" hideEffect="fade" modal="true" showEffect="fade"
			closeOnEscape="true" closable="true" resizable="false">
			<f:facet name="header">
				<h:outputText value="Success" styleClass=""
					rendered="#{sessionBackingBean.messageHeader == null}" />
				<h:outputText value="#{sessionBackingBean.messageHeader}"
					rendered="#{sessionBackingBean.messageHeader != null}" />
			</f:facet>
			<p:panelGrid columns="1">
				<h:panelGrid columns="3" styleClass="ui-noborder">
					<h:graphicImage library="images" name="success-24.png"></h:graphicImage>
					<p:spacer width="10"></p:spacer>
					<h:outputText value="#{sessionBackingBean.message}"
						styleClass="common_lable_h3" />
				</h:panelGrid>

				<h:panelGroup style="display:block; text-align:center">
					<p:commandButton value="OK" onclick="PF('dlgCommonInfo').hide()"
						style="margin:0 auto !important;"
						action="#{sessionBackingBean.updateDialogAction}" />
				</h:panelGroup>
			</p:panelGrid>
		</p:dialog>

	</h:form>
</ui:composition>