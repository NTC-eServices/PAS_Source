		<h:form id="form">
			<div class="mainDiv">
				<h1
					style="margin-top: 0%; text-align: center; color: #ffffff; background-color: #404d6f !important;"
					class="common_form_header">Payment Voucher Approval</h1>
				<div style="width: 95%;" class="subDiv">


					<p:panel id="panelOne">

						<p:panelGrid columns="6"
							columnClasses="ui-grid-col-2,ui-grid-col-3,ui-grid-col-2,ui-grid-col-3,ui-grid-col-1,ui-grid-col-2"
							layout="grid">


							<p:panelGrid>
								<p:outputLabel value="Transaction Type"></p:outputLabel>
								<p:outputLabel value="*" style="color:red;"></p:outputLabel>
							</p:panelGrid>

							<p:panelGrid>
								<p:selectOneMenu id="transactionType" style="width:85%"
									value="#{paymentVoucherApprove.paymentVoucherDTO.transactionCode}"
									filter="true" filterMatchMode="contains" tabindex="1">

									<f:selectItem itemLabel="--Select Transaction Type--"
										itemValue="" noSelectionOption="true" />
									<f:selectItems
										value="#{paymentVoucherApprove.transactionTypeList}" var="t"
										itemLabel="#{t.transactionDescription}"
										itemValue="#{t.transactionCode}" />
								</p:selectOneMenu>
							</p:panelGrid>

							<p:panelGrid>
								<p:outputLabel value="Permit No."></p:outputLabel>
							</p:panelGrid>

							<p:panelGrid>
								<p:inputText id="permitNo"
									value="#{paymentVoucherApprove.paymentVoucherDTO.permitNo}"
									onkeyup="this.value=this.value.toUpperCase();"
									style="width:83%" maxlength="12"
									placeholder="-- Enter Permit No.--">
									
								</p:inputText>
							</p:panelGrid>

							<p:panelGrid>
								<p:outputLabel value="Date"></p:outputLabel>
							</p:panelGrid>

							<p:panelGrid>

								<p:inputText value="#{paymentVoucherApprove.date1}"
									style="width:90%" disabled="true" />

							</p:panelGrid>

							<!-- 			********************************************************************************************* -->

							<p:panelGrid>
								<p:outputLabel value="Department"></p:outputLabel>

							</p:panelGrid>
							<p:panelGrid>
								<p:selectOneMenu id="department" style="width:85%"
									value="#{paymentVoucherApprove.paymentVoucherDTO.departmentCode}"
									filter="true" filterMatchMode="contains" tabindex="1">

									<f:selectItem itemLabel="--Select Department--" itemValue=""
										noSelectionOption="true" />
									<f:selectItems value="#{paymentVoucherApprove.departmentList}"
										var="d" itemLabel="#{d.deaprtmentDiscription}"
										itemValue="#{d.departmentCode}" />
								</p:selectOneMenu>
							</p:panelGrid>

							<p:panelGrid>
								<p:outputLabel value="Voucher No."></p:outputLabel>
							</p:panelGrid>

							<p:panelGrid>
								<p:selectOneMenu id="voucherNo" style="width:85%"
									value="#{paymentVoucherApprove.paymentVoucherDTO.voucherNo}"
									filter="true" filterMatchMode="contains" tabindex="1">

									<f:selectItem itemLabel="--Select Voucher No.--" itemValue=""
										noSelectionOption="true" />
									<f:selectItems value="#{paymentVoucherApprove.voucherNoList}" />
								</p:selectOneMenu>
							</p:panelGrid>

							<p:panelGrid>
								<p:outputLabel value="Unit"></p:outputLabel>
							</p:panelGrid>

							<p:panelGrid>
								<p:selectOneMenu id="unit" style="width:90%"
									value="#{paymentVoucherApprove.paymentVoucherDTO.unitCode}"
									filter="true" filterMatchMode="contains" tabindex="1">

									<f:selectItem itemLabel="--Select Unit--" itemValue=""
										noSelectionOption="true" />
									<f:selectItems value="#{paymentVoucherApprove.unitList}"
										itemLabel="#{u.unitDiscription}" itemValue="#{u.unitCode}"
										var="u" />
								</p:selectOneMenu>
							</p:panelGrid>

							<!-- 			********************************************************************************************* -->
							<p:panelGrid>
								<p:outputLabel value="Receipt No."></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:selectOneMenu id="receiptNo" style="width:85%"
									value="#{paymentVoucherApprove.paymentVoucherDTO.receiptNo}"
									filter="true" filterMatchMode="contains" tabindex="1">

									<f:selectItem itemLabel="--Select Receipt No.--" itemValue=""
										noSelectionOption="true" />
									<f:selectItems value="#{paymentVoucherApprove.receiptNoList}"
										var="r" itemLabel="#{r.receiptNo}" itemValue="#{r.receiptNo}" />
								</p:selectOneMenu>
							</p:panelGrid>

							<p:panelGrid>
								<p:outputLabel value="Application No."></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:selectOneMenu id="applicationNo" style="width:85%"
									value="#{paymentVoucherApprove.paymentVoucherDTO.applicationNo}"
									filter="true" filterMatchMode="contains" tabindex="1">

									<f:selectItem itemLabel="--Select Reference No.--" itemValue=""
										noSelectionOption="true" />
									<f:selectItems value="#{paymentVoucherApprove.applicationNo}"
										var="a" itemLabel="#{a.applicationNo}"
										itemValue="#{a.applicationNo}" />
								</p:selectOneMenu>
							</p:panelGrid>

							<p:panelGrid></p:panelGrid>
							<p:panelGrid></p:panelGrid>

							<!-- 			********************************************************************************************* -->
						</p:panelGrid>
						<br />
						<center>


							<p:commandButton value="Search" styleClass="mainActionbtn"
								id="cmdBtnSearch" action="#{paymentVoucherApprove.search}"
								process="@form"
								update="frmError,dataTable,panelOne,panelTwo,panelThree,frmAlert" />
							<p:commandButton value="Clear" styleClass="mainActionbtn"
								action="#{paymentVoucherApprove.clearOne}" update="panelOne" />

						</center>
					</p:panel>


					<br />

					<p:panel id="panelTwo">

						<p:dataTable id="dataTable" var="p" rows="5" paginator="true"
							value="#{paymentVoucherApprove.paymentList}"
							selection="#{paymentVoucherApprove.selectDTO}"
							rowKey="#{p.voucherNo}" selectionMode="single"
							paginatorTemplate="{CurrentPageReport} {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
							rowsPerPageTemplate="10,20" resizableColumns="false"
							liveResize="true" tableStyle="width:100%;font-size:12px;"
							rowIndexVar="index" styleClass="myTable"
							emptyMessage="No Records Available." widgetVar="hello">

							<p:ajax event="rowSelect"
								listener="#{paymentVoucherApprove.selectRow}" process="@form"
								update="@form" />




							<p:column visible="false">

								<h:outputText value="#{p.permitNo}" />
							</p:column>

							<p:column visible="false">

								<h:outputText value="#{p.busRegNo}" />
							</p:column>

							<p:column headerText="Voucher No. / Advance Payment No."
								sortBy="#{p.voucherNo}" style="width:16%;text-align:center;">
								<h:outputText value="#{p.voucherNo}" />
							</p:column>

							<p:column headerText="Transaction Type">
								<h:outputText value="#{p.transactionDescription}" />
							</p:column>

							<p:column headerText="Department" style="width:15%">
								<h:outputText value="#{p.deaprtmentDiscription}" />
							</p:column>


							<p:column headerText="Application No." width="9%">
								<h:outputText value="#{p.applicationNo}" />
							</p:column>

							<p:column headerText="Receipt No." width="9%">
								<h:outputText value="#{p.receiptNo}" />
							</p:column>

							<p:column headerText="Status">
								<h:outputText value="#{p.approveStatus}" />
							</p:column>

							<p:column headerText="Date" style="width:10%">
								<h:outputText value="#{p.paymentDate}" />
							</p:column>

							<p:column headerText="Total Amount" style="text-align:right;">
								<h:outputText value="#{p.totalAmount}">
									<f:convertNumber pattern="##,###.00" />
								</h:outputText>
							</p:column>
							<p:column width="5%">


								<p:commandLink action="#{paymentVoucherApprove.editAction()}"
									update="voucherForm,advanceForm,@form">

									<f:setPropertyActionListener value="#{p}"
										target="#{paymentVoucherApprove.viewSelect}" />

									<p:graphicImage library="images" name="view1.png"
										style="width:24px;height:24px;" title="view"></p:graphicImage>
								</p:commandLink>
							</p:column>

						</p:dataTable>
					</p:panel>

					<br />

					<p:panel>

						<p:outputLabel style="margin-left:10%" value="Reject Reason"></p:outputLabel>
						<p:inputTextarea style="width:50%; margin-left:5%; height:30px"
							value="#{paymentVoucherApprove.rejectReason}" id="reject"
							rows="5" cols="30" maxlength="100" autoResize="false">
					
						</p:inputTextarea>
						<p:outputLabel id="display" style="margin-left:24%" />
					</p:panel>

					<p:panel id="panelThree">

						<center>

							<p:commandButton value="Approve" styleClass="mainActionbtn"
								id="btnApprove" action="#{paymentVoucherApprove.approvePayment}"
								disabled="#{paymentVoucherApprove.disableApprove}"
								update="frmsuccess,frmError,dataTable,reject" />

							<p:commandButton value="Reject" styleClass="mainActionbtn"
								id="btnReject" action="#{paymentVoucherApprove.reject}"
								disabled="#{paymentVoucherApprove.disableReject}"
								update="frmsuccess,frmError,dataTable,reject" />

							<p:commandButton value="Clear" styleClass="mainActionbtn"
								disabled="#{paymentVoucherApprove.disableClear}"
								action="#{paymentVoucherApprove.clearTwo}"
								update="panelThree,panelTwo,panelOne,reject" />

						</center>

					</p:panel>
				</div>
			</div>
		</h:form>


		<p:dialog header="Voucher Payment" widgetVar="voucherPayment"
			modal="true" height="50%" width="80%">
			<h:form id="voucherForm">
				<br />

				<p:panel>
					<p:panelGrid columns="4"
						columnClasses="ui-grid-col-2,ui-grid-col-4,ui-grid-col-2,ui-grid-col-4,"
						layout="grid">


						<p:panelGrid>
							<p:outputLabel value="Transaction Type"></p:outputLabel>
						</p:panelGrid>

						<p:panelGrid>
							<p:inputText
								value="#{paymentVoucherApprove.viewSelect.transactionDescription}"
								style="width:66%" id="transactionTypevoucherPayment"
								readonly="true" />
						</p:panelGrid>


						<p:panelGrid>
							<p:outputLabel value="Permit No."></p:outputLabel>
						</p:panelGrid>

						<p:inputText value="#{paymentVoucherApprove.viewSelect.permitNo}"
							readonly="true" style="width:66%" id="permitNovoucherPayment" />


						<p:panelGrid>
							<p:outputLabel value="Date"></p:outputLabel>
						</p:panelGrid>

						<p:panelGrid>
							<p:inputText
								value="#{paymentVoucherApprove.viewSelect.paymentDate}"
								style="width:66%" readonly="true" id="datevoucherPayment" />

						</p:panelGrid>


						<p:panelGrid>
							<p:outputLabel value="Department"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:inputText
								value="#{paymentVoucherApprove.viewSelect.deaprtmentDiscription}"
								readonly="true" style="width:66%" id="departmentvoucherPayment" />
						</p:panelGrid>
					</p:panelGrid>
				</p:panel>

				<center>
					<p:panel>
						<br />

						<p:dataTable var="v"
							value="#{paymentVoucherApprove.voucherPaymentList}"
							id="voucherPaymentDataTable"
							tableStyle="text-align:left; width:100%" paginator="true"
							rows="5" rowsPerPageTemplate="10,20" resizableColumns="false"
							liveResize="true" rowIndexVar="index" styleClass="myTable"
							emptyMessage="No Records Available.">

							<p:column headerText="Charge Type">
								<h:outputText value="#{v.chargeDescription}" />
							</p:column>
							<p:column headerText="Account No.">
								<h:outputText value="#{v.accountNO}" />
							</p:column>
							<p:column headerText="Amount Rs." style="text-align:right">
								<h:outputText value="#{v.amount}">
									<f:convertNumber pattern="##,###.00" />
								</h:outputText>
							</p:column>


							<p:columnGroup type="footer">
								<p:row>
									<p:column colspan="2" style="text-align:right"
										footerText="Total Fee Rs." />

									<p:column style="text-align:right">
										<f:facet name="footer">
											<h:outputText value="#{paymentVoucherApprove.totalfee}">
												<f:convertNumber pattern="##,###.00" />
											</h:outputText>
										</f:facet>
									</p:column>

								</p:row>
							</p:columnGroup>

						</p:dataTable>

					</p:panel>
				</center>

				<center>
					<p:panel>

						<p:outputLabel value="Special Remaks"></p:outputLabel>
						<p:inputText style="width:30%; margin-left:5%"
							value="#{paymentVoucherApprove.advanceSpecialRemark}"></p:inputText>
					</p:panel>
				</center>

				<center>

					<p:panel rendered="false">
						<p:commandButton value="Save" id="advanceSaveBtn"
							update="frmsuccess,frmError,advanceSaveBtn"
							disabled="#{paymentVoucherApprove.disableSave1}"
							action="#{paymentVoucherApprove.saveSpecialRemark}"
							styleClass="mainActionbtn"></p:commandButton>
					</p:panel>

				</center>
			</h:form>
		</p:dialog>




		<p:dialog header="Advanced Payment" widgetVar="advancedPayment"
			modal="true" height="50%" width="80%">
			<h:form id="advanceForm">
				<br />

				<p:panel>
					<p:panelGrid columns="4"
						columnClasses="ui-grid-col-2,ui-grid-col-4,ui-grid-col-2,ui-grid-col-4,"
						layout="grid">


						<p:panelGrid>
							<p:outputLabel value="Transaction Type"></p:outputLabel>
						</p:panelGrid>

						<p:panelGrid>
							<p:inputText
								value="#{paymentVoucherApprove.viewSelect.transactionDescription}"
								style="width:66%" id="transactionType" readonly="true" />
						</p:panelGrid>


						<p:panelGrid>
							<p:outputLabel value="Permit No."></p:outputLabel>
						</p:panelGrid>

						<p:inputText value="#{paymentVoucherApprove.viewSelect.permitNo}"
							readonly="true" style="width:66%" id="permitNo" />


						<p:panelGrid>
							<p:outputLabel value="Date"></p:outputLabel>
						</p:panelGrid>

						<p:panelGrid>
							<p:inputText
								value="#{paymentVoucherApprove.viewSelect.paymentDate}"
								style="width:66%" readonly="true" id="date" />

						</p:panelGrid>


						<p:panelGrid>
							<p:outputLabel value="Department"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:inputText
								value="#{paymentVoucherApprove.viewSelect.deaprtmentDiscription}"
								readonly="true" style="width:66%" id="department" />
						</p:panelGrid>
					</p:panelGrid>
				</p:panel>

				<center>
					<p:panel>
						<br />

						<p:dataTable var="a"
							value="#{paymentVoucherApprove.advancePaymentList}"
							id="advanceDataTable" tableStyle="text-align:left; width:100%"
							paginator="true" rows="5" rowsPerPageTemplate="10,20"
							resizableColumns="false" liveResize="true" rowIndexVar="index"
							styleClass="myTable" emptyMessage="No data are available">

							<p:column headerText="Date" style="text-align:left">
								<h:outputText value="#{a.paymentDate}" />
							</p:column>
							<p:column headerText="Details of services or items provides"
								style="text-align:left">
								<h:outputText value="#{a.detailsofservice}" />
							</p:column>
							<p:column headerText="No. of unit/Rate" style="text-align:left;">
								<h:outputText value="#{a.noOfUnits}" />
							</p:column>

							<p:column headerText="Amount Rs." style="text-align:right">
								<h:outputText value="#{a.amount}">
									<f:convertNumber pattern="##,###.00" />
								</h:outputText>
							</p:column>


							<p:columnGroup type="footer">
								<p:row>
									<p:column colspan="3" style="text-align:right"
										footerText="Total Fee Rs." />

									<p:column style="text-align:right">
										<f:facet name="footer">
											<h:outputText value="#{paymentVoucherApprove.totalfee}">
												<f:convertNumber pattern="##,###.00" />
											</h:outputText>
										</f:facet>
									</p:column>

								</p:row>
							</p:columnGroup>

						</p:dataTable>
					</p:panel>
				</center>

				<center>
					<p:panel>

						<p:outputLabel value="Special Remaks"></p:outputLabel>
						<p:inputText style="width:30%; margin-left:5%"
							value="#{paymentVoucherApprove.advanceSpecialRemark}"></p:inputText>
					</p:panel>
				</center>

				<center>

					<p:panel rendered="false">
						<p:commandButton value="Save" id="advanceSaveBtn"
							disabled="#{paymentVoucherApprove.disableSave2}"
							action="#{paymentVoucherApprove.saveSpecialRemark}"
							update="frmsuccess,frmError,advanceSaveBtn"
							styleClass="mainActionbtn"></p:commandButton>
					</p:panel>

				</center>
			</h:form>
		</p:dialog>

		<p:dialog styleClass="" id="errorMSG" global="true" modal="true"
			header="Error" width="30%" severity="info" widgetVar="errorMessage"
			closeOnEscape="true" resizable="false">

			<h:form id="frmError">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="error-24.png"></p:graphicImage>

						<p:outputLabel value="#{paymentVoucherApprove.errorMessage}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
