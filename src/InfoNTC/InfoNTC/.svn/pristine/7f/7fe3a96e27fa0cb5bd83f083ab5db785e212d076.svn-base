<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:p="http://primefaces.org/ui"
	xmlns:f="http://java.sun.com/jsf/core"
	template="/WEB-INF/template/template.xhtml">
	<ui:define name="metadata">
	</ui:define>

	<ui:define name="content">

		<style>
.ui-dialog .ui-dialog-titlebar {
	padding: .4em .4em .4em 1em; 6
	position: relative;
	background: #07295b !important;
	padding: 5px 5px 5px 5px;
	margin: 0px 0px 0px 0px;
	color: #ffffff;
}

.ui-panelgrid .ui-panelgrid-cell {
	background-color: #f1f1f1;
}

.ui-icon.ui-confirm-dialog-severity {
	background-position: 0 0 !important;
	background-image: none !important;
}

.colorHighlight {
	background: yellow !important;
}

.ui-dialog .ui-widget .ui-widget-content .ui-corner-all .ui-shadow .ui-hidden-container .ui-draggable
	{
	width: 50%;
}

.firstColumn {
	width: 100%;
}

.secondColumn {
	width: 100%;
}

.dashboardNRResendDocRecord {
	background-color: #16e5d7 !important;
}

.ui-state-default a, .ui-state-default a:link, .ui-state-default a:visited
	{
	color: #07295b;
}

.mainDiv {
	width: 99%;
	height: auto;
	border-left: solid;
	border-right: solid;
	border-bottom: solid;
	border-top: solid;
	border-color: #07295b;
	border-width: 1px;
	margin-left: 5px;
	margin-top: 5px;
	margin-bottom: 5px;
	/*background-image: linear-gradient(to right bottom, #d9ddfa, #ccd4fb, #bdcafc, #aec2fe,
		#9cb9ff);*/
	background-image: linear-gradient(to right bottom, #f1f1f1, #dfdfe4, #f1f1f1, #e9eaeb,
		#bbb5b5);
}

.ui-inputfield, .ui-widget-content .ui-inputfield, .ui-widget-header .ui-inputfield
	{
	color: #07295b;
}

.mainLinkButton {
	font-weight: bold;
	background: #2571fa !important;
	text-align: center;
	padding: 7px 25px 7px 25px !important;
	height: 35px !important;
	text-decoration: none !important;
	color: white !important;
	white-space: nowrap !important;
	border-radius: 5px !important;
}

.mainLinkButton:hover {
	background: #fba026 !important;
}

.otherLinkButton {
	font-weight: bold;
	background: #296807 !important;
	text-align: center;
	padding: 7px 25px 7px 25px !important;
	height: 35px !important;
	text-decoration: none !important;
	color: white !important;
	white-space: nowrap !important;
	border-radius: 5px !important;
}

.otherLinkButton:hover {
	background: #fba026 !important;
}

.mainActionbtn {
	font-weight: bold;
	background: #2571fa !important;
	height: 30px !important;
	border-radius: 5px !important;
	color: white !important;
	text-align: center;
	width: 80px;
	white-space: nowrap !important;
	-webkit-transition: background-color 0.3s ease-out;
	-moz-transition: background-color 0.3s ease-out;
	-o-transition: background-color 0.3s ease-out;
	transition: background-color 0.3s ease-out;
}

.mainActionbtn:hover {
	background: #fba026 !important;
}

.OthActionbtn {
	font-weight: bold;
	background: #296807 !important;
	height: 30px !important;
	border-radius: 5px !important;
	color: white !important;
	text-align: center;
	width: 80px;
	white-space: nowrap !important;
	-webkit-transition: background-color 0.3s ease-out;
	-moz-transition: background-color 0.3s ease-out;
	-o-transition: background-color 0.3s ease-out;
	transition: background-color 0.3s ease-out;
	margin-bottom: 5px;
}

.OthActionbtn:hover {
	background: #fba026 !important;
}

.subDiv {
	margin: 0 auto;
	background: rgb(254, 255, 255); /* Old browsers */
	background: -moz-linear-gradient(-45deg, rgba(254, 255, 255, 1) 0%,
		rgba(210, 235, 249, 1) 100%); /* FF3.6-15 */
	background: -webkit-linear-gradient(-45deg, rgba(254, 255, 255, 1) 0%,
		rgba(210, 235, 249, 1) 100%); /* Chrome10-25,Safari5.1-6 */
	background: linear-gradient(135deg, rgba(254, 255, 255, 1) 0%,
		rgba(210, 235, 249, 1) 100%);
	/* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#feffff',
		endColorstr='#d2ebf9', GradientType=1);
	/* IE6-9 fallback on horizontal gradient */
}

.ui-input {
	margin-top: -20px;
}

.internalPanel .ui-panelgrid-cell {
	padding: 5px 0px;
}

.internalInput .ui-panelgrid-cell {
	padding: 0px;
}
</style>


		<h:form id="form">
			<div class="mainDiv">
				<h1
					style="margin-top: 0%; text-align: center; color: #ffffff; background-color: #404d6f !important;"
					class="common_form_header">Create Payment Voucher For
					Driver/Conductor Training</h1>
				<div style="width: 95%;" class="subDiv">


					<p:panel id="panelOne">

						<p:panelGrid columns="4" style="margin-left:115px"
							columnClasses="ui-grid-col-2,ui-grid-col-4,ui-grid-col-2,ui-grid-col-4"
							layout="grid">


							<p:panelGrid>
								<p:outputLabel value="Training Type"></p:outputLabel>
								<p:outputLabel value="*" style="color:red;"></p:outputLabel>

							</p:panelGrid>
							<p:panelGrid>

								<p:selectOneMenu id="trainingType" style="width:68%"
									disabled="#{driverConductorPaymentVoucherBckingBean.disabledFiled}"
									value="#{driverConductorPaymentVoucherBckingBean.driverConductorPaymentDTO.trainingTypeCode}"
									filter="true" filterMatchMode="contains" tabindex="1">

									<f:selectItem itemLabel="--Select Training Type--" itemValue=""
										noSelectionOption="true" />
									<f:selectItems
										value="#{driverConductorPaymentVoucherBckingBean.traniningTypeList}"
										itemValue="#{t.trainingTypeCode}" var="t"
										itemLabel="#{t.trainingTYpeDes}" />

									<p:ajax update="applicationNo"
										listener="#{driverConductorPaymentVoucherBckingBean.ajaxFillApplicationNo}" />


								</p:selectOneMenu>

							</p:panelGrid>




							<!-- 			********************************************************************************************* -->

							<p:panelGrid>
								<p:outputLabel value="Application No." style="text-align: left;"></p:outputLabel>
								<p:outputLabel value="*" style="color:red;"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:selectOneMenu id="applicationNo"
									value="#{driverConductorPaymentVoucherBckingBean.driverConductorPaymentDTO.appNo}"
									onkeyup="this.value=this.value.toUpperCase();" filter="true"
									filterMatchMode="contains" tabindex="1"
									disabled="#{driverConductorPaymentVoucherBckingBean.diableApplicationNo}">

									<p:ajax update="idNo"
										listener="#{driverConductorPaymentVoucherBckingBean.completeIdNoList}" />

									<f:selectItem itemLabel="--Select Application No.--"
										itemValue="" noSelectionOption="true" />
									<f:selectItems
										value="#{driverConductorPaymentVoucherBckingBean.applicationNoList}"
										itemValue="#{t.appNo}" var="t" itemLabel="#{t.appNo}" />
								</p:selectOneMenu>
							</p:panelGrid>

							<p:panelGrid>
								<p:outputLabel value="ID Number"></p:outputLabel>
								<p:outputLabel value="*" style="color:red;"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:selectOneMenu id="idNo" style="width:68%"
									value="#{driverConductorPaymentVoucherBckingBean.driverConductorPaymentDTO.nic}"
									onkeyup="this.value=this.value.toUpperCase();" filter="true"
									filterMatchMode="contains" tabindex="1"
									disabled="#{driverConductorPaymentVoucherBckingBean.idNoDropDownShow}">

									<p:ajax update="driverConducId"
										listener="#{driverConductorPaymentVoucherBckingBean.completeDriverConducIdNo}" />

									<f:selectItem itemLabel="--Select ID No.--" itemValue=""
										noSelectionOption="true" />
									<f:selectItems
										value="#{driverConductorPaymentVoucherBckingBean.idNoList}"
										itemValue="#{t.nic}" var="t" itemLabel="#{t.nic}" />

								</p:selectOneMenu>
							</p:panelGrid>

							<!-- 			********************************************************************************************* -->

							<p:panelGrid>
								<p:outputLabel value="Driver/Conductor ID"
									style="text-align: left;"></p:outputLabel>
							</p:panelGrid>

							<p:panelGrid>

								<p:inputText id="driverConducId"
									value="#{driverConductorPaymentVoucherBckingBean.driverConductorPaymentDTO.driverConductorId}"
									style="width:78%;" readonly="true" />
							</p:panelGrid>



							<p:panelGrid>
								<p:outputLabel value="Voucher No."></p:outputLabel>
							</p:panelGrid>

							<p:panelGrid>
								<p:inputText id="voucherNo"
									value="#{driverConductorPaymentVoucherBckingBean.value}"
									style="width:78%; color:red;font-weight: bold;" readonly="true" />
							</p:panelGrid>
						</p:panelGrid>

					</p:panel>
					<p:panel>
						<center>
							<p:commandButton value="Search" styleClass="mainActionbtn"
								id="cmdBtnSearch"
								action="#{driverConductorPaymentVoucherBckingBean.searchVoucher}"
								disabled="#{driverConductorPaymentVoucherBckingBean.disabledsearch}"
								process="@all"
								update="mainTable,frmError,frmsuccess,addbutton,clearButton,generateButton,panelTwo,rePrint, @form">
							</p:commandButton>



							<p:commandButton value="Clear" styleClass="mainActionbtn"
								action="#{driverConductorPaymentVoucherBckingBean.clearOne}"
								update="mainTable,panelOne,@form" />
						</center>
					</p:panel>

					<p:panel id="panelTwo">

						<p:panelGrid columns="4" style="margin-left:115px"
							columnClasses="ui-grid-col-2,ui-grid-col-4,ui-grid-col-2,ui-grid-col-4"
							layout="grid">

							<p:panelGrid>
								<p:outputLabel value="Charge Type"></p:outputLabel>
								<p:outputLabel value="*" style="color:red;"></p:outputLabel>
							</p:panelGrid>

							<p:panelGrid>

								<p:selectOneMenu id="chargeType" style="width:68%"
									disabled="#{driverConductorPaymentVoucherBckingBean.disableChargeType}"
									value="#{driverConductorPaymentVoucherBckingBean.driverConductorPaymentDTO.chargeTypeCode}"
									filter="true" filterMatchMode="contains" tabindex="1">
									<f:selectItem itemLabel="--Select Charge Type--" itemValue=""
										noSelectionOption="true" />
									<f:selectItems
										value="#{driverConductorPaymentVoucherBckingBean.chargeTypeList}"
										itemValue="#{t.chargeTypeCode}" var="t"
										itemLabel="#{t.chargeTypeDes}" />


									<p:ajax
										listener="#{driverConductorPaymentVoucherBckingBean.ajaxFilterAcountNo}"
										update="accountNo,amount,addbutton"></p:ajax>
								</p:selectOneMenu>

							</p:panelGrid>

							<p:panelGrid>
								<p:outputLabel value="Account No."></p:outputLabel>
								<p:outputLabel value="*" style="color:red;"></p:outputLabel>
							</p:panelGrid>

							<p:panelGrid>

								<p:inputText id="accountNo"
									onkeyup="this.value=this.value.toUpperCase();"
									style="width:66%;" maxlength="12"
									disabled="#{driverConductorPaymentVoucherBckingBean.disableAccountNo}"
									readonly="false"
									value="#{driverConductorPaymentVoucherBckingBean.driverConductorPaymentDTO.accountNO}">
								</p:inputText>

							</p:panelGrid>



							<p:panelGrid columns="2" style="padding:0px;margin:0px;"
								styleClass="internalPanel"
								columnClasses="ui-grid-col-11,ui-grid-col-1" layout="grid">

								<p:panelGrid styleClass="internalPanel">
									<p:outputLabel value="Amount"></p:outputLabel>
									<p:outputLabel value="*" style="color:red;text-align:left"></p:outputLabel>
								</p:panelGrid>

								<p:outputLabel value="Rs." styleClass="internalInput"
									style="text-align:right;margin: auto;padding-right:0px;"></p:outputLabel>

							</p:panelGrid>

							<p:panelGrid>

								<p:inputNumber id="amount"
									disabled="#{driverConductorPaymentVoucherBckingBean.disableAmount}"
									value="#{driverConductorPaymentVoucherBckingBean.driverConductorPaymentDTO.ammount}"
									minValue="0" style="width:66%" inputStyle="text-align: right"
									maxlength="12">



								</p:inputNumber>

							</p:panelGrid>

							<p:panelGrid></p:panelGrid>
							<p:panelGrid></p:panelGrid>

							<p:panelGrid>
								<p:outputLabel value="Skip Voucher" rendered="false"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:selectBooleanCheckbox rendered="false"
									value="#{driverConductorPaymentVoucherBckingBean.skipChargeTypes}"
									disabled="#{driverConductorPaymentVoucherBckingBean.disabledskipChargeTypes}">
									<p:ajax update="@form"
										listener="#{driverConductorPaymentVoucherBckingBean.ajaxSkipChargeTypes}" />
								</p:selectBooleanCheckbox>
							</p:panelGrid>

							<p:panelGrid></p:panelGrid>
							<p:panelGrid></p:panelGrid>

							<!--  ************************************************************************************************ -->

						</p:panelGrid>


					</p:panel>
					<p:panel>
						<center>


							<p:commandButton value="Add" styleClass="mainActionbtn"
								action="#{driverConductorPaymentVoucherBckingBean.addNewCharge}"
								disabled="#{driverConductorPaymentVoucherBckingBean.disableAdd}"
								id="addbutton" update="mainTable,frmError,panelTwo, @form"
								process="@all">

								<f:setPropertyActionListener value="#{true}"
									target="#{driverConductorPaymentVoucherBckingBean.disableAdd}" />

							</p:commandButton>


							<p:commandButton value="Clear" styleClass="mainActionbtn"
								id="clearButton"
								action="#{driverConductorPaymentVoucherBckingBean.clearTwo}"
								update="panelTwo, @form"
								disabled="#{driverConductorPaymentVoucherBckingBean.disableClearTwo}">

								<f:setPropertyActionListener value="#{true}"
									target="#{driverConductorPaymentVoucherBckingBean.disableClearTwo}" />

							</p:commandButton>

						</center>
					</p:panel>

					<p:panel>
						<center>
							<p:dataTable var="e"
								value="#{driverConductorPaymentVoucherBckingBean.chargeTypeDetails}"
								id="mainTable"
								tableStyle="text-align:left;width:100%;font-size:12px;"
								rowKey="e.chargeTypeDes" style="width:95%;">

								<p:column headerText="Charge Type" style="text-align:left">
									<h:outputText value="#{e.chargeTypeDes}"
										style="text-align:left;" />
								</p:column>


								<p:column headerText="Account No." style="text-align:left">
									<h:outputText value="#{e.accountNO}" style="text-align:left;" />
								</p:column>


								<p:column style="text-align:right">

									<f:facet name="header">
										<h:outputText value="Amount (Rs.)" style="text-align:right" />

									</f:facet>

									<h:outputText value="#{e.ammount}" style="text-align:right;">
										<f:convertNumber pattern="##,###.00" />
									</h:outputText>
								</p:column>




								<p:column width="9%">
									<center>
										<p:commandLink
											action="${driverConductorPaymentVoucherBckingBean.edit()}"
											disabled="${driverConductorPaymentVoucherBckingBean.disabledEdit}"
											update="@form,mainTable">

											<f:setPropertyActionListener value="#{e}"
												target="${driverConductorPaymentVoucherBckingBean.selectDTO}" />

											<p:graphicImage library="images" name="edit.png"
												style="width:24px;height:24px;" title="edit"></p:graphicImage>
										</p:commandLink>
									</center>

								</p:column>

								<p:column width="9%">
									<center>
										<p:commandLink
											action="${driverConductorPaymentVoucherBckingBean.delete(e.chargeTypeDes)}"
											disabled="${driverConductorPaymentVoucherBckingBean.disabledDelete}"
											update="mainTable">

											<f:ajax render="voucherDetails" />
											<p:graphicImage library="images" name="delete.png"
												style="width:24px;height:24px;" title="delete"></p:graphicImage>
										</p:commandLink>
									</center>

								</p:column>


								<p:columnGroup type="footer">
									<p:row>
										<p:column colspan="2" style="text-align:right"
											footerText="Total Fee (Rs.)" />


										<p:column style="text-align:right">
											<f:facet name="footer">
												<h:outputText
													value="#{driverConductorPaymentVoucherBckingBean.totalfee}">
													<f:convertNumber pattern="##,###.00" />
												</h:outputText>
											</f:facet>
										</p:column>
										<p:column footerText="" />
									</p:row>
								</p:columnGroup>

							</p:dataTable>
						</center>
					</p:panel>

					<br />

					<p:panel id="lastPanel">
						<center>

							<p:commandButton value="Re-Print" styleClass="mainActionbtn"
								ajax="false" id="rePrint"
								disabled="#{driverConductorPaymentVoucherBckingBean.disableRePrint}"
								actionListener="#{driverConductorPaymentVoucherBckingBean.rePrint}"
								update="@form"
								onclick="PrimeFaces.monitorDownload(start, stop);"
								oncomplete="PF('genReport').hide();">
								<f:attribute name="value"
									value="#{driverConductorPaymentVoucherBckingBean.value}"></f:attribute>
								<p:fileDownload
									value="#{driverConductorPaymentVoucherBckingBean.files}" />
							</p:commandButton>

							<p:commandButton value="Generate Voucher" id="generateButton"
								styleClass="mainActionbtn" style="width:180px"
								action="#{driverConductorPaymentVoucherBckingBean.generateVoucher()}"
								update="frmError,frmsuccess,rePrint,addbutton,generateButton,print,@form"
								disabled="#{driverConductorPaymentVoucherBckingBean.disableGenarate}" />



							<p:commandButton value="Print" id="print"
								styleClass="mainActionbtn" ajax="false"
								actionListener="#{driverConductorPaymentVoucherBckingBean.downloadFile}"
								onclick="PrimeFaces.monitorDownload(start, stop);"
								oncomplete="PF('genReport').hide();" update="@form"
								disabled="#{driverConductorPaymentVoucherBckingBean.disablePrint}">
								<f:attribute name="value"
									value="#{driverConductorPaymentVoucherBckingBean.value}"></f:attribute>
								<p:fileDownload
									value="#{driverConductorPaymentVoucherBckingBean.files}" />
							</p:commandButton>



							<p:commandButton value="Clear" styleClass="mainActionbtn"
								action="#{driverConductorPaymentVoucherBckingBean.clearThree}"
								update="mainTable,panelTwo,panelOne,rePrint, @form" />

						</center>

					</p:panel>


				</div>
			</div>



		</h:form>

		<p:dialog styleClass="" id="errorMSG" global="true" modal="true"
			header="Error" width="30%" severity="info" widgetVar="errorMessage"
			closeOnEscape="true" resizable="false">

			<h:form id="frmError">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="error-24.png"></p:graphicImage>

						<p:outputLabel
							value="#{driverConductorPaymentVoucherBckingBean.errorMessage}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						value="OK" process="frmError" onclick="PF('errorMessage').hide()">
					</p:commandButton>
				</center>
			</h:form>
		</p:dialog>


		<p:dialog styleClass="" id="successMSG" global="true" modal="true"
			header="Info" width="30%" severity="info" widgetVar="successMessage"
			closeOnEscape="true" resizable="false">

			<h:form id="frmsuccess">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="success-24.png"></p:graphicImage>

						<p:outputLabel
							value="#{driverConductorPaymentVoucherBckingBean.successMessage}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						value="OK" process="frmsuccess"
						onclick="PF('successMessage').hide()">
					</p:commandButton>
				</center>
			</h:form>
		</p:dialog>







	</ui:define>
</ui:composition>