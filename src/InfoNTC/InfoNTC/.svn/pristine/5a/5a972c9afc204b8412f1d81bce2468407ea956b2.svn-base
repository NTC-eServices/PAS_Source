		<h:form id="form">
			<div class="mainDiv">
				<h1
					style="margin-top: 0%; text-align: center; color: #ffffff; background-color: #404d6f !important;"
					class="common_form_header">Approval For Voucher</h1>
				<div style="width: 95%;" class="subDiv">


					<p:panel id="panelOne">

						<p:panelGrid columns="4"
							columnClasses="ui-grid-col-3,ui-grid-col-3,ui-grid-col-3,ui-grid-col-3"
							layout="grid">


							<p:panelGrid>
								<p:outputLabel value="Transaction Type"></p:outputLabel>
								<p:outputLabel value="*" style="color:red;"></p:outputLabel>
							</p:panelGrid>

							<p:panelGrid>
								<p:selectOneMenu id="transactionType" style="width:85%" value=""
									filter="true" filterMatchMode="contains" tabindex="1">

									<f:selectItem itemLabel="-- All --" itemValue=""
										noSelectionOption="true" />
									<f:selectItems
										value="#{sisuSeriyaPaymentApproval.transactionTypeList}"
										var="t" itemLabel="#{t.transactionDescription}"
										itemValue="#{t.transactionCode}" />
								</p:selectOneMenu>
							</p:panelGrid>

							<p:panelGrid>
								<p:outputLabel value="Permit No."></p:outputLabel>
							</p:panelGrid>

							<p:panelGrid>

								<p:selectOneMenu id="permitNo" style="width:85%" value=""
									filter="true" filterMatchMode="contains" tabindex="1">

									<f:selectItem itemLabel="-- All --" itemValue=""
										noSelectionOption="true" />
									<f:selectItems
										value="#{sisuSeriyaPaymentApproval.permitNoList}" var="t"
										itemLabel="#{t.transactionDescription}"
										itemValue="#{t.transactionCode}" />
								</p:selectOneMenu>

							</p:panelGrid>


							<p:panelGrid>
								<p:outputLabel value="Voucher No."></p:outputLabel>
								<p:outputLabel value="*" style="color:red;"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:selectOneMenu id="voucherNo" style="width:85%" value=""
									filter="true" filterMatchMode="contains" tabindex="1">

									<f:selectItem itemLabel="-- All --" itemValue=""
										noSelectionOption="true" />
									<f:selectItems value="#{sisuSeriyaPaymentApproval.voucherList}"
										var="d" itemLabel="#{d.deaprtmentDiscription}"
										itemValue="#{d.departmentCode}" />
								</p:selectOneMenu>
							</p:panelGrid>

							<p:panelGrid>
								<p:outputLabel value="Reference No."></p:outputLabel>
							</p:panelGrid>

							<p:panelGrid>
								<p:selectOneMenu id="referenceNo" style="width:85%" value=""
									filter="true" filterMatchMode="contains" tabindex="1">

									<f:selectItem itemLabel="-- All --" itemValue=""
										noSelectionOption="true" />
									<f:selectItems
										value="#{sisuSeriyaPaymentApproval.referenceNoList}" var="d"
										itemLabel="#{d.deaprtmentDiscription}"
										itemValue="#{d.departmentCode}" />
								</p:selectOneMenu>
							</p:panelGrid>

						</p:panelGrid>
						<br />
						<center>


							<p:commandButton value="Search" styleClass="mainActionbtn"
								id="cmdBtnSearch" action="#{sisuSeriyaPaymentApproval.search}"
								process="@form" update="frmError,frmAlert,@form" />
							<p:commandButton value="Clear" styleClass="mainActionbtn"
								action="#{sisuSeriyaPaymentApproval.clearOne}" update="@form" />

						</center>
					</p:panel>


					<br />

					<!--Data Table -->
					<p:panel id="panelTwo">
						<center>
							<p:dataTable id="dataTable" var="p" rows="5" paginator="true"
								value="#{permitRenewalApproval.permitRenewalList}"
								selection="#{permitRenewalApproval.selectDTO}"
								selectionMode="single" rowKey="#{p.applicationNo}"
								paginatorTemplate="{CurrentPageReport} {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
								rowsPerPageTemplate="10,20" resizableColumns="false"
								liveResize="true" tableStyle="width:auto" rowIndexVar="index"
								styleClass="myTable" emptyMessage="No data available">

								<p:ajax event="rowSelect"
									listener="#{sisuSeriyaPaymentApproval.selectRow}"
									process="@form" />


								<p:column headerText="Reference No.">
									<h:outputText value="" />
								</p:column>

								<p:column headerText="Permit No." width="15%">
									<h:outputText value="" />
								</p:column>

								<p:column headerText="Voucher No.">
									<h:outputText value="" />
								</p:column>

								<p:column headerText="Transaction Type">
									<h:outputText value="" />
								</p:column>

								<p:column headerText="Status" width="8%">
									<h:outputText value="" />
								</p:column>

								<p:column headerText="Total Amount" style="width:10%">
									<h:outputText value="" />
								</p:column>

							</p:dataTable>
						</center>
					</p:panel>

					<br />

					<p:panel>

						<p:outputLabel style="margin-left:10%" value="Reject Reason"></p:outputLabel>
						<p:inputTextarea style="width:50%; margin-left:5%; height:30px"
							value="#{sisuSeriyaPaymentApproval.rejectReason}" id="reject"
							rows="5" cols="30" counter="display" maxlength="100"
							counterTemplate="{0} characters remaining." autoResize="false">
						</p:inputTextarea>
						<p:outputLabel id="display" style="margin-left:24%" />
					</p:panel>

					<p:panel id="panelThree">

						<center>

							<p:commandButton value="Approve" styleClass="mainActionbtn"
								id="btnApprove" action="#{sisuSeriyaPaymentApproval.approve}"
								disabled="#{sisuSeriyaPaymentApproval.disabledApprove}"
								update="frmsuccess,frmError,reject, @form" />

							<p:commandButton value="Reject" styleClass="mainActionbtn"
								id="btnReject" action="#{sisuSeriyaPaymentApproval.reject}"
								disabled="#{sisuSeriyaPaymentApproval.disableReject}"
								update="frmsuccess,frmError,dataTable,reject" />

							<p:commandButton value="Clear" styleClass="mainActionbtn"
								disabled="#{sisuSeriyaPaymentApproval.disableClear}"
								action="#{sisuSeriyaPaymentApproval.clearTwo}"
								update="panelThree,panelTwo,panelOne,reject" />

						</center>

					</p:panel>
				</div>
			</div>
		</h:form>


		<p:dialog header="Voucher Payment" widgetVar="voucherPayment"
			modal="true" height="50%" width="80%">
			<h:form id="voucherForm">
				<br />

				<p:panel>
					<p:panelGrid columns="4"
						columnClasses="ui-grid-col-2,ui-grid-col-4,ui-grid-col-2,ui-grid-col-4,"
						layout="grid">


						<p:panelGrid>
							<p:outputLabel value="Transaction Type"></p:outputLabel>
						</p:panelGrid>

						<p:panelGrid>
							<p:inputText value="" style="width:66%"
								id="transactionTypevoucherPayment" readonly="true" />
						</p:panelGrid>

						<p:panelGrid>
							<p:outputLabel value="Reference No."></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:inputText value="" readonly="true" style="width:66%"
								id="referenceNovoucherPayment" />
						</p:panelGrid>


						<p:panelGrid>
							<p:outputLabel value="Voucher No."></p:outputLabel>
						</p:panelGrid>

						<p:panelGrid>
							<p:inputText value="" style="width:66%" readonly="true"
								id="voucherNovoucherPayment" />

						</p:panelGrid>


						<p:panelGrid>
							<p:outputLabel value="Permit No."></p:outputLabel>
						</p:panelGrid>

						<p:inputText value="" readonly="true" style="width:66%"
							id="permitNovoucherPayment" />

					</p:panelGrid>
				</p:panel>

				<center>
					<p:panel>
						<br />

						<p:dataTable var="v"
							value="#{paymentVoucherApprove.voucherPaymentList}"
							id="voucherPaymentDataTable"
							tableStyle="text-align:left; width:100%" paginator="true"
							rows="5" rowsPerPageTemplate="10,20" resizableColumns="false"
							liveResize="true" rowIndexVar="index" styleClass="myTable"
							emptyMessage="No Records Available.">

							<p:column headerText="Charge Type">
								<h:outputText value="#{v.chargeDescription}" />
							</p:column>
							<p:column headerText="Account No.">
								<h:outputText value="#{v.accountNO}" />
							</p:column>
							<p:column headerText="Amount Rs." style="text-align:right">
								<h:outputText value="#{v.amount}">
									<f:convertNumber pattern="##,###.00" />
								</h:outputText>
							</p:column>


							<p:columnGroup type="footer">
								<p:row>
									<p:column colspan="2" style="text-align:right"
										footerText="Total Fee Rs." />

									<p:column style="text-align:right">
										<f:facet name="footer">
											<h:outputText value="#{paymentVoucherApprove.totalfee}">
												<f:convertNumber pattern="##,###.00" />
											</h:outputText>
										</f:facet>
									</p:column>

								</p:row>
							</p:columnGroup>

						</p:dataTable>

					</p:panel>
				</center>

				<center>
					<p:panel>

						<p:outputLabel value="Special Remaks"></p:outputLabel>
						<p:inputText style="width:30%; margin-left:5%"
							value="#{paymentVoucherApprove.advanceSpecialRemark}"></p:inputText>
					</p:panel>
				</center>

				<center>

					<p:panel>
						<p:commandButton value="Save" id="advanceSaveBtn"
							update="frmsuccess,frmError,advanceSaveBtn"
							disabled="#{paymentVoucherApprove.disableSave1}"
							action="#{paymentVoucherApprove.saveSpecialRemark}"
							styleClass="mainActionbtn"></p:commandButton>
					</p:panel>

				</center>
			</h:form>
		</p:dialog>




		<p:dialog header="Advanced Payment" widgetVar="advancedPayment"
			modal="true" height="50%" width="80%">
			<h:form id="advanceForm">
				<br />

				<p:panel>
					<p:panelGrid columns="4"
						columnClasses="ui-grid-col-2,ui-grid-col-4,ui-grid-col-2,ui-grid-col-4,"
						layout="grid">


						<p:panelGrid>
							<p:outputLabel value="Transaction Type"></p:outputLabel>
						</p:panelGrid>

						<p:panelGrid>
							<p:inputText
								value="#{paymentVoucherApprove.viewSelect.transactionDescription}"
								style="width:66%" id="transactionType" readonly="true" />
						</p:panelGrid>


						<p:panelGrid>
							<p:outputLabel value="Permit No."></p:outputLabel>
						</p:panelGrid>

						<p:inputText value="#{paymentVoucherApprove.viewSelect.permitNo}"
							readonly="true" style="width:66%" id="permitNo" />


						<p:panelGrid>
							<p:outputLabel value="Date"></p:outputLabel>
						</p:panelGrid>

						<p:panelGrid>
							<p:inputText
								value="#{paymentVoucherApprove.viewSelect.paymentDate}"
								style="width:66%" readonly="true" id="date" />

						</p:panelGrid>


						<p:panelGrid>
							<p:outputLabel value="Department"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:inputText
								value="#{paymentVoucherApprove.viewSelect.deaprtmentDiscription}"
								readonly="true" style="width:66%" id="department" />
						</p:panelGrid>
					</p:panelGrid>
				</p:panel>

				<center>
					<p:panel>
						<br />

						<p:dataTable var="a"
							value="#{paymentVoucherApprove.advancePaymentList}"
							id="advanceDataTable" tableStyle="text-align:left; width:100%"
							paginator="true" rows="5" rowsPerPageTemplate="10,20"
							resizableColumns="false" liveResize="true" rowIndexVar="index"
							styleClass="myTable" emptyMessage="No data are available">

							<p:column headerText="Date" style="text-align:left">
								<h:outputText value="#{a.paymentDate}" />
							</p:column>
							<p:column headerText="Details of services or items provides"
								style="text-align:left">
								<h:outputText value="#{a.detailsofservice}" />
							</p:column>
							<p:column headerText="No. of unit/Rate" style="text-align:left;">
								<h:outputText value="#{a.noOfUnits}" />
							</p:column>

							<p:column headerText="Amount Rs." style="text-align:right">
								<h:outputText value="#{a.amount}">
									<f:convertNumber pattern="##,###.00" />
								</h:outputText>
							</p:column>


							<p:columnGroup type="footer">
								<p:row>
									<p:column colspan="3" style="text-align:right"
										footerText="Total Fee Rs." />

									<p:column style="text-align:right">
										<f:facet name="footer">
											<h:outputText value="#{paymentVoucherApprove.totalfee}">
												<f:convertNumber pattern="##,###.00" />
											</h:outputText>
										</f:facet>
									</p:column>

								</p:row>
							</p:columnGroup>

						</p:dataTable>
					</p:panel>
				</center>

				<center>
					<p:panel>

						<p:outputLabel value="Special Remaks"></p:outputLabel>
						<p:inputText style="width:30%; margin-left:5%"
							value="#{paymentVoucherApprove.advanceSpecialRemark}"></p:inputText>
					</p:panel>
				</center>

				<center>

					<p:panel>
						<p:commandButton value="Save" id="advanceSaveBtn"
							disabled="#{paymentVoucherApprove.disableSave2}"
							action="#{paymentVoucherApprove.saveSpecialRemark}"
							update="frmsuccess,frmError,advanceSaveBtn"
							styleClass="mainActionbtn"></p:commandButton>
					</p:panel>

				</center>
			</h:form>
		</p:dialog>

		<p:dialog styleClass="" id="errorMSG" global="true" modal="true"
			header="Error" width="30%" severity="info" widgetVar="errorMessage"
			closeOnEscape="true" resizable="false">

			<h:form id="frmError">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="error-24.png"></p:graphicImage>

						<p:outputLabel value="#{sisuSeriyaPaymentApproval.errorMessage}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						value="OK" process="frmError" onclick="PF('errorMessage').hide()">
					</p:commandButton>
				</center>
			</h:form>
		</p:dialog>

		<p:dialog styleClass="" id="successMSG" global="true" modal="true"
			header="Success" width="30%" severity="info"
			widgetVar="successMessage" closeOnEscape="true" resizable="false">

			<h:form id="frmsuccess">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="success-24.png"></p:graphicImage>

						<p:outputLabel value="#{sisuSeriyaPaymentApproval.successMessage}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						value="OK" process="frmsuccess"
						onclick="PF('successMessage').hide()">
					</p:commandButton>
				</center>
			</h:form>
		</p:dialog>

		<p:dialog styleClass="" id="alertMessage" global="true" modal="true"
			header="Alert" width="30%" severity="info" widgetVar="alertMSG"
			closeOnEscape="true" resizable="false">

			<h:form id="frmAlert">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="warning.png"></p:graphicImage>

						<p:outputLabel value="#{sisuSeriyaPaymentApproval.alertMSG}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						value="OK" process="frmAlert" onclick="PF('alertMSG').hide()">
					</p:commandButton>
				</center>
			</h:form>
		</p:dialog>


	</ui:define>
</ui:composition>