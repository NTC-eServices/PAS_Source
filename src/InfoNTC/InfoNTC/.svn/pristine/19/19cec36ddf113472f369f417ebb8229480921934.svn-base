<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:p="http://primefaces.org/ui"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:fn="http://java.sun.com/jsp/jstl/functions"
	template="/WEB-INF/template/template.xhtml">
	<ui:define name="metadata">
	</ui:define>
	<ui:define name="content">
		<style>
.ui-dialog .ui-dialog-titlebar {
	padding: .4em .4em .4em 1em;
	position: relative;
	background: #07295b !important;
	padding: 5px 5px 5px 5px;
	margin: 0px 0px 0px 0px;
	color: #ffffff;
}

.ui-panelgrid .ui-panelgrid-cell {
	background-color: #f1f1f1;
}

.ui-icon.ui-confirm-dialog-severity {
	background-position: 0 0 !important;
	background-image: none !important;
}

.colorHighlight {
	background: yellow !important;
}

.ui-dialog .ui-widget .ui-widget-content .ui-corner-all .ui-shadow .ui-hidden-container .ui-draggable
	{
	width: 50%;
}

.firstColumn {
	width: 100%;
}

.secondColumn {
	width: 100%;
}

.ui-state-default a, .ui-state-default a:link, .ui-state-default a:visited
	{
	color: #07295b;
}

.mainDiv {
	width: 99%;
	height: auto;
	border-left: solid;
	border-right: solid;
	border-bottom: solid;
	border-top: solid;
	border-color: #07295b;
	border-width: 1px;
	margin-left: 5px;
	margin-top: 5px;
	margin-bottom: 5px;
	/*background-image: linear-gradient(to right bottom, #d9ddfa, #ccd4fb, #bdcafc, #aec2fe,
		#9cb9ff);*/
	background-image: linear-gradient(to right bottom, #f1f1f1, #dfdfe4, #f1f1f1, #e9eaeb,
		#bbb5b5);
}

.ui-inputfield, .ui-widget-content .ui-inputfield, .ui-widget-header .ui-inputfield
	{
	color: #07295b;
}

.mainLinkButton {
	font-weight: bold;
	background: #2571fa !important;
	text-align: center;
	padding: 7px 25px 7px 25px !important;
	height: 35px !important;
	text-decoration: none !important;
	color: white !important;
	white-space: nowrap !important;
	border-radius: 5px !important;
}

.mainLinkButton:hover {
	background: #fba026 !important;
}

.otherLinkButton {
	font-weight: bold;
	background: #296807 !important;
	text-align: center;
	padding: 7px 25px 7px 25px !important;
	height: 35px !important;
	text-decoration: none !important;
	color: white !important;
	white-space: nowrap !important;
	border-radius: 5px !important;
}

.otherLinkButton:hover {
	background: #fba026 !important;
}

.mainActionbtn {
	font-weight: bold;
	background: #2571fa !important;
	height: 30px !important;
	border-radius: 5px !important;
	color: white !important;
	text-align: center;
	width: 80px;
	white-space: nowrap !important;
	-webkit-transition: background-color 0.3s ease-out;
	-moz-transition: background-color 0.3s ease-out;
	-o-transition: background-color 0.3s ease-out;
	transition: background-color 0.3s ease-out;
}

.mainActionbtn:hover {
	background: #fba026 !important;
}

.OthActionbtn {
	font-weight: bold;
	background: #296807 !important;
	height: 30px !important;
	border-radius: 5px !important;
	color: white !important;
	text-align: center;
	width: 80px;
	white-space: nowrap !important;
	-webkit-transition: background-color 0.3s ease-out;
	-moz-transition: background-color 0.3s ease-out;
	-o-transition: background-color 0.3s ease-out;
	transition: background-color 0.3s ease-out;
	margin-bottom: 5px;
}

.OthActionbtn:hover {
	background: #fba026 !important;
}

.subDiv {
	margin: 0 auto;
	background: rgb(254, 255, 255); /* Old browsers */
	background: -moz-linear-gradient(-45deg, rgba(254, 255, 255, 1) 0%,
		rgba(210, 235, 249, 1) 100%); /* FF3.6-15 */
	background: -webkit-linear-gradient(-45deg, rgba(254, 255, 255, 1) 0%,
		rgba(210, 235, 249, 1) 100%); /* Chrome10-25,Safari5.1-6 */
	background: linear-gradient(135deg, rgba(254, 255, 255, 1) 0%,
		rgba(210, 235, 249, 1) 100%);
	/* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#feffff',
		endColorstr='#d2ebf9', GradientType=1);
	/* IE6-9 fallback on horizontal gradient */
}

.nopadd .ui-panelgrid-cell {
	padding: 4px 0px !important;
}

.sm-padding .ui-panelgrid-cell {
	padding-top: 4px !important;
	padding-bottom: 4px !important;
}

.ui-slider-horizontal {
	background: #b3d9ff !important;
	height: 5px !important;
	padding-top: 2px !important;
	margin-top: 12px;
}

.ui-slider-handle {
	background: #5589d2 !important;
	border-radius: 10px !important;
}
</style>

		<div class="mainDiv">


			<div style="margin-top: 0%;" class="common_form_header">
				<h1 style="color: #ffffff; text-align: center; font-weight: bold">Maintain
					Attendance</h1>

			</div>

			<div style="width: 95%;" class="subDiv">
				<h:form id="frmAttendance" style="background-color :#f1f1f1;">
					<p:spacer height="5px"></p:spacer>

					<div class="ui-widget-content ui-grid ui-grid-responsive">

						<div class="rowpadding ui-grid-row">
							<div class="ui-grid-col-1"></div>
							<div class="ui-grid-col-2">
								<p:outputLabel value="Sheduled Training Date"></p:outputLabel>
								<h:outputLabel value="*" style="color:#ff0000"></h:outputLabel>
							</div>
							<div class="ui-grid-col-3">
								<p:calendar
									value="#{trainingAttendanceBackingBean.trainingDate}"
									styleClass="calendarClass" navigator="true" locale="en_US"
									size="18" inputStyle="width:195px" pattern="dd/MM/yyyy"
									placeholder="dd/MM/yyyy" yearRange="c-100:c+100"
									showButtonPanel="true" showTodayButton="true">
								</p:calendar>
							</div>
							<div class="ui-grid-col-1">
								<p:outputLabel value="Start Time"></p:outputLabel>
							</div>
							<div class="ui-grid-col-2">
								<p:calendar value="#{trainingAttendanceBackingBean.startTime}"
									styleClass="calendarClass" pattern="HH:mm" placeholder="HH:mm"
									timeOnly="true" size="8">
								</p:calendar>
							</div>
							<div class="ui-grid-col-1">
								<p:outputLabel value="End Time"></p:outputLabel>
							</div>
							<div class="ui-grid-col-2">
								<p:calendar value="#{trainingAttendanceBackingBean.endTime}"
									styleClass="calendarClass" pattern="HH:mm" placeholder="HH:mm"
									timeOnly="true" size="8">
								</p:calendar>
							</div>
						</div>

						<div class="rowpadding ui-grid-row">
							<div class="ui-grid-col-1"></div>
							<div class="ui-grid-col-2">
								<p:outputLabel value="Type of Training"></p:outputLabel>
								<h:outputLabel value="*" style="color:#ff0000"></h:outputLabel>
							</div>
							<div class="ui-grid-col-3">
								<p:selectOneMenu
									value="#{trainingAttendanceBackingBean.selectedTrainingType}"
									style="width:176px" effect="fold" filter="true"
									filterMatchMode="contains">
									<f:selectItem itemLabel="-- SELECT TRAINING TYPE --"
										itemValue="" />
									<f:selectItems
										value="#{trainingAttendanceBackingBean.trainingTypeList}"
										var="type" itemValue="#{type.code}"
										itemLabel="#{type.description}" />
								</p:selectOneMenu>
							</div>
						</div>

						<div class="rowpadding ui-grid-row">
							<div class="ui-grid-col-1"></div>
							<div class="ui-grid-col-2">
								<p:outputLabel value="Location"></p:outputLabel>
							</div>
							<div class="ui-grid-col-3">
								<p:inputText value="#{trainingAttendanceBackingBean.location}"
									onkeyup="this.value=this.value.toUpperCase();"
									style="width:195px">
								</p:inputText>
							</div>
						</div>


						<div class="gridspadding" align="center">
							<p:commandButton value="Search" styleClass="mainActionbtn"
								tabindex="1"
								actionListener="#{trainingAttendanceBackingBean.searchAttendance}"
								alt="Search" update="searchResult"></p:commandButton>

							<p:spacer width="5px"></p:spacer>

							<p:commandButton value="Clear" styleClass="mainActionbtn"
								tabindex="1"
								actionListener="#{trainingAttendanceBackingBean.clearSearchView}"
								alt="Clear" update="frmAttendance"></p:commandButton>
						</div>


						<p:panel id="searchResult">

							<p:dataTable id="dtAttendance" var="att"
								value="#{trainingAttendanceBackingBean.attendanceList}"
								paginator="true" rows="20" rowsPerPageTemplate="10,20,50"
								paginatorPosition="bottom"
								paginatorTemplate="{CurrentPageReport} {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
								reflow="true" filterBy="#{att.nic}"
								rendered="#{fn:length(trainingAttendanceBackingBean.attendanceList) > 0}">
								<p:column headerText="NIC" sortBy="#{att.nic}"
									style="text-align:left; width:14%">
									<h:outputText value="#{att.nic}" />
								</p:column>
								<p:column headerText="Driver / Conductor ID"
									sortBy="#{att.driverConductorId}"
									style="text-align:left; width:18%">
									<h:outputText value="#{att.driverConductorId}" />
								</p:column>
								<p:column headerText="Full Name" sortBy="#{att.fullName}"
									style="text-align:left">
									<h:outputText value="#{att.fullName}" />
								</p:column>
								<p:column headerText="Expiry Date" sortBy="#{att.expiryDate}"
									style="text-align:left; width:12%">
									<h:outputText value="#{att.expiryDate}" />
								</p:column>
								<p:column headerText="Attendance"
									style="text-align:center; width:70px">
									<p:selectBooleanCheckbox value="#{att.attendance}"></p:selectBooleanCheckbox>
								</p:column>
								<p:column headerText="Print"
									style="text-align:center; width:60px">
									<p:selectBooleanCheckbox value="#{att.attPrint}"></p:selectBooleanCheckbox>
								</p:column>
								<p:column headerText="Remark" style="text-align:left;">
									<p:inputText value="#{att.attRemark}" style="width:95%"></p:inputText>
								</p:column>
							</p:dataTable>

							<p:panel id="cmdBtnPalette"
								rendered="#{fn:length(trainingAttendanceBackingBean.attendanceList) > 0}">
								<div class="gridspadding" align="center">
									<p:commandButton value="Save" styleClass="mainActionbtn"
										tabindex="1"
										actionListener="#{trainingAttendanceBackingBean.saveForm}"
										alt="Save" update="cmdBtnPalette" />

									<p:spacer width="5px"></p:spacer>

									<p:commandButton value="Clear" styleClass="mainActionbtn"
										tabindex="1"
										actionListener="#{trainingAttendanceBackingBean.loadAttendanceList}"
										alt="Clear" update="frmAttendance"></p:commandButton>

									<p:spacer width="5px"></p:spacer>

									<p:commandButton value="Print Attendance Sheet"
										styleClass="mainActionbtn" style="width: 170px;" tabindex="1"
										disabled="#{!trainingAttendanceBackingBean.dataSaved}"
										actionListener="#{trainingAttendanceBackingBean.printAttendanceSheet}"
										alt="Print Attendance Sheet" update="frmAttendance" />

								</div>
							</p:panel>

						</p:panel>

					</div>
				</h:form>
			</div>



			<p:dialog id="dialogError" global="true" modal="true" header="Error"
				width="30%" severity="info" widgetVar="errorDialog"
				closeOnEscape="true" resizable="false">
				<h:form id="frmError">
					<center>
						<p:panelGrid columns="2" styleClass="ui-noborder">
							<p:graphicImage library="images" name="error-24.png"></p:graphicImage>
							<p:outputLabel value="#{trainingAttendanceBackingBean.errorMsg}"></p:outputLabel>
						</p:panelGrid>
						<br></br>
						<p:commandButton style="margin-top:10px;margin-bottom:10px"
							process="frmError" value="OK" onclick="PF('errorDialog').hide()">
						</p:commandButton>

					</center>
				</h:form>
			</p:dialog>

			<p:dialog id="dialogSuccess" global="true" modal="true"
				header="Success" width="30%" severity="info"
				widgetVar="successDialog" closeOnEscape="true" resizable="false">
				<h:form id="frmSuccess">
					<center>
						<p:panelGrid columns="2" styleClass="ui-noborder">
							<p:graphicImage library="images" name="success-24.png"></p:graphicImage>
							<p:outputLabel value="#{trainingAttendanceBackingBean.sucessMsg}"></p:outputLabel>
						</p:panelGrid>
						<br></br>
						<p:commandButton style="margin-top:10px;margin-bottom:10px"
							process="frmSuccess" value="OK"
							onclick="PF('successDialog').hide()">
						</p:commandButton>
					</center>
				</h:form>
			</p:dialog>

		</div>



	</ui:define>
</ui:composition>