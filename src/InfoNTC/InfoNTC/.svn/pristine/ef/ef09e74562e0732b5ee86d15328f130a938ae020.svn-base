		<div class="mainDiv">
			<!-- Header -->
			<h1
				style="margin-top: 0%; text-align: center; color: #ffffff; background-color: #404d6f !important;"
				class="common_form_header">Route Set-up for Time Table Purpose</h1>

			<div style="width: 95%;" class="subDiv">
				<h:form id="formx">
					<p:panelGrid columns="4"
						columnClasses="ui-grid-col-3,ui-grid-col-2,ui-grid-col-4,ui-grid-col-3"
						layout="grid">

						<!-- Row 1 Start -->
						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Permit Authority"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:selectOneMenu id="permitAuthorityId" style="width:70%"
								disabled="true"
								value="#{routeSetUpForTimeTableBean.routeSetUpDTO.permitAuthority}">
								<!-- Should create Bean & change value-->
								<f:selectItem itemLabel="NTC" itemValue="NTC" />
							</p:selectOneMenu>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<!-- Row 1 End -->

						<!-- Row 2 Start -->
						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Route No."></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:selectOneMenu id="routeNo" style="width:70%" effect="fold"
								filter="true" filterMatchMode="contains" tabindex="1"
								value="#{routeSetUpForTimeTableBean.routeSetUpDTO.routeNo}">
								<f:selectItem itemLabel="-- Select Route No --" itemValue="" />
								<f:selectItems
									value="#{routeSetUpForTimeTableBean.routefordropdownList}"
									var="routefordropdownList"
									itemValue="#{routefordropdownList.routeNo}"
									itemLabel="#{routefordropdownList.routeNo} #{routefordropdownList.routeDes}" />
							</p:selectOneMenu>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<!-- Row 2 End -->

						<!-- Row 3 Start -->
						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Service Type"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:selectOneMenu id="drpd-serviceType" style="width:70%;"
								effect="fold" filter="true" filterMatchMode="contains"
								value="#{routeSetUpForTimeTableBean.routeSetUpDTO.serviceType}">
								<f:selectItem itemLabel="-- Select Service Type. --"
									itemValue="" />
								<f:selectItems
									value="#{routeSetUpForTimeTableBean.drpdServiceTypeList}"
									var="requestNoList" itemLabel="#{requestNoList.description}"
									itemValue="#{requestNoList.code}" />
							</p:selectOneMenu>

						</p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<!-- Row 3 End -->
					</p:panelGrid>

					<!-- Button -->
					<p:panel>
						<center>
							<p:commandButton value="Search" styleClass="mainActionbtn"
								action="#{routeSetUpForTimeTableBean.searchAction}"
								update="frmsuccess,frmError,frmAlert,routeTable"></p:commandButton>
							<!-- Should add action & update-->

							<p:commandButton value="Clear" styleClass="mainActionbtn"
								action="#{routeSetUpForTimeTableBean.clearOne}"
								update="frmsuccess,frmError,frmAlert,formx "></p:commandButton>
						</center>
					</p:panel>
					<br></br>

					<div style="width: 95%;" class="subDiv">
						<!-- Table -->

						 <p:dataTable id="routeTable"
							value="#{routeSetUpForTimeTableBean.routeDetailsList}"
							var="routeDetails" rows="100" paginator="true"
							paginatorTemplate="{CurrentPageReport} {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
							tableStyle="width:100%" rowsPerPageTemplate="100,200,300"
							liveResize="true" rowIndexVar="index" styleClass="myTable"
							emptyMessage="No data available" rowKey="#{routeDetails.seq}"
							selection="#{routeSetUpForTimeTableBean.modifiedDataList}" >
							
							<p:column headerText="No." style="text-align:center;"
								visible="true">
								<h:outputText style="text-align:center;width:80%" visible="true"
									value="#{routeDetails.rowNo}" />

							</p:column>

							<p:column headerText="Permit No" style="text-align:center;"
								visible="true">
								<h:outputText style="text-align:center;width:80%" visible="true"
									value="#{routeDetails.permitNo}" />

							</p:column>

							<p:column headerText="Expiry Date" style="text-align:center;"
								visible="true">
								<h:outputText style="text-align:center;width:80%" visible="true"
									value="#{routeDetails.expiryDate}" />

							</p:column>

							<p:column headerText="Bus No" style="text-align:center;"
								visible="true">
								<h:outputText style="text-align:center;width:80%" visible="true"
									value="#{routeDetails.busNo}" />

							</p:column>

							<p:column headerText="Status" style="text-align:center;"
								visible="true">
								<h:outputText style="text-align:center;width:80%" visible="true"
									value="#{routeDetails.statusDes}" />

							</p:column>

							<p:column headerText="Service type" style="text-align:center;"
								visible="true">
								<h:outputText style="text-align:center;width:80%" visible="true"
									value="#{routeDetails.serviceType}" />

							</p:column>

							<p:column headerText="Origin" style="text-align:center;"
								visible="true">
								<h:outputText style="text-align:center;width:80%" visible="true"
									value="#{routeDetails.origin}" listner="" />

							</p:column>

							<p:column headerText="Destination" style="text-align:center;"
								visible="true">
								<h:outputText style="text-align:center;width:80%" visible="true"
									value="#{routeDetails.destination}" />

							</p:column>

							<p:column headerText="Route flag (Swap Y/N)"
								style="text-align:center;">
								<h:selectBooleanCheckbox value="#{routeDetails.routeFlag}"
									onclick="checkValue(this)" />
							</p:column>

							<p:column selectionMode="multiple" style="text-align:center"
								headerText="Use for Time Table" />

							
						</p:dataTable>
						<br></br>

						<div style="width: 100%;" class="subDiv">
							<p:panelGrid columns="4"
								columnClasses="ui-grid-col-3,ui-grid-col-2,ui-grid-col-4,ui-grid-col-3"
								layout="grid">
								<!-- Group Number Row -->
								<p:panelGrid></p:panelGrid>
								<p:panelGrid>
									<p:outputLabel value="Group No."></p:outputLabel>
									<p:outputLabel value="*" style="color:red;"></p:outputLabel>
								</p:panelGrid>
								<p:panelGrid>
									<p:selectOneMenu id="groupId" style="width:70%" effect="fold"
										filter="true" filterMatchMode="contains" tabindex="1"
										value="#{routeSetUpForTimeTableBean.routeSetUpDTO.groupNo}">
										<!-- Should create Bean & change value-->
										<f:selectItem itemLabel="-- Select Group No --" itemValue="" />
										<f:selectItem itemLabel="Group 01" itemValue="1" />
										<f:selectItem itemLabel="Group 02" itemValue="2" />
										<f:selectItem itemLabel="Group 03" itemValue="3" />
									</p:selectOneMenu>
								</p:panelGrid>
								<p:panelGrid></p:panelGrid>
								<!-- End Group Number Row -->
							</p:panelGrid>

							<!-- Button -->
							<p:panel>
								<center>

									<p:commandButton value="Save" styleClass="mainActionbtn" 
										action="#{routeSetUpForTimeTableBean.saveAction}"
										update="frmsuccess,frmError,frmAlert,formx,routeTable " />
								</center>
							</p:panel>
						</div>
					</div>
				</h:form>
			</div>
		</div>

		<p:dialog styleClass="" id="errorMSG" global="true" modal="true"
			header="Error" width="30%" severity="info" widgetVar="errorMessage"
			closeOnEscape="true" resizable="false">

			<h:form id="frmError">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="error-24.png"></p:graphicImage>

						<p:outputLabel value="#{routeSetUpForTimeTableBean.errorMessage}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						value="OK" process="frmError" onclick="PF('errorMessage').hide()">
					</p:commandButton>
				</center>
			</h:form>
		</p:dialog>

		<p:dialog styleClass="" id="successMSG" global="true" modal="true"
			header="Info" width="30%" severity="info" widgetVar="successMessage"
			closeOnEscape="true" resizable="false">

			<h:form id="frmsuccess">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="success-24.png"></p:graphicImage>

						<p:outputLabel
							value="#{routeSetUpForTimeTableBean.successMessage}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						value="OK" process="frmsuccess"
						onclick="PF('successMessage').hide()">
					</p:commandButton>
				</center>
			</h:form>
		</p:dialog>

		<p:dialog styleClass="" id="alertMessage" global="true" modal="true"
			header="Alert" width="30%" severity="info" widgetVar="alertMSG"
			closeOnEscape="true" resizable="false">

			<h:form id="frmAlert">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="warning.png"></p:graphicImage>

						<p:outputLabel value="#{routeSetUpForTimeTableBean.alertMSG}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						value="OK" process="frmAlert" onclick="PF('alertMSG').hide()">
					</p:commandButton>
				</center>
			</h:form>
		</p:dialog>
		
		<p:dialog styleClass="" id="comfirmMSG" global="true" modal="true"
			header="Confirmation" width="30%" severity="info"
			widgetVar="comfirmMSG" closeOnEscape="true" resizable="false">

			<h:form id="frmcomfirm">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="warning.png"></p:graphicImage>

						<p:outputLabel
							value="Data already added for the selected route. Do you want to Inactive previous data?"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						value="Yes" process="frmcomfirm"
						update="frmsuccess,frmError,formx"
						action="#{routeSetUpForTimeTableBean.inactiveData}">
					</p:commandButton>

					<p:commandButton
						style="margin-top:10px;margin-bottom:10px;margin-left:10px"
						value="No" process="frmcomfirm" onclick="PF('comfirmMSG').hide()">
					</p:commandButton>
				</center>
			</h:form>
		</p:dialog>

		<h:outputScript>
		   	function checkValue(checkbox) {        
		       if (checkbox.checked) {
					var selectRow = checkbox.closest("tr"); // Find the parent row of the checkbox
	            	var selectCells = selectRow.cells;
		        	var realOrigin = selectCells[6].innerText; // Get the origin value
		        	selectCells[6].innerText = selectCells[7].innerText; // Set the origin to destination value
		        	selectCells[7].innerText = realOrigin;
		       } else {
		            var selectRow = checkbox.closest("tr"); // Find the parent row of the checkbox
	            	var selectCells = selectRow.cells;
		        	var realOrigin = selectCells[6].innerText; // Get the origin value
		        	selectCells[6].innerText = selectCells[7].innerText; // Set the origin to destination value
		        	selectCells[7].innerText = realOrigin;
		        }     
	    	}
		</h:outputScript>


	</ui:define>
</ui:composition>



















