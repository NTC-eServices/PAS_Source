		<h:form id="form">
			<div class="mainDiv">
				<h1
					style="margin-top: 0%; text-align: center; color: #ffffff; background-color: #404d6f !important;"
					class="common_form_header">Issue Service Agreement / Permit
					Sticker / Log Sheets - Gami Seriya</h1>
				<div style="width: 90%;" class="subDiv">


					<p:panel id="panelOne">

						<p:panelGrid columns="4" style="margin-left:50px"
							columnClasses="ui-grid-col-2,ui-grid-col-4,ui-grid-col-4,ui-grid-col-2"
							layout="grid">


							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Tender Reference No."></p:outputLabel>
							</p:panelGrid>

							<p:panelGrid>
								<p:selectOneMenu id="reqNo" style="width:68%"
									value="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.gamiSeriyaDTO.tenderRefNo}"
									filter="true" filterMatchMode="contains" tabindex="1"
									placeholder="-- All --">

									<f:selectItem itemLabel="-- Select Tender Reference No. --"
										itemValue="" />
									<f:selectItems
										value="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.getTenderRefNoList}"
										var="e" itemLabel="#{e.tenderRefNo}"
										itemValue="#{e.tenderRefNo}" />
								</p:selectOneMenu>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>


							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Request Start Date"></p:outputLabel>
							</p:panelGrid>

							<p:panelGrid>
								<p:calendar id="startDate" styleClass="dateTimeField"
									navigator="true" mindate="today" showOn="button"
									value="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.gamiSeriyaDTO.requestStartDate}"
									pattern="dd/MM/yyyy" placeholder="DD/MM/YYYY">
								</p:calendar>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>

							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Request End Date"></p:outputLabel>
							</p:panelGrid>

							<p:panelGrid>
								<p:calendar id="endDate" styleClass="dateTimeField"
									navigator="true" mindate="today" showOn="button"
									value="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.gamiSeriyaDTO.requestEndDate}"
									pattern="dd/MM/yyyy" placeholder="DD/MM/YYYY">
								</p:calendar>

							</p:panelGrid>
							<p:panelGrid></p:panelGrid>

							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Service Reference No."></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:selectOneMenu id="refNo" style="width:68%"
									onkeyup="this.value=this.value.toUpperCase();"
									value="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.gamiSeriyaDTO.serviceRefNo}"
									filter="true" filterMatchMode="contains" tabindex="1"
									placeholder="-- All --">

									<f:selectItem itemLabel="-- Select Service Ref.No. --"
										itemValue="" />
									<f:selectItems
										value="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.getServiceReferenceNoList}"
										var="d" itemLabel="#{d.serviceRefNo}"
										itemValue="#{d.serviceRefNo}" />
								</p:selectOneMenu>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>

							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Service No."></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:selectOneMenu id="ServiceNo" style="width:68%"
									onkeyup="this.value=this.value.toUpperCase();"
									value="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.gamiSeriyaDTO.serviceNo}"
									filter="true" filterMatchMode="contains" tabindex="1"
									placeholder="-- All --">

									<f:selectItem itemLabel="-- Select Service No. --" itemValue="" />
									<f:selectItems
										value="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.getServiceNoList}"
										var="d" itemLabel="#{d.serviceNo}" itemValue="#{d.serviceNo}" />
								</p:selectOneMenu>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>


						</p:panelGrid>

						<br />

						<center>
							<p:commandButton value="Search" styleClass="mainActionbtn"
								id="cmdBtnSearch"
								action="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.search}"
								update="frmsuccess,frmError,frmAlert,@form" />

							<p:commandButton value="Clear" styleClass="mainActionbtn"
								action="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.clearOne}"
								update="frmsuccess,frmError,frmAlert,@form" />

						</center>
					</p:panel>




					<!--Data Table -->
					<p:panel id="panelTwo">
						<center>
							<p:dataTable id="dataTable" var="p" rows="5" paginator="true"
								value="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.gamiSeriyaList}"
								selection="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.selectDTO}"
								selectionMode="single" rowKey="#{p.serviceRefNo}"
								paginatorTemplate="{CurrentPageReport} {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
								rowsPerPageTemplate="10,20" resizableColumns="false"
								liveResize="true" tableStyle="width:auto;font-size:12px;"
								rowIndexVar="index" styleClass="myTable"
								emptyMessage="No data available">

								<p:ajax event="rowSelect"
									listener="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.selectRow}"
									update="@form" process="@form" />



								<p:column headerText="Tender Reference No.">
									<h:outputText value="#{p.tenderRefNo}" />
								</p:column>

								<p:column headerText="Service Reference No.">
									<h:outputText value="#{p.serviceRefNo}" />
								</p:column>

								<p:column headerText="Service No.">
									<h:outputText value="#{p.serviceNo}" />
								</p:column>

								<p:column headerText="Name of Operator">
									<h:outputText value="#{p.nameinFull}" />
								</p:column>

								<p:column headerText="Expiry Date">
									<h:outputText value="#{p.strServiceEndDate}" />
								</p:column>

								<p:column headerText="Status">
									<h:outputText value="#{p.gpsStatus}" />
								</p:column>

								<p:column headerText="Issue Service Agreement">

									<p:calendar styleClass="dateTimeField" navigator="true"
										value="#{p.serviceAgreementIssuedDate}" mindate="today"
										showOn="button" pattern="dd/MM/yyyy"
										disabled="#{p.issuedServiceAgreement}"
										placeholder="DD/MM/YYYY">
									</p:calendar>

								</p:column>

								<p:column headerText="Issue Permit Sticker">
									<p:calendar styleClass="dateTimeField" navigator="true"
										value="#{p.permitStickerIssuedDate}" mindate="today"
										showOn="button" pattern="dd/MM/yyyy"
										disabled="#{p.issuedPermitSticker}" placeholder="DD/MM/YYYY">
									</p:calendar>
								</p:column>

								<p:column headerText="Issue Log Sheets">
									<p:calendar styleClass="dateTimeField" navigator="true"
										value="#{p.logSheetsIssuedDate}" mindate="today"
										showOn="button" pattern="dd/MM/yyyy"
										disabled="#{p.issuedLogSheets}" placeholder="DD/MM/YYYY">
									</p:calendar>
								</p:column>

							</p:dataTable>
						</center>
					</p:panel>

					<p:panel id="btnPanel">
						<center>

							<p:commandButton value="Issue Service Agreement"
								styleClass="mainActionbtn"
								rendered="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.renderServiceAgreement}"
								action="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.issueServiceAgreement}"
								update="frmsuccess,frmError,frmAlert,@form"
								disabled="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.disabledIssueServiceAgreement}"
								style="width:20%" />

							<p:commandButton value="Issue Permit Sticker"
								styleClass="mainActionbtn"
								rendered="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.renderPermitSticker}"
								action="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.issuePermitSticker}"
								update="frmsuccess,frmError,frmAlert,@form"
								disabled="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.disabledIssuePermitSticker}"
								style="width:20%" />

							<p:commandButton value="Issue Log Sheets"
								styleClass="mainActionbtn"
								rendered="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.renderLogSheet}"
								action="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.issueLogSheets}"
								update="frmsuccess,frmError,frmAlert,@form"
								disabled="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.disabledIssueLogSheets}"
								style="width:20%" />

							<p:commandButton value="Clear" styleClass="mainActionbtn"
								action="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.clearTwo}"
								update="frmsuccess,frmError,frmAlert,@form" style="width:20%" />
						</center>
					</p:panel>

				</div>
			</div>

		</h:form>


		<p:dialog styleClass="" id="errorMSG" global="true" modal="true"
			header="Error" width="30%" severity="info" widgetVar="errorMessage"
			closeOnEscape="true" resizable="false">

			<h:form id="frmError">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="error-24.png"></p:graphicImage>

						<p:outputLabel
							value="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.errorMessage}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						value="OK" process="frmError" onclick="PF('errorMessage').hide()">
					</p:commandButton>
				</center>
			</h:form>
		</p:dialog>

		<p:dialog styleClass="" id="successMSG" global="true" modal="true"
			header="Info" width="30%" severity="info" widgetVar="successMessage"
			closeOnEscape="true" resizable="false">

			<h:form id="frmsuccess">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="success-24.png"></p:graphicImage>

						<p:outputLabel
							value="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.successMessage}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						value="OK" process="frmsuccess"
						onclick="PF('successMessage').hide()">
					</p:commandButton>
				</center>
			</h:form>
		</p:dialog>

		<p:dialog styleClass="" id="alertMessage" global="true" modal="true"
			header="Alert" width="30%" severity="info" widgetVar="alertMSG"
			closeOnEscape="true" resizable="false">

			<h:form id="frmAlert">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="warning.png"></p:graphicImage>

						<p:outputLabel
							value="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.alertMSG}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						value="OK" process="frmAlert" onclick="PF('alertMSG').hide()">
					</p:commandButton>
				</center>
			</h:form>
		</p:dialog>


		<p:dialog header="Issue Log Sheets" widgetVar="issueLogSheetsDialog"
			modal="true" id="dialogIssueLogSheets" resizable="false"
			style="postion: absolute;" closeOnEscape="true" height="500px"
			width="40%">
			<h:form id="frmIssueLogSheets">

				<p:panel id="panelOne">

					<p:panelGrid columns="2"
						columnClasses="ui-grid-col-6,ui-grid-col-6" layout="grid">


						<p:panelGrid>
							<p:outputLabel value="Service Ref. No."></p:outputLabel>
						</p:panelGrid>

						<p:panelGrid>
							<p:inputText
								value="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.selectDTO.serviceRefNo}"
								style="width:100%" readonly="true" />
						</p:panelGrid>

						<p:panelGrid>
							<p:outputLabel value="Year"></p:outputLabel>
						</p:panelGrid>

						<p:panelGrid>
							<p:inputText style="width:100%;height:18px;" id="logYear"
								readonly="true"
								value="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.logSheetYear}"
								padControl="false" maxlength="4" maxValue="9999"
								onkeyup="this.value=this.value.toUpperCase();">
								<p:keyFilter regEx="/[\d]/i" />
								<p:ajax update="logYear,frmsuccess,frmError,frmAlert,@form"
									listener="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.yearValidator}" />
							</p:inputText>

						</p:panelGrid>

						<p:panelGrid>
							<p:outputLabel value="No. of Copies"></p:outputLabel>
						</p:panelGrid>

						<p:panelGrid>
							<p:inputText style="width:100%;height:18px;"
								value="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.logSheetCopies}"
								onkeyup="this.value=this.value.toUpperCase();">
							</p:inputText>
						</p:panelGrid>

					</p:panelGrid>

					<br />

					<center>

						<p:commandButton value="Generate" styleClass="mainActionbtn"
							id="cmdBtnGenerateLog"
							action="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.generateLogSheetRef}"
							update="frmsuccess,frmError,frmAlert,@form" />

						<p:commandButton value="Save and Issue Log Sheets"
							styleClass="mainActionbtn" id="cmdBtnSaveLog"
							action="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.saveLogSheets}"
							update="frmsuccess,frmError,frmAlert,@form" style="width:40%" />

						<p:commandButton value="Clear" styleClass="mainActionbtn"
							id="cmdBtnClearLog"
							action="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.clearLogSheet}"
							update="frmsuccess,frmError,frmAlert,@form" />

					</center>
				</p:panel>

				<p:panel>
		
		<!-- Added ajax method & id to this input field : dhananjika.d (26/06/2024) -->
					<c:forEach begin="1"
						end="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.logSheetCopies}"
						items="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.newLogSheetList}"
						var="logSheetDTO">
						<p:panelGrid columns="3"
							columnClasses="ui-grid-col-3,ui-grid-col-6,ui-grid-col-3"
							layout="grid">
							<p:outputLabel></p:outputLabel>
							<p:inputText value="#{logSheetDTO.logSheetRefNo}" maxlength="20" id="refNo_#{logSheetDTO.id}">
								<p:ajax event="change" 
									listener="#{gamiIssueServiceAgreementPermitStickerLogSheetBackingBean.logSheetRefNoValidate(logSheetDTO)}"
                    				update="refNo_#{logSheetDTO.id}" />
							</p:inputText>
							<p:outputLabel></p:outputLabel>
						</p:panelGrid>

					</c:forEach>
				</p:panel>

			</h:form>

		</p:dialog>



	</ui:define>
</ui:composition>