		<div class="mainDiv">
			<h1
				style="margin-top: 0%; text-align: center; center; color: #ffffff; background-color: #404d6f !important;"
				class="common_form_header">Route Maintenance</h1>

			<div style="width: 95%;" class="subDiv">
				<h:form id="frmRouteMaintenance">
					<br></br>
					<p:panelGrid columns="4"
						columnClasses="ui-grid-col-3,ui-grid-col-2,ui-grid-col-4,ui-grid-col-3"
						layout="grid">
						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Route No." for="txtRouteNo"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:inputText style="width:80%;height:18px;" maxlength="20"
								id="txtRouteNo" onkeyup="this.value=this.value.toUpperCase();"
								value="#{routeBackingBean.routeDTO.routeNo}"
								disabled="#{routeBackingBean.disable}">
								<p:keyFilter regEx="/[a-zA-Z0-9-_//\\]/i" />
							</p:inputText>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Route Name" for="txtDescription"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:inputText style="width:80%;height:18px;" maxlength="100"
								id="txtDescription"
								onkeyup="this.value=this.value.toUpperCase();"
								value="#{routeBackingBean.routeDTO.routeDes}"
								validator="textValidator">
								<p:ajax partialSubmit="true" update="msgTxtDescription"
									event="keyup" />
							</p:inputText>
							<p:message for="txtDescription" id="msgTxtDescription" />
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Location 1 in English" for="txtOrigin"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:inputText style="width:80%;height:18px;" maxlength="50"
								id="txtOrigin" onkeyup="this.value=this.value.toUpperCase();"
								value="#{routeBackingBean.routeDTO.origin}">

							</p:inputText>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Location 2 in English" for="txtDestination"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:inputText style="width:80%;height:18px;" maxlength="50"
								id="txtDestination"
								onkeyup="this.value=this.value.toUpperCase();"
								value="#{routeBackingBean.routeDTO.destination}">

							</p:inputText>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Via in English"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:inputTextarea id="txtVia"
								onkeyup="this.value=this.value.toUpperCase();"
								value="#{routeBackingBean.routeDTO.via}"
								style="width:98%;height:36px;" rows="5" cols="30"
								counter="display" maxlength="150"
								counterTemplate="{0} characters remaining." autoResize="true">

							</p:inputTextarea>
							<h:outputText id="display" />
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<p:panelGrid></p:panelGrid>

						<p:panelGrid>
							<p:outputLabel value="Location 1 in Sinhala" for="txtOriginS"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:inputText style="width:80%;height:18px;" maxlength="50"
								id="txtOriginS" onkeyup="this.value=this.value.toUpperCase();"
								value="#{routeBackingBean.routeDTO.originS}">

							</p:inputText>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Location 2 in Sinhala" for="txtDestinationS"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:inputText style="width:80%;height:18px;" maxlength="50"
								id="txtDestinationS"
								onkeyup="this.value=this.value.toUpperCase();"
								value="#{routeBackingBean.routeDTO.destinationS}">

							</p:inputText>
						</p:panelGrid>
						 <p:panelGrid></p:panelGrid>
						<p:panelGrid></p:panelGrid>
					 	<p:panelGrid>
							<p:outputLabel value="Via in Sinhala"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:inputTextarea id="txtViaS"
								onkeyup="this.value=this.value.toUpperCase();"
								value="#{routeBackingBean.routeDTO.viaS}"
								style="width:98%;height:36px;" rows="5" cols="30"
								counter="display" maxlength="150"
								counterTemplate="{0} characters remaining." autoResize="true">

							</p:inputTextarea>
							<h:outputText id="displayS" />
						</p:panelGrid> 
						<p:panelGrid></p:panelGrid>
						<p:panelGrid></p:panelGrid>

						<p:panelGrid>
							<p:outputLabel value="Location 1 in Tamil" for="txtOriginT"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:inputText style="width:80%;height:18px;" maxlength="50"
								id="txtOriginT" onkeyup="this.value=this.value.toUpperCase();"
								value="#{routeBackingBean.routeDTO.originT}">

							</p:inputText>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Location 2 in Tamil" for="txtDestinationT"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:inputText style="width:80%;height:18px;" maxlength="50"
								id="txtDestinationT"
								onkeyup="this.value=this.value.toUpperCase();"
								value="#{routeBackingBean.routeDTO.destinationT}">

							</p:inputText>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<p:panelGrid></p:panelGrid>
					<p:panelGrid>
							<p:outputLabel value="Via in Tamil" for="txtViaT"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:inputTextarea id="txtViaT"
								onkeyup="this.value=this.value.toUpperCase();"
								value="#{routeBackingBean.routeDTO.viaT}"
								style="width:98%;height:36px;" rows="5" cols="30"
								counter="display" maxlength="150"
								counterTemplate="{0} characters remaining." autoResize="true">

							</p:inputTextarea>
							<h:outputText id="displayT" />
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<p:panelGrid></p:panelGrid>
						
						<p:panelGrid>
							<p:outputLabel value="Total Bus Fare" for="txtBusfare"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:inputNumber style="width:30%;height:18px;text-align: right;"
								maxlength="10" value="#{routeBackingBean.routeDTO.busFare}"
								inputStyle="text-align: right" id="txtBusfare">
								<p:ajax listener="#{routeBackingBean.totalBusFareValidation}"
									update="txtBusfare" />
							</p:inputNumber>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<p:panelGrid></p:panelGrid>


						<p:panelGrid>
							<p:outputLabel value="Distance" for="txtDistance"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:inputText style="width:20%;height:18px;" maxlength="6"
								id="txtDistance" value="#{routeBackingBean.routeDTO.distance }">
								<p:keyFilter regEx="/[\d.]/i" />
								<p:ajax update="txtDistance" />
							</p:inputText>
							<p:outputLabel value="KM" style="padding-left:5px"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Status"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:selectOneMenu id="console" style="width:125px"
								value="#{routeBackingBean.strSelectedStatus}">
								<f:selectItem itemLabel="-- All --" itemValue="" />
								<f:selectItem itemLabel="Active" itemValue="A" />
								<f:selectItem itemLabel="Inactive" itemValue="I" />
								<!-- <f:selectItem itemLabel="Temporary" itemValue="T" /> -->
							</p:selectOneMenu>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>
					</p:panelGrid>
					<br></br>

					<center>
						<p:commandButton id="cmdbtnAdd" value="Save" class="mainActionbtn"
							update="frmRouteMaintenance" process="frmRouteMaintenance"
							actionListener="#{routeBackingBean.addRoute}">
						</p:commandButton>

						<p:commandButton styleClass="mainActionbtn" value="Clear"
							update="frmRouteMaintenance" process="frmRouteMaintenance"
							id="cmdbtnAddClear" action="#{routeBackingBean.clearRoute}"></p:commandButton>
					</center>
					<br></br>
					<center>
						<p:dataTable var="routetable" paginator="true" update="@form"
						 rows="5" id="dtroute" tableStyle="width:auto"
							value="#{routeBackingBean.routeList}"
							paginatorTemplate="{CurrentPageReport} {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
							rowsPerPageTemplate="5,10,20,50,100" resizableColumns="false"
							liveResize="true" rowIndexVar="index">
							<p:column headerText="" style="width:7%">
								<p:commandLink id="cmdbtnEdit"
									action="#{routeBackingBean.editAction}" update="@form">
									<f:setPropertyActionListener value="#{routetable}"
										target="#{routeBackingBean.strSelectedRouteSeq}" />
									<p:graphicImage library="images" name="edit.png"
										style="width:24px;height:24px;" title="edit"></p:graphicImage>
								</p:commandLink>

							</p:column>
							<p:column headerText="" style="text-align:center;width:5%">
								<f:facet name=" header">
									<h:outputText value="index" />
								</f:facet>
								<h:outputText value="#{index + 1}"></h:outputText>
							</p:column>
							<p:column headerText="" style="text-align:left;width:8%"
								visible="false">
								<h:outputText style="text-align:left;" value="#{routetable.seq}"
									visible="false" />
							</p:column>
							<p:column headerText="Route No." style="text-align:left;width:8%">
								<h:outputText style="text-align:left;"
									value="#{routetable.routeNo}" />
							</p:column>
							<p:column headerText="Route Name"
								style="text-align:left;width:20%">
								<h:outputText style="text-align:left;"
									value="#{routetable.routeDes}" />
							</p:column>
							<p:column headerText="Location 1"
								style="text-align:left;width:20%">
								<h:outputText style="text-align:left;"
									value="#{routetable.origin}" />
							</p:column>
							<p:column headerText="Location 2"
								style="text-align:left;width:20%">
								<h:outputText style="text-align:left;"
									value="#{routetable.destination}" />
							</p:column>
							<p:column headerText="Via" style="text-align:left;width:25%">
								<h:outputText style="text-align:left; word-wrap: break-word;"
									value="#{routetable.via}" />
							</p:column>
							<p:column headerText="Total Bus Fare (Rs.)"
								style="text-align:right;width:8%">
								<h:outputText style="text-align:right;"
									value="#{routetable.busFare}">
									<f:convertNumber pattern="##,###.00" />
								</h:outputText>
							</p:column>
							<p:column headerText="Distance (KM)"
								style="text-align:center;width:9%">
								<h:outputText style="text-align:left;"
									value="#{routetable.distance}" />
							</p:column>
							<p:column headerText="Status" style="text-align:center;width:8%">
								<h:outputText style="text-align:left;"
									value="#{routetable.status}" />
							</p:column>
							
							<p:column headerText="Location 1 in Sinhala"
								style="text-align:left;width:20%">
								<h:outputText style="text-align:left;"
									value="#{routetable.originS}" />
							</p:column>
							<p:column headerText="Location 2 in Sinhala"
								style="text-align:left;width:20%">
								<h:outputText style="text-align:left;"
									value="#{routetable.destinationS}" />
							</p:column>
							<p:column headerText="Via in Sinhala" style="text-align:left;width:25%">
								<h:outputText style="text-align:left; word-wrap: break-word;"
									value="#{routetable.viaS}" />
							</p:column>
							
							<p:column headerText="Location 1 in Tamil"
								style="text-align:left;width:20%">
								<h:outputText style="text-align:left;"
									value="#{routetable.originT}" />
							</p:column>
							<p:column headerText="Location 2 in Tamil"
								style="text-align:left;width:20%">
								<h:outputText style="text-align:left;"
									value="#{routetable.destinationT}" />
							</p:column>
							<p:column headerText="Via in Tamil" style="text-align:left;width:25%">
								<h:outputText style="text-align:left; word-wrap: break-word;"
									value="#{routetable.viaT}" />
							</p:column>
							
							
						</p:dataTable>
					</center>
					<br></br>
				</h:form>

			</div>
		</div>

		<p:dialog styleClass="" id="requiredField" global="true" modal="true"
			header="Error" width="30%" severity="info" widgetVar="requiredField"
			closeOnEscape="true" resizable="false">
			<h:form id="frmrequiredField">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="error-24.png"></p:graphicImage>
						<p:outputLabel value="#{routeBackingBean.errorMsg}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						process="frmrequiredField" value="OK"
						onclick="PF('requiredField').hide()">
					</p:commandButton>

				</center>
			</h:form>
		</p:dialog>
		<p:dialog styleClass="" id="successSve" global="true" modal="true"
			header="Success" width="30%" severity="info" widgetVar="successSve"
			closeOnEscape="true" resizable="false">
			<h:form id="frmsuccessSve">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="success-24.png"></p:graphicImage>
						<p:outputLabel value="Successfully Saved."></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						process="frmsuccessSve" value="OK"
						onclick="PF('successSve').hide()">
					</p:commandButton>

				</center>
			</h:form>
		</p:dialog>
		<p:dialog styleClass="" id="errorMsge" global="true" modal="true"
			header="Error" width="30%" severity="info" widgetVar="errorMsge"
			closeOnEscape="true" resizable="false">
			<h:form id="frmerrorMsge">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="error-24.png"></p:graphicImage>
						<p:outputLabel value="#{routeBackingBean.errorMsg}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						process="frmerrorMsge" value="OK" onclick="PF('errorMsge').hide()">
					</p:commandButton>

				</center>
			</h:form>
		</p:dialog>

	</ui:define>
</ui:composition>
