		<div class="mainDiv">
			<h1
				style="margin-top: 0%; text-align: center; center; color: #ffffff; background-color: #404d6f !important;"
				class="common_form_header">Assign Bus Routes To Terminal Blocks</h1>

			<div style="width: 95%;" class="subDiv">
				<h:form id="frmAssignBusRoutesToBlock"
					style="background-color :#f1f1f1;">
					<p:spacer height="10px"></p:spacer>

					<p:panelGrid columns="4"
						columnClasses="ui-grid-col-2,ui-grid-col-3,ui-grid-col-6,ui-grid-col-1"
						layout="grid">
						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Station"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:selectOneMenu id="mainStationCode"
								style="width:30%;font-size:12px !important" effect="fold"
								filter="true" filterMatchMode="contains"
								value="#{assignBusRoutesToBlockBackingBean.terminalBlockDetailsDTO.stationCode}">
								<p:ajax
									listener="#{assignBusRoutesToBlockBackingBean.onMainStationChange}"
									update="@form" />
								<f:selectItem itemLabel="-- Select Station Code --" itemValue="" />
								<f:selectItems
									value="#{assignBusRoutesToBlockBackingBean.mainStationDetailsList}"
									var="stationCodeList" itemValue="#{stationCodeList.code}"
									itemLabel="#{stationCodeList.code}" />
							</p:selectOneMenu>
							<p:spacer style="width:3%;" />
							<p:inputText style="width:30%;height:18px;" tabindex="4"
								readonly="true" id="smstationCodeName"
								value="#{assignBusRoutesToBlockBackingBean.mainStationDetailsDTO.description}">
							</p:inputText>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>

						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Terminal ID"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:selectOneMenu id="terminalCode"
								style="width:30%;font-size:12px !important" effect="fold"
								filter="true" filterMatchMode="contains"
								value="#{assignBusRoutesToBlockBackingBean.terminalBlockDetailsDTO.terminal}">
								<p:ajax
									listener="#{assignBusRoutesToBlockBackingBean.onTerminalChange}"
									update="@form" />
								<f:selectItem itemLabel="-- Select Terminal ID --" itemValue="" />
								<f:selectItems
									value="#{assignBusRoutesToBlockBackingBean.terminalList}"
									var="terminalList" />
							</p:selectOneMenu>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>

						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Platform ID"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:selectOneMenu id="platformCode"
								style="width:30%;font-size:12px !important" effect="fold"
								filter="true" filterMatchMode="contains"
								value="#{assignBusRoutesToBlockBackingBean.terminalBlockDetailsDTO.terminalDetailsId}">
								<p:ajax
									listener="#{assignBusRoutesToBlockBackingBean.onPlatformChange}"
									update="@form" />
								<f:selectItem itemLabel="-- Select Platform ID --" itemValue="" />
								<f:selectItems
									value="#{assignBusRoutesToBlockBackingBean.terminalDetailsDtoList}"
									var="terminalList" itemValue="#{terminalList.seq}"
									itemLabel="#{terminalList.platform}" />
							</p:selectOneMenu>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>

						<br></br>
					</p:panelGrid>

					<br></br>

					<center>
						<p:dataTable var="terminaltable" paginator="true" update="@form"
							style="width:98%;" selectionMode="single"
							selection="#{assignBusRoutesToBlockBackingBean.selectedTerminal}"
							rowKey="#{terminaltable.seq}" rows="5" id="singleDT"
							value="#{assignBusRoutesToBlockBackingBean.terminalDetailsDtoList}"
							paginatorTemplate="{CurrentPageReport} {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
							rowsPerPageTemplate="5,10,20,50,100" resizableColumns="false"
							liveResize="true" rowIndexVar="index">
							<p:ajax event="rowSelect"
								listener="#{assignBusRoutesToBlockBackingBean.selectPlatform}"
								update="@form" />
							<p:column headerText="" style="text-align:center;width:5%">
								<f:facet name=" header">
									<h:outputText value="index" />
								</f:facet>
								<h:outputText value="#{index + 1}"></h:outputText>
							</p:column>
							<p:column headerText="Seq" style="text-align:center;width:8%"
								visible="false">
								<h:outputText style="text-align:left;"
									value="#{terminaltable.seq}" visible="false" />
							</p:column>
							<p:column headerText="Terminal ID"
								style="text-align:center;width:15%">
								<h:outputText style="text-align:left;"
									value="#{terminaltable.terminal}" />
							</p:column>
							<p:column headerText="Platform ID"
								style="text-align:center;width:15%">
								<h:outputText style="text-align:left;"
									value="#{terminaltable.platform}" />
							</p:column>
							<p:column headerText="Block ID Start No"
								style="text-align:center;width:15%">
								<h:outputText style="text-align:left;"
									value="#{terminaltable.blockStartValue}" />
							</p:column>
							<p:column headerText="Block ID End No"
								style="text-align:center;width:15%">
								<h:outputText style="text-align:left;"
									value="#{terminaltable.blockEndValue}" />
							</p:column>

							<p:column headerText="" style="text-align:center;width:7%"
								rendered="false">
								<p:commandLink id="cmdbtnView"
									action="#{assignBusRoutesToBlockBackingBean.viewAction()}"
									update="@form">
									<f:setPropertyActionListener value="#{terminaltable}"
										target="#{assignBusRoutesToBlockBackingBean.selectedTerminal}" />
									<p:graphicImage library="images" name="view1.png"
										style="width:24px;height:24px;" title="select"></p:graphicImage>
								</p:commandLink>
							</p:column>
						</p:dataTable>
					</center>
					<br></br>
					<br></br>

					<p:panelGrid columns="4"
						columnClasses="ui-grid-col-2,ui-grid-col-3,ui-grid-col-6,ui-grid-col-1"
						layout="grid">
						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Block ID"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:selectOneMenu id="blockId"
								style="width: 55%; font-size:12px !important" effect="fold"
								filter="true" filterMatchMode="contains"
								value="#{assignBusRoutesToBlockBackingBean.blockSeq}">
								<p:ajax
									listener="#{assignBusRoutesToBlockBackingBean.onBlockChange}"
									update="@form" />
								<f:selectItem itemLabel="-- Select Block --" itemValue="" />
								<f:selectItems
									value="#{assignBusRoutesToBlockBackingBean.terminalBlockDetailsDtoList}"
									var="terminalList" itemValue="#{terminalList.seq}"
									itemLabel="#{terminalList.block}" />
							</p:selectOneMenu>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>

						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Route ID"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:selectOneMenu id="routeId"
								style="width:55%;font-size:12px !important" effect="fold"
								filter="true" filterMatchMode="contains"
								value="#{assignBusRoutesToBlockBackingBean.routeId}">
								<p:ajax update="@form" />
								<f:selectItem itemLabel="-- Select Route --" itemValue="" />
								<f:selectItems
									value="#{assignBusRoutesToBlockBackingBean.routeList}"
									var="routeList"
									itemLabel="#{routeList.routeNo}&#160;#{routeList.startFrom}-#{routeList.endAt}"
									itemValue="#{routeList.routeNo}" />
							</p:selectOneMenu>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>

						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Service Type"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:selectManyCheckbox id="cmbInput"
								value="#{assignBusRoutesToBlockBackingBean.selectedServiceTypes}"
								style="width:30%">
								<f:selectItems
									value="#{assignBusRoutesToBlockBackingBean.serviceTypeList}"
									var="serviceType" itemLabel="#{serviceType.description}"
									itemValue="#{serviceType.code}" />
							</p:selectManyCheckbox>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>
					</p:panelGrid>

					<center>
						<p:commandButton id="cmdbtnAdd" value="Save" class="mainActionbtn"
							actionListener="#{assignBusRoutesToBlockBackingBean.saveAssignedBusRoutes}"
							update="frmAssignBusRoutesToBlock"
							process="frmAssignBusRoutesToBlock">
						</p:commandButton>

						<p:commandButton styleClass="mainActionbtn" value="Clear"
							actionListener="#{assignBusRoutesToBlockBackingBean.clearFields}"
							update="frmAssignBusRoutesToBlock"
							process="frmAssignBusRoutesToBlock" id="cmdbtnAddClear"></p:commandButton>
					</center>
					<br></br>

					<center>
						<p:dataTable id="dtBlockRoute" widgetVar="blockroutewidget"
							update="@form" style="width:98%;" editable="true"
							var="blockRoute"
							value="#{assignBusRoutesToBlockBackingBean.blockRoutesDtoList}"
							paginator="true"
							paginatorTemplate="{CurrentPageReport} {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
							paginatorPosition="bottom" rowsPerPageTemplate="5,10,20,50,100"
							rows="20" resizableColumns="false" liveResize="true"
							rowIndexVar="index" emptyMessage="No route assigned">
							<f:facet name="header">

							</f:facet>

							<p:column headerText="" style="text-align:center;width:5%">
								<f:facet name=" header">
									<h:outputText value="index" />
								</f:facet>
								<h:outputText value="#{index + 1}"></h:outputText>
							</p:column>

							<p:ajax event="rowEdit"
								listener="#{assignBusRoutesToBlockBackingBean.onEditAssignedRoute}" />

							<p:column headerText="Block" style="text-align:center;width:10%">
								<h:outputText value="#{blockRoute.blockName}" />
							</p:column>

							<p:column headerText="Route ID : Description"
								sortBy="#{blockRoute.routeNo}" style="text-align:left;width:54%">
								<p:cellEditor>
									<f:facet name="output" style="align:left">
										<ui:repeat
											value="#{assignBusRoutesToBlockBackingBean.routeList}"
											var="routeList" varStatus="status">
											<h:outputText
												value="#{routeList.routeNo}&#160;:&#160;#{routeList.startFrom}-#{routeList.endAt}"
												rendered="#{blockRoute.routeNo eq routeList.routeNo}" />
										</ui:repeat>
									</f:facet>
									<f:facet name="input">
										<h:selectOneMenu value="#{blockRoute.routeNo}"
											style="width:100%">

											<f:selectItems
												value="#{assignBusRoutesToBlockBackingBean.routeList}"
												var="routeList"
												itemLabel="#{routeList.routeNo}&#160;:&#160;#{routeList.startFrom}-#{routeList.endAt}"
												itemValue="#{routeList.routeNo}" />
										</h:selectOneMenu>
									</f:facet>
								</p:cellEditor>
							</p:column>
							<p:column headerText="Service Type"
								sortBy="#{blockRoute.serviceTypeCode}"
								style="text-align:left;width:26%">
								<p:cellEditor id="col_service">
									<f:facet name="output">
										<ui:repeat
											value="#{assignBusRoutesToBlockBackingBean.serviceTypeList}"
											var="serviceType">
											<h:outputText value="#{serviceType.description}"
												rendered="#{(blockRoute.serviceTypeCode eq serviceType.code) and blockRoute.routeNo != null and blockRoute.routeNo !='' ?true :false}" />
										</ui:repeat>
									</f:facet>
									<f:facet name="input">
										<h:selectOneMenu value="#{blockRoute.serviceTypeCode}"
											style="width:100%;font-size:10px !important"
											rendered="#{blockRoute.routeNo != null and blockRoute.routeNo !='' ?true :false}">
											<f:selectItems
												value="#{assignBusRoutesToBlockBackingBean.serviceTypeList}"
												var="serviceType" itemLabel="#{serviceType.description}"
												itemValue="#{serviceType.code}" />
										</h:selectOneMenu>
									</f:facet>
								</p:cellEditor>
							</p:column>

							<p:column style="text-align:center;width:5%">
								<p:rowEditor />
							</p:column>

							<p:column style="text-align:center;width:5%">
								<p:commandLink
									action="#{complaintViewEditBackingBean.removeAssignedRoute}"
									update="dtBlockRoute">
									<i class="fa fa-trash fa-1x" />
									<f:setPropertyActionListener
										target="#{complaintViewEditBackingBean.deletingBlockRoute}"
										value="#{blockRoute}" />
								</p:commandLink>
							</p:column>
						</p:dataTable>

						<br></br>

						<p:dialog styleClass="" id="requiredField" global="true"
							modal="true" header="Error" width="30%" severity="info"
							widgetVar="requiredField" closeOnEscape="true" resizable="false">
							<h:form id="frmrequiredField">
								<center>
									<p:panelGrid columns="2" styleClass="ui-noborder">
										<p:graphicImage library="images" name="error-24.png"></p:graphicImage>
										<p:outputLabel
											value="#{assignBusRoutesToBlockBackingBean.errorMsg}"></p:outputLabel>

									</p:panelGrid>
									<br></br>
									<p:commandButton style="margin-top:10px;margin-bottom:10px"
										process="frmrequiredField" value="OK"
										onclick="PF('requiredField').hide()">
									</p:commandButton>

								</center>
							</h:form>
						</p:dialog>

						<p:dialog styleClass="" id="successSave" global="true"
							modal="true" header="Success" width="30%" severity="info"
							widgetVar="successSave" closeOnEscape="true" resizable="false">
							<h:form id="frmsuccessSave">
								<center>
									<p:panelGrid columns="2" styleClass="ui-noborder">
										<p:graphicImage library="images" name="success-24.png"></p:graphicImage>
										<p:outputLabel
											value="#{assignBusRoutesToBlockBackingBean.sucessMsg}"></p:outputLabel>

									</p:panelGrid>
									<br></br>
									<p:commandButton style="margin-top:10px;margin-bottom:10px"
										process="frmsuccessSave" value="OK"
										onclick="PF('successSave').hide()">
									</p:commandButton>

								</center>
							</h:form>
						</p:dialog>

					</center>
					<br></br>
					<br></br>
				</h:form>
			</div>

		</div>

	</ui:define>
</ui:composition>