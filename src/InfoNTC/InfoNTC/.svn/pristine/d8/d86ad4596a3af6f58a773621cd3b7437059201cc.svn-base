		<div class="mainDiv">
			<h1
				style="margin-top: 0%; text-align: center; color: #ffffff; background-color: #404d6f !important;"
				class="common_form_header">View Advanced Payment Voucher</h1>

			<div style="width: 95%;" class="subDiv">
				<h:form id="frmViewAdvancedPayment">
					<br></br>
					<p:panelGrid columns="4" id="gridOne"
						columnClasses="ui-grid-col-2,ui-grid-col-3,ui-grid-col-5,ui-grid-col-2"
						layout="grid">

						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Voucher No."></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:inputText id="voucherNo" placeholder="-- Enter Voucher No.--"
								readonly="#{viewAdvancePaymentVoucherBackingBean.showInquiryBackButton}"
								onkeyup="this.value=this.value.toUpperCase();"
								value="#{viewAdvancePaymentVoucherBackingBean.paymentVoucherDTO.voucherNo}"
								style="width:66%" maxlength="15">
								<p:ajax update="applicationNo"
									listener="#{viewAdvancePaymentVoucherBackingBean.completeAppNo}" />
										<p:keyFilter regEx="/[a-zA-Z0-9]/i" />
							</p:inputText>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>

						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Application No."></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:inputText id="applicationNo" readonly="true"
								value="#{viewAdvancePaymentVoucherBackingBean.paymentVoucherDTO.applicationNo}"
								style="width:66%" maxlength="15">
							</p:inputText>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<br />
					</p:panelGrid>
					<center>
						<p:commandButton id="cmdbtnSearch" value="Search"
							rendered="#{viewAdvancePaymentVoucherBackingBean.paymentInquiryMood}"
							class="mainActionbtn" update="@form" process="@form"
							action="#{viewAdvancePaymentVoucherBackingBean.searchDetails}">
						</p:commandButton>

						<p:commandButton styleClass="mainActionbtn" value="Clear"
							rendered="#{viewAdvancePaymentVoucherBackingBean.paymentInquiryMood}"
							update="@form" process="@form" id="cmdbtnAddClear"
							action="#{viewAdvancePaymentVoucherBackingBean.clearMain}"></p:commandButton>

					</center>
					<br />
					<center>
						<p:dataTable var="advancedPaymenttable" update="@form"
							style="width:88%;" id="dtPayment"
							value="#{viewAdvancePaymentVoucherBackingBean.paymentDetails}"
							resizableColumns="false" liveResize="false">

							<p:column headerText="Date" style="text-align:left;width:10%">
								<h:outputText style="text-align:left;"
									value="#{advancedPaymenttable.cratedDate}">
									<f:convertDateTime pattern="dd/MM/yyyy" />
								</h:outputText>
							</p:column>
							<p:column headerText="Details of Service or Items Provided"
								style="text-align:left;width:35%">
								<h:outputText style="text-align:left;"
									value="#{advancedPaymenttable.serviceDetails}" />
							</p:column>
							<p:column headerText="No. of Unit/ Rate"
								style="text-align:right;width:10%">
								<h:outputText style="text-align:right;"
									value="#{advancedPaymenttable.noofUnits}" />
							</p:column>
							<p:column headerText="Amount Rs."
								style="text-align:right;width:10%">
								<h:outputText style="text-align:right;"
									value="#{advancedPaymenttable.amount}">
									<f:convertNumber pattern="##,###.00" />
								</h:outputText>
							</p:column>
							<p:columnGroup type="footer">
								<p:row>
									<p:column colspan="3" style="text-align:right"
										footerText="Total Fee Rs." />
									<p:column style="text-align:right">
										<f:facet name="footer">
											<h:outputText
												value="#{viewAdvancePaymentVoucherBackingBean.totalfee}">
												<f:convertNumber pattern="##,###.00" />
											</h:outputText>
										</f:facet>
									</p:column>

								</p:row>
							</p:columnGroup>
						</p:dataTable>
						<br />
						<p:commandButton value="Back" class="mainActionbtn" id="btnBack"
							rendered="#{viewAdvancePaymentVoucherBackingBean.showInquiryBackButton}"
							action="#{viewNewPermitBackingBean.backToInquiry}"></p:commandButton>
					</center>
				</h:form>
			</div>
