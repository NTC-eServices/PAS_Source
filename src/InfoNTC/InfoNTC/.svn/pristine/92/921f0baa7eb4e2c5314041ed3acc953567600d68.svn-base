<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:p="http://primefaces.org/ui"
	xmlns:f="http://java.sun.com/jsf/core"
	template="/WEB-INF/template/template.xhtml">
	<ui:define name="metadata">
	</ui:define>
	<ui:define name="content">
		<style>
.ui-dialog .ui-dialog-titlebar {
	padding: .4em .4em .4em 1em;
	position: relative;
	background: #07295b !important;
	padding: 5px 5px 5px 5px;
	margin: 0px 0px 0px 0px;
	color: #ffffff;
}

.ui-panelgrid .ui-panelgrid-cell {
	background-color: #f1f1f1;
}

.ui-icon.ui-confirm-dialog-severity {
	background-position: 0 0 !important;
	background-image: none !important;
}

.colorHighlight {
	background: yellow !important;
}

.ui-dialog .ui-widget .ui-widget-content .ui-corner-all .ui-shadow .ui-hidden-container .ui-draggable
	{
	width: 50%;
}

.firstColumn {
	width: 100%;
}

.secondColumn {
	width: 100%;
}

.dashboardNRResendDocRecord {
	background-color: #16e5d7 !important;
}

.ui-state-default a, .ui-state-default a:link, .ui-state-default a:visited
	{
	color: #07295b;
}

.mainDiv {
	width: 99%;
	height: auto;
	border-left: solid;
	border-right: solid;
	border-bottom: solid;
	border-top: solid;
	border-color: #07295b;
	border-width: 1px;
	margin-left: 5px;
	margin-top: 5px;
	margin-bottom: 5px;
	/*background-image: linear-gradient(to right bottom, #d9ddfa, #ccd4fb, #bdcafc, #aec2fe,
		#9cb9ff);*/
	background-image: linear-gradient(to right bottom, #f1f1f1, #dfdfe4, #f1f1f1, #e9eaeb,
		#bbb5b5);
}

.ui-inputfield, .ui-widget-content .ui-inputfield, .ui-widget-header .ui-inputfield
	{
	color: #07295b;
}

.mainLinkButton {
	font-weight: bold;
	background: #2571fa !important;
	text-align: center;
	padding: 7px 25px 7px 25px !important;
	height: 35px !important;
	text-decoration: none !important;
	color: white !important;
	white-space: nowrap !important;
	border-radius: 5px !important;
}

.mainLinkButton:hover {
	background: #fba026 !important;
}

.otherLinkButton {
	font-weight: bold;
	background: #296807 !important;
	text-align: center;
	padding: 7px 25px 7px 25px !important;
	height: 35px !important;
	text-decoration: none !important;
	color: white !important;
	white-space: nowrap !important;
	border-radius: 5px !important;
}

.otherLinkButton:hover {
	background: #fba026 !important;
}

.mainActionbtn {
	font-weight: bold;
	background: #2571fa !important;
	height: 30px !important;
	border-radius: 5px !important;
	color: white !important;
	text-align: center;
	width: 80px;
	white-space: nowrap !important;
	-webkit-transition: background-color 0.3s ease-out;
	-moz-transition: background-color 0.3s ease-out;
	-o-transition: background-color 0.3s ease-out;
	transition: background-color 0.3s ease-out;
}

.mainActionbtn:hover {
	background: #fba026 !important;
}

.OthActionbtn {
	font-weight: bold;
	background: #296807 !important;
	height: 30px !important;
	border-radius: 5px !important;
	color: white !important;
	text-align: center;
	width: 80px;
	white-space: nowrap !important;
	-webkit-transition: background-color 0.3s ease-out;
	-moz-transition: background-color 0.3s ease-out;
	-o-transition: background-color 0.3s ease-out;
	transition: background-color 0.3s ease-out;
	margin-bottom: 5px;
}

.OthActionbtn:hover {
	background: #fba026 !important;
}

.subDiv {
	margin: 0 auto;
	background: rgb(254, 255, 255); /* Old browsers */
	background: -moz-linear-gradient(-45deg, rgba(254, 255, 255, 1) 0%,
		rgba(210, 235, 249, 1) 100%); /* FF3.6-15 */
	background: -webkit-linear-gradient(-45deg, rgba(254, 255, 255, 1) 0%,
		rgba(210, 235, 249, 1) 100%); /* Chrome10-25,Safari5.1-6 */
	background: linear-gradient(135deg, rgba(254, 255, 255, 1) 0%,
		rgba(210, 235, 249, 1) 100%);
	/* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#feffff',
		endColorstr='#d2ebf9', GradientType=1);
	/* IE6-9 fallback on horizontal gradient */
}
</style>

		<div class="mainDiv">
			<h1
				style="margin-top: 0%; text-align: center; center; color: #ffffff; background-color: #404d6f !important;"
				class="common_form_header">Manage Terminal Blocks</h1>

			<div style="width: 95%;" class="subDiv">
				<br />
				<h:form id="frmCreateBusTerminalBlocks"
					style="background-color :#f1f1f1;">
					<p:panelGrid columns="4"
						columnClasses="ui-grid-col-2,ui-grid-col-3,ui-grid-col-6,ui-grid-col-1"
						layout="grid">
						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Station"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:selectOneMenu id="mainStationCode"
								style="width:30%;font-size:12px !important" effect="fold"
								filter="true" filterMatchMode="contains"
								value="#{createBusTerminalBlockBackingBean.terminalBlockDetailsDTO.stationCode}">
								<p:ajax
									listener="#{createBusTerminalBlockBackingBean.onMainStationChange}"
									update="@form" />
								<f:selectItem itemLabel="-- Select Station Code --" itemValue="" />
								<f:selectItems
									value="#{createBusTerminalBlockBackingBean.mainStationDetailsList}"
									var="stationCodeList" itemValue="#{stationCodeList.code}"
									itemLabel="#{stationCodeList.code}" />
							</p:selectOneMenu>
							<p:spacer style="width:3%;" />
							<p:inputText style="width:30%;height:18px;" tabindex="4"
								readonly="true" id="smstationCodeName"
								value="#{createBusTerminalBlockBackingBean.mainStationDetailsDTO.description}">
							</p:inputText>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>

						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Terminal ID"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:selectOneMenu id="terminalCode"
								style="width:30%;font-size:12px !important" effect="fold"
								filter="true" filterMatchMode="contains"
								value="#{createBusTerminalBlockBackingBean.terminalBlockDetailsDTO.terminal}">
								<p:ajax
									listener="#{createBusTerminalBlockBackingBean.onTerminalChange}"
									update="@form" />
								<f:selectItem itemLabel="-- Select Terminal ID --" itemValue="" />
								<f:selectItems
									value="#{createBusTerminalBlockBackingBean.terminalList}"
									var="terminalList" />
							</p:selectOneMenu>

						</p:panelGrid>
						<p:panelGrid></p:panelGrid>

						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Platform ID"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:selectOneMenu id="platformCode"
								style="width:30%;font-size:12px !important" effect="fold"
								filter="true" filterMatchMode="contains"
								value="#{createBusTerminalBlockBackingBean.terminalBlockDetailsDTO.terminalDetailsId}">
								<p:ajax
									listener="#{createBusTerminalBlockBackingBean.onPlatformChange}"
									update="@form" />
								<f:selectItem itemLabel="-- Select Platform ID --" itemValue="" />
								<f:selectItems
									value="#{createBusTerminalBlockBackingBean.terminalDetailsDtoList}"
									var="terminalList" itemValue="#{terminalList.seq}"
									itemLabel="#{terminalList.platform}" />
							</p:selectOneMenu>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>

						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="No. of Blocks"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:inputText style="width:20%;height:18px;" tabindex="2"
								maxlength="2" id="smBlocksRequired"
								value="#{createBusTerminalBlockBackingBean.terminalBlockDetailsDTO.noOfBlocks}">
								<p:keyFilter regEx="/[\d.]/i" />
								<p:ajax update="smBlocksRequired" />
							</p:inputText>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>

						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Block ID / Start With"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:selectOneRadio
								style="width:48%;height:18px;font-size:12px !important"
								id="blockIdPattern"
								value="#{createBusTerminalBlockBackingBean.terminalBlockDetailsDTO.blockDisplayType}">
								<f:selectItem itemLabel="Numeric" itemValue="N" />
								<f:selectItem itemLabel="Alphabetic" itemValue="A" />
								<p:ajax update="smBlockStartWith"
									listener="#{createBusTerminalBlockBackingBean.onBlockRadioChange()}" />
							</p:selectOneRadio>
							<p:inputText style="width:20%;height:18px;" tabindex="4"
								maxlength="1" onkeyup="this.value=this.value.toUpperCase();"
								id="smBlockStartWith"
								value="#{createBusTerminalBlockBackingBean.terminalBlockDetailsDTO.blockIdStartWith}">
								<p:keyFilter
									regEx="#{createBusTerminalBlockBackingBean.strBlockStatusRegex}" />
								<p:ajax update="smBlockStartWith" />
							</p:inputText>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>

						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Status"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:selectOneMenu id="smBlockStatus" style="width:20%;"
								tabindex="8"
								value="#{createBusTerminalBlockBackingBean.terminalBlockDetailsDTO.status}">
								<f:selectItem itemLabel="Active" itemValue="A" />
								<f:selectItem itemLabel="Inactive" itemValue="I" />
							</p:selectOneMenu>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>

						<br></br>
					</p:panelGrid>
					<center>
						<p:commandButton id="cmdbtnAdd" value="Generate"
							class="mainActionbtn" update="frmCreateBusTerminalBlocks"
							actionListener="#{createBusTerminalBlockBackingBean.generateBlocks}"
							process="frmCreateBusTerminalBlocks">
						</p:commandButton>


						<p:commandButton styleClass="mainActionbtn" value="Clear"
							update="frmCreateBusTerminalBlocks"
							process="frmCreateBusTerminalBlocks" id="cmdbtnAddClear"
							actionListener="#{createBusTerminalBlockBackingBean.clearDetails}"></p:commandButton>
					</center>
					<br></br>

					<center>
						<p:dataTable var="terminaltable" paginator="true" update="@form"
							style="width:98%;" selectionMode="single"
							selection="#{createBusTerminalBlockBackingBean.selectedTerminal}"
							rowKey="#{terminaltable.seq}" rows="5" id="singleDT"
							value="#{createBusTerminalBlockBackingBean.terminalDetailsDtoList}"
							paginatorTemplate="{CurrentPageReport} {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
							rowsPerPageTemplate="5,10,20,50,100" resizableColumns="false"
							liveResize="true" rowIndexVar="index">
							<p:ajax event="rowSelect"
								listener="#{createBusTerminalBlockBackingBean.viewAction()}"
								update="@form" />
							<p:column headerText="" style="text-align:center;width:5%">
								<f:facet name=" header">
									<h:outputText value="index" />
								</f:facet>
								<h:outputText value="#{index + 1}"></h:outputText>
							</p:column>
							<p:column headerText="Seq" style="text-align:center;width:8%"
								visible="false">
								<h:outputText style="text-align:left;"
									value="#{terminaltable.seq}" visible="false" />
							</p:column>
							<p:column headerText="Terminal ID"
								style="text-align:center;width:15%">
								<h:outputText style="text-align:left;"
									value="#{terminaltable.terminal}" />
							</p:column>
							<p:column headerText="Platform ID"
								style="text-align:center;width:15%">
								<h:outputText style="text-align:left;"
									value="#{terminaltable.platform}" />
							</p:column>

							<p:column headerText="" style="text-align:center;width:7%">
								<p:commandLink id="cmdbtnView"
									action="#{createBusTerminalBlockBackingBean.viewAction()}"
									update="@form">
									<f:setPropertyActionListener value="#{terminaltable}"
										target="#{createBusTerminalBlockBackingBean.selectedTerminal}" />
									<p:graphicImage library="images" name="view1.png"
										style="width:24px;height:24px;" title="view"></p:graphicImage>
								</p:commandLink>
							</p:column>
						</p:dataTable>
					</center>
					<br></br>
					<br></br>
					<center>

						<p:dataTable var="terminalBlock" paginator="true" update="@form"
							style="width:98%;" editable="true" rows="5" id="busTerminalBlock"
							value="#{createBusTerminalBlockBackingBean.terminalBlockDetailsDtoList}"
							paginatorTemplate="{CurrentPageReport} {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
							rowsPerPageTemplate="5,10,20,50,100" resizableColumns="false"
							liveResize="true" rowIndexVar="index">
							<p:column headerText="" style="text-align:center;width:5%">
								<f:facet name=" header">
									<h:outputText value="index" />
								</f:facet>
								<h:outputText value="#{index + 1}"></h:outputText>
							</p:column>

							<p:ajax event="rowEdit"
								listener="#{createBusTerminalBlockBackingBean.onEditStatus}"
								update="frmCreateBusTerminalBlocks:busTerminalBlock" />

							<p:column headerText="Seq" style="text-align:center;width:15%"
								visible="false">
								<p:cellEditor>
									<f:facet name="output">
										<h:outputText value="#{terminalBlock.seq}" />
									</f:facet>
									<f:facet name="input">
										<p:inputText value="#{terminalBlock.seq}" style="width:100%"
											label="Year" disabled="true" />
									</f:facet>
								</p:cellEditor>
							</p:column>

							<p:column headerText="Block ID"
								style="text-align:center;width:15%">
								<p:cellEditor>
									<f:facet name="output">
										<h:outputText value="#{terminalBlock.block}" />
									</f:facet>
									<f:facet name="input">
										<p:inputText value="#{terminalBlock.block}" style="width:100%"
											label="Year" disabled="true" />
									</f:facet>
								</p:cellEditor>
							</p:column>

							<p:column headerText="Status" style="text-align:center;width:15%">
								<p:cellEditor>
									<f:facet name="output">
										<h:outputText value="#{terminalBlock.status}" />
									</f:facet>
									<f:facet name="input">
										<h:selectOneMenu value="#{terminalBlock.status}"
											style="width:100%">
											<f:selectItem itemLabel="Active" itemValue="Active" />
											<f:selectItem itemLabel="Inactive" itemValue="Inactive" />
										</h:selectOneMenu>
									</f:facet>
								</p:cellEditor>
							</p:column>

							<p:column style="text-align:center;width:6%">
								<p:rowEditor />
							</p:column>
							<p:column headerText="" style="text-align:center;width:6%">
								<p:commandLink id="cmdbtnDelete"
									action="#{createBusTerminalBlockBackingBean.deleteBusTerminalBlockAction}"
									update="@form">
									<f:setPropertyActionListener value="#{terminalBlock}"
										target="#{createBusTerminalBlockBackingBean.deleteTerminalBlockDetailsDTO}" />
									<p:graphicImage library="images" name="delete.png"
										style="width:18px;height:18px;" title="delete"></p:graphicImage>
								</p:commandLink>
							</p:column>
						</p:dataTable>

						<p:dialog styleClass="" id="requiredField" global="true"
							modal="true" header="Error" width="30%" severity="info"
							widgetVar="requiredField" closeOnEscape="true" resizable="false">
							<h:form id="frmrequiredField">
								<center>
									<p:panelGrid columns="2" styleClass="ui-noborder">
										<p:graphicImage library="images" name="error-24.png"></p:graphicImage>
										<p:outputLabel
											value="#{createBusTerminalBlockBackingBean.errorMsg}"></p:outputLabel>

									</p:panelGrid>
									<br></br>
									<p:commandButton style="margin-top:10px;margin-bottom:10px"
										process="frmrequiredField" value="OK"
										onclick="PF('requiredField').hide()">
									</p:commandButton>

								</center>
							</h:form>
						</p:dialog>

						<p:dialog styleClass="" id="successSave" global="true"
							modal="true" header="Success" width="30%" severity="info"
							widgetVar="successSave" closeOnEscape="true" resizable="false">
							<h:form id="frmsuccessSave">
								<center>
									<p:panelGrid columns="2" styleClass="ui-noborder">
										<p:graphicImage library="images" name="success-24.png"></p:graphicImage>
										<p:outputLabel
											value="#{createBusTerminalBlockBackingBean.sucessMsg}"></p:outputLabel>

									</p:panelGrid>
									<br></br>
									<p:commandButton style="margin-top:10px;margin-bottom:10px"
										process="frmsuccessSave" value="OK"
										onclick="PF('successSave').hide()">
									</p:commandButton>

								</center>
							</h:form>
						</p:dialog>

						<p:dialog styleClass="" id="deleteconfirmationTerminal"
							global="true" modal="true" header="Warning" width="30%"
							severity="info" widgetVar="deleteconfirmationTerminal"
							closeOnEscape="true" resizable="false">
							<h:form id="frmDeleteconfirmationTerminal">
								<center>
									<p:panelGrid columns="2" styleClass="ui-noborder">
										<p:graphicImage library="images" name="warning.png"></p:graphicImage>
										<p:outputLabel value="Do you want to delete this record ?"></p:outputLabel>
									</p:panelGrid>
									<br></br>
									<p:commandButton id="yes" value="Yes"
										actionListener="#{createBusTerminalBlockBackingBean.removeAction}"
										ajax="true" process="frmDeleteconfirmationTerminal"
										onclick="PF('deleteconfirmationTerminal').hide()"></p:commandButton>
									<p:commandButton style="margin-top:10px;margin-bottom:10px"
										process="frmDeleteconfirmationTerminal" value="No"
										onclick="PF('deleteconfirmationTerminal').hide()">
									</p:commandButton>

								</center>
							</h:form>
						</p:dialog>

					</center>
					<br></br>
					<br></br>
				</h:form>
			</div>

		</div>



	</ui:define>
</ui:composition>