								</p:column>

							</p:dataTable> -->
						</center>
					</p:panel>

					<p:panel id="btnPanel">
						<center>

							<!-- Save button -->
							<p:commandButton styleClass="mainActionbtn" value="Save"
								update="frmDriConReg"
								rendered="#{driverConductorSetupTempPeriodBean.renderSaveButton}"
								action="#{driverConductorSetupTempPeriodBean.saveTempPeriodData}"></p:commandButton>
							<!-- Update button -->
							<p:commandButton styleClass="mainActionbtn" value="Update"
								update="frmDriConReg"
								rendered="#{driverConductorSetupTempPeriodBean.renderUpdateButton}"
								action="#{driverConductorSetupTempPeriodBean.updateDates}"></p:commandButton>
							<!-- Cancel button -->
							<p:commandButton styleClass="mainActionbtn" value="Clear"
								update="frmDriConReg"
								action="#{driverConductorSetupTempPeriodBean.clearGrid}"></p:commandButton>

						</center>
