								<p:column selectionMode="multiple"
									style="width:16px;text-align:center">
									
									</p:column>

									<p:column headerText="Application No."
										style="text-align:left;width:15%;">
										<h:outputText style="text-align:left;" value="#{log.appNo}" />
									</p:column>

									<p:column headerText="NIC ID"
										style="text-align:left;width:15%;">
										<h:outputText style="text-align:left;" value="#{log.nic}" />
									</p:column>

									<p:column headerText="Driver/Conductor ID"
										style="text-align:left;width:15%;">
										<h:outputText style="text-align:left;"
											value="#{log.driverConductorId}" />
									</p:column>

									<p:column headerText="Full Name"
										style="text-align:left;width:20%;">
										<h:outputText value="#{log.fullName}" />
									</p:column>

									


									<p:column headerText="From Date"
										style="text-align:left;width:20%;">

										<p:calendar id="modelInput" styleClass="dateTimeField"
