											value="#{log.fromDate}" showOn="button" pattern="dd/MM/yyyy"
											placeholder="DD/MM/YYYY" />

									</p:column>
									<p:column headerText="To Date"
										style="text-align:left;width:20%;">

										<p:calendar id="toModelInput" styleClass="dateTimeField"
											navigator="true" 
											value="#{log.toDate}" showOn="button" pattern="dd/MM/yyyy"
											placeholder="DD/MM/YYYY" />

									</p:column>
							</p:dataTable>



