							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Type of Training"></p:outputLabel>
								<p:outputLabel value="*" style="color:red;"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:selectOneMenu id="typeOfTrainingselect" tabindex="1"
									style="width:50%; "
									value="#{driverConductorSetupTempPeriodBean.strSelectedType}"
									effect="fold" filter="true" filterMatchMode="contains">
									<p:ajax
										listener="#{driverConductorSetupTempPeriodBean.onTrainingTypeChange}"
										update="selectID,selectDCID" />
									<f:selectItem itemLabel="-- Select Training Type --"
										itemValue="" />
									<f:selectItems
										value="#{driverConductorSetupTempPeriodBean.trainingTypeList}"
										var="type" itemValue="#{type.code}"
										itemLabel="#{type.description}" />
								</p:selectOneMenu>

							</p:panelGrid>
							<p:panelGrid></p:panelGrid>


							<p:panelGrid></p:panelGrid>

							<p:panelGrid>
								<p:outputLabel value="NIC No.">
								</p:outputLabel>
								<p:outputLabel value="*" style="color:red;"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:selectOneMenu id="selectID" tabindex="2" style="width:50%; "
									value="#{driverConductorSetupTempPeriodBean.strSelectedNic}"
									effect="fold" filter="true" filterMatchMode="contains">
									<p:ajax
										listener="#{driverConductorSetupTempPeriodBean.onIDNoChange}"
										update="selectDCID,fullName" />
									<f:selectItem itemLabel="-- Select ID No. --" itemValue="" />
									<f:selectItems
										value="#{driverConductorSetupTempPeriodBean.idNoList}"
										var="idlist" itemValue="#{idlist.code}"
										itemLabel="#{idlist.code}" />
								</p:selectOneMenu>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>


							<p:panelGrid></p:panelGrid>

							<p:panelGrid>
								<p:outputLabel value="Driver/Conductor ID">

								</p:outputLabel>
							</p:panelGrid>

							<p:panelGrid>
								<p:selectOneMenu id="selectDCID" tabindex="3"
									style="width:50%; "
									value="#{driverConductorSetupTempPeriodBean.strSelectedID}"
									effect="fold" filter="true" filterMatchMode="contains"
									disabled="#{driverConductorSetupTempPeriodBean.disableDCId}">
									<f:selectItem itemLabel="-- Select Driver/Conductor ID --"
										itemValue="" />
									<f:selectItems
										value="#{driverConductorSetupTempPeriodBean.driverConList}"
										var="dclist" itemValue="#{dclist.code}"
										itemLabel="#{dclist.code}" />
									<p:ajax
										listener="#{driverConductorSetupTempPeriodBean.onDCIDNoChange}"
										update="frmDriConReg,fullName" />
								</p:selectOneMenu>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>


							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Full Name"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:inputText id="fullName" readonly="true"
									value="#{driverConductorSetupTempPeriodBean.strName}"
									style="width:100%;">
								</p:inputText>

							</p:panelGrid>
							<p:panelGrid></p:panelGrid>

						</p:panelGrid>

						<br />

						<center>
							<!-- Search button -->
							<p:commandButton styleClass="mainActionbtn" value="Search"
								update="frmDriConReg"
								action="#{driverConductorSetupTempPeriodBean.searchData}"></p:commandButton>
							<!-- Clear button -->
							<p:commandButton styleClass="mainActionbtn" value="Clear"
								update="frmDriConReg"
								action="#{driverConductorSetupTempPeriodBean.clear}"></p:commandButton>

						</center>
					</p:panel>


