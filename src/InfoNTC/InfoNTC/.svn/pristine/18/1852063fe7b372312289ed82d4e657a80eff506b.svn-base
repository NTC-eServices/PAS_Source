<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:p="http://primefaces.org/ui"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:f="http://java.sun.com/jsf/core"
	template="/WEB-INF/template/template.xhtml">
	<ui:define name="metadata">
	</ui:define>

	<ui:define name="content">

		<style>
.dateTimeField input {
	width: 100px;
}

.dateTimeField img {
	vertical-align: right;
}

.ui-dialog .ui-dialog-titlebar {
	padding: .4em .4em .4em 1em;
	position: relative;
	background: #07295b !important;
	padding: 5px 5px 5px 5px;
	margin: 0px 0px 0px 0px;
	color: #ffffff;
}

.ui-panelgrid .ui-panelgrid-cell {
	background-color: #f1f1f1;
}

.ui-icon.ui-confirm-dialog-severity {
	background-position: 0 0 !important;
	background-image: none !important;
}

.colorHighlight {
	background: yellow !important;
}

.ui-dialog .ui-widget .ui-widget-content .ui-corner-all .ui-shadow .ui-hidden-container .ui-draggable
	{
	width: 50%;
}

.firstColumn {
	width: 100%;
}

.secondColumn {
	width: 100%;
}

.dashboardNRResendDocRecord {
	background-color: #16e5d7 !important;
}

.ui-state-default a, .ui-state-default a:link, .ui-state-default a:visited
	{
	color: #07295b;
}

.mainDiv {
	width: 99%;
	height: auto;
	border-left: solid;
	border-right: solid;
	border-bottom: solid;
	border-top: solid;
	border-color: #07295b;
	border-width: 1px;
	margin-left: 5px;
	margin-top: 5px;
	margin-bottom: 5px;
	/*background-image: linear-gradient(to right bottom, #d9ddfa, #ccd4fb, #bdcafc, #aec2fe,
		#9cb9ff);*/
	background-image: linear-gradient(to right bottom, #f1f1f1, #dfdfe4, #f1f1f1, #e9eaeb,
		#bbb5b5);
}

.ui-inputfield, .ui-widget-content .ui-inputfield, .ui-widget-header .ui-inputfield
	{
	color: #07295b;
}

.mainLinkButton {
	font-weight: bold;
	background: #2571fa !important;
	text-align: center;
	padding: 7px 25px 7px 25px !important;
	height: 35px !important;
	text-decoration: none !important;
	color: white !important;
	white-space: nowrap !important;
	border-radius: 5px !important;
}

.mainLinkButton:hover {
	background: #fba026 !important;
}

.otherLinkButton {
	font-weight: bold;
	background: #296807 !important;
	text-align: center;
	padding: 7px 25px 7px 25px !important;
	height: 35px !important;
	text-decoration: none !important;
	color: white !important;
	white-space: nowrap !important;
	border-radius: 5px !important;
}

.otherLinkButton:hover {
	background: #fba026 !important;
}

.mainActionbtn {
	font-weight: bold;
	background: #2571fa !important;
	height: 30px !important;
	border-radius: 5px !important;
	color: white !important;
	text-align: center;
	width: 80px;
	white-space: nowrap !important;
	-webkit-transition: background-color 0.3s ease-out;
	-moz-transition: background-color 0.3s ease-out;
	-o-transition: background-color 0.3s ease-out;
	transition: background-color 0.3s ease-out;
}

.mainActionbtn:hover {
	background: #fba026 !important;
}

.OthActionbtn {
	font-weight: bold;
	background: #296807 !important;
	height: 30px !important;
	border-radius: 5px !important;
	color: white !important;
	text-align: center;
	width: 80px;
	white-space: nowrap !important;
	-webkit-transition: background-color 0.3s ease-out;
	-moz-transition: background-color 0.3s ease-out;
	-o-transition: background-color 0.3s ease-out;
	transition: background-color 0.3s ease-out;
	margin-bottom: 5px;
}

.OthActionbtn:hover {
	background: #fba026 !important;
}

.subDiv {
	margin: 0 auto;
	background: rgb(254, 255, 255); /* Old browsers */
	background: -moz-linear-gradient(-45deg, rgba(254, 255, 255, 1) 0%,
		rgba(210, 235, 249, 1) 100%); /* FF3.6-15 */
	background: -webkit-linear-gradient(-45deg, rgba(254, 255, 255, 1) 0%,
		rgba(210, 235, 249, 1) 100%); /* Chrome10-25,Safari5.1-6 */
	background: linear-gradient(135deg, rgba(254, 255, 255, 1) 0%,
		rgba(210, 235, 249, 1) 100%);
	/* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#feffff',
		endColorstr='#d2ebf9', GradientType=1);
	/* IE6-9 fallback on horizontal gradient */
}

.ui-input {
	margin-top: -20px;
}
</style>



		<h:form id="form">
			<div class="mainDiv">
				<h1
					style="margin-top: 0%; text-align: center; color: #ffffff; background-color: #404d6f !important;"
					class="common_form_header">Issue Log Sheets</h1>
				<div style="width: 90%;" class="subDiv">


					<p:panel id="panelOne">

						<p:panelGrid columns="4" style="margin-left:50px"
							columnClasses="ui-grid-col-2,ui-grid-col-4,ui-grid-col-4,ui-grid-col-2"
							layout="grid">

							<p:panelGrid></p:panelGrid>

							<p:panelGrid>
								<p:outputLabel value="Service Type"></p:outputLabel>
								<p:outputLabel value="*" style="color:red;"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>

								<p:selectOneMenu id="serType" style="width:68%"
									onkeyup="this.value=this.value.toUpperCase();"
									value="#{issueLogSheetsBackingBean.sisuSeriyaDTO.serviceTypeCode}"
									filter="true" filterMatchMode="contains" tabindex="1">

									<p:ajax listener="#{issueLogSheetsBackingBean.ajaxselectType}"
										update="@form" />

									<f:selectItem itemLabel="-- Select Service Type --"
										itemValue="" />
									<f:selectItems
										value="#{issueLogSheetsBackingBean.getServiceTypeList}"
										var="d" itemLabel="#{d.serviceDescription}"
										itemValue="#{d.serviceCode}" />
								</p:selectOneMenu>

							</p:panelGrid>
							<p:panelGrid></p:panelGrid>

							<!-- Operator/Depo Name Start -->
							
							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel>Operator/Depo Name</p:outputLabel>
								<!-- <p:outputLabel value="*" style="color:red;"></p:outputLabel> -->
							</p:panelGrid>
							<p:panelGrid>
								<p:selectOneMenu id="operatorDepoName" style="width:68%;"
									effect="fold"
									value="#{issueLogSheetsBackingBean.sisuSeriyaDTO.nameOfOperator}"
									filter="true" filterMatchMode="contains">
									<f:selectItem itemLabel="-- Select Operator/Depo Name --"
										itemValue="" />
									<f:selectItems
										value="#{issueLogSheetsBackingBean.operatorDepoNameList}"
										var="list" itemValue="#{list.nameOfOperator}"
										itemLabel="#{list.nameOfOperator}" />
									<p:ajax
										listener="#{issueLogSheetsBackingBean.onSelectOperatorDepoName}"
										update="@form" />
								</p:selectOneMenu>

							</p:panelGrid>
							<p:panelGrid></p:panelGrid>
							<!-- Operator/Depo Name End -->

							<!-- Bus No. Start -->
							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel>Bus No.</p:outputLabel>
								<!-- <p:outputLabel value="*" style="color:red;"></p:outputLabel> -->
							</p:panelGrid>
							<p:panelGrid>
								<p:selectOneMenu id="busNo" style="width:68%;" effect="fold"
									value="#{issueLogSheetsBackingBean.sisuSeriyaDTO.busRegNo}"
									filter="true" filterMatchMode="contains">
									<f:selectItem itemLabel="-- Select Bus No. --" itemValue="" />
									<f:selectItems value="#{issueLogSheetsBackingBean.busNoList}"
										var="list" itemValue="#{list.busRegNo}"
										itemLabel="#{list.busRegNo}" />
									<p:ajax listener="#{issueLogSheetsBackingBean.onSelectBusNo}"
										update="@form" />
								</p:selectOneMenu>

							</p:panelGrid>
							<p:panelGrid></p:panelGrid>
							<!-- Bus No. End -->
							
							<p:panelGrid></p:panelGrid>
								<p:panelGrid>
								<p:outputLabel value="Service No./Service Agreement No."></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
							
							<p:selectOneMenu id="drpd-serviceNo" style="width:68%;"
								effect="fold"
								value="#{issueLogSheetsBackingBean.sisuSeriyaDTO.serviceNo}"
								filter="true" filterMatchMode="contains"
								disabled="#{issueLogSheetsBackingBean.disabledServiceRefNoMenu}">
								<f:selectItem itemLabel="-- Select Service No. --" itemValue="" />
								<f:selectItems value="#{issueLogSheetsBackingBean.drpdServiceNoList}"
									var="seriveNoList" itemValue="#{seriveNoList.serviceNo}"
									itemLabel="#{seriveNoList.serviceNo}" />
								<p:ajax listener="#{issueLogSheetsBackingBean.onServiceNoChange}"
									process="@form" update="@form" />
							</p:selectOneMenu>
							
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>

							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Service Reference No."></p:outputLabel>
								<p:outputLabel value="*" style="color:red;"></p:outputLabel>
							</p:panelGrid>

							<p:panelGrid>
								<p:selectOneMenu id="refNo" style="width:68%"
									onkeyup="this.value=this.value.toUpperCase();"
									value="#{issueLogSheetsBackingBean.sisuSeriyaDTO.serviceRefNo}"
									filter="true" filterMatchMode="contains" tabindex="1"
									placeholder="-- Select Service Ref. No. --"
									disabled="#{issueLogSheetsBackingBean.disabledServiceRefNoMenu}">

									<f:selectItem itemLabel="-- Select Service Ref. No. --"
										itemValue="" />
									<f:selectItems
										value="#{issueLogSheetsBackingBean.getServiceReferenceNoList}"
										var="d" itemLabel="#{d.serviceRefNo}"
										itemValue="#{d.serviceRefNo}" />
										<p:ajax listener="#{issueLogSheetsBackingBean.onSelectReferenceNumber}"
											update="logYear,frmsuccess,frmError,frmAlert" />
								</p:selectOneMenu>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>


							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Year"></p:outputLabel>
								<p:outputLabel value="*" style="color:red;"></p:outputLabel>
							</p:panelGrid>

							<p:panelGrid>
								<p:inputText style="width:68%;height:18px;" id="logYear"
									value="#{issueLogSheetsBackingBean.logSheetYear}"
									padControl="false" maxlength="4" maxValue="9999"
									onkeyup="this.value=this.value.toUpperCase();">
									<p:keyFilter regEx="/[\d]/i" />
									<p:ajax update="logYear,frmsuccess,frmError,frmAlert"
										listener="#{issueLogSheetsBackingBean.yearValidator}" />
								</p:inputText>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>

							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="No. of Copies"></p:outputLabel>
								<p:outputLabel value="*" style="color:red;"></p:outputLabel>
							</p:panelGrid>

							<p:panelGrid>
								<p:inputText style="width:68%;height:18px;"
									value="#{issueLogSheetsBackingBean.logSheetCopies}"
									onkeyup="this.value=this.value.toUpperCase();">
								</p:inputText>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>

						</p:panelGrid>

						<br />

						<center>
							<p:commandButton value="Generate" styleClass="mainActionbtn"
								rendered="#{issueLogSheetsBackingBean.renderGenerate}"
								id="cmdBtnGenerateLog"
								action="#{issueLogSheetsBackingBean.generateLogSheetRef}"
								update="frmsuccess,frmError,frmAlert,@form" />

							<p:commandButton value="Search" styleClass="mainActionbtn"
								id="cmdBtnSearchLog"
								action="#{issueLogSheetsBackingBean.searchLogSheet}"
								update="frmsuccess,frmError,frmAlert,@form" />

							<p:commandButton value="Clear" styleClass="mainActionbtn"
								id="cmdBtnClearLog"
								action="#{issueLogSheetsBackingBean.clearLogSheet}"
								update="frmsuccess,frmError,frmAlert,@form" />

						</center>
					</p:panel>


					<p:tabView id="tabs">

						<p:tab title="New Log Sheets"
							rendered="#{issueLogSheetsBackingBean.issueNew}">

							<p:panel>

						<!-- Added ajax method & id to this input field : dhananjika.d (25/06/2024) -->
								<c:forEach begin="1"
									end="#{issueLogSheetsBackingBean.logSheetCopies}"
									items="#{issueLogSheetsBackingBean.newLogSheetList}"
									var="logSheetDTO">
									<p:panelGrid columns="3"
										columnClasses="ui-grid-col-4,ui-grid-col-4,ui-grid-col-4"
										layout="grid">
										<p:outputLabel></p:outputLabel>
										<p:inputText value="#{logSheetDTO.logSheetRefNo}"
											style="margin-right:40px;" maxlength="20" id="refNo_#{logSheetDTO.id}">
											<p:ajax event="change" 
												listener="#{issueLogSheetsBackingBean.logSheetRefNoValidate(logSheetDTO)}"
                    							update="refNo_#{logSheetDTO.id}" />
										</p:inputText>
										<p:outputLabel></p:outputLabel>
									</p:panelGrid>

								</c:forEach>
							</p:panel>
							<p:panel id="btnPanel">
								<center>
									<p:commandButton value="Save" styleClass="mainActionbtn"
										id="cmdBtnSaveLog"
										action="#{issueLogSheetsBackingBean.saveLogSheets}"
										update="frmsuccess,frmError,frmAlert,@form" style="width:20%" />

									<p:commandButton value="Clear" styleClass="mainActionbtn"
										action="#{issueLogSheetsBackingBean.clearTwo}"
										update="frmsuccess,frmError,frmAlert,@form" style="width:20%" />
								</center>
							</p:panel>

						</p:tab>

						<p:tab title="Issued Log Sheets">

							<p:panel>

								<p:dataTable id="dataTablexx" var="p" rows="10" paginator="true"
									value="#{issueLogSheetsBackingBean.logSheetList}"
									rowKey="#{p.logSheetRefNo}"
									paginatorTemplate="{CurrentPageReport} {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
									rowsPerPageTemplate="10,20" resizableColumns="false"
									liveResize="true" tableStyle="width:100%;font-size:12px;"
									rowIndexVar="index" styleClass="myTable"
									emptyMessage="No data available.">


									<p:column headerText="Log Sheet Ref. No.">
										<h:outputText value="#{p.logSheetRefNo}" />
									</p:column>



								</p:dataTable>
							</p:panel>
							<!-- tab main -->



						</p:tab>
					</p:tabView>





				</div>
			</div>

		</h:form>


		<p:dialog styleClass="" id="errorMSG" global="true" modal="true"
			header="Error" width="30%" severity="info" widgetVar="errorMessage"
			closeOnEscape="true" resizable="false">

			<h:form id="frmError">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="error-24.png"></p:graphicImage>

						<p:outputLabel value="#{issueLogSheetsBackingBean.errorMessage}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						value="OK" process="frmError" onclick="PF('errorMessage').hide()">
					</p:commandButton>
				</center>
			</h:form>
		</p:dialog>

		<p:dialog styleClass="" id="successMSG" global="true" modal="true"
			header="Info" width="30%" severity="info" widgetVar="successMessage"
			closeOnEscape="true" resizable="false">

			<h:form id="frmsuccess">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="success-24.png"></p:graphicImage>

						<p:outputLabel value="#{issueLogSheetsBackingBean.successMessage}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						value="OK" process="frmsuccess"
						onclick="PF('successMessage').hide()">
					</p:commandButton>
				</center>
			</h:form>
		</p:dialog>

		<p:dialog styleClass="" id="alertMessage" global="true" modal="true"
			header="Alert" width="30%" severity="info" widgetVar="alertMSG"
			closeOnEscape="true" resizable="false">

			<h:form id="frmAlert">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="warning.png"></p:graphicImage>

						<p:outputLabel value="#{issueLogSheetsBackingBean.alertMSG}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						value="OK" process="frmAlert" onclick="PF('alertMSG').hide()">
					</p:commandButton>
				</center>
			</h:form>
		</p:dialog>


	</ui:define>
</ui:composition>