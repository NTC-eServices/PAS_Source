		<div class="mainDiv">
			<h1
				style="margin-top: 0%; text-align: center; color: #ffffff; background-color: #404d6f !important;"
				class="common_form_header">Edit / View Payment Type Maintenance</h1>

			<div style="width: 95%;" class="subDiv">
				<h:form id="frmAddVIAPM">
					<br></br>
					<div style="width: 100%;">
						<p:panelGrid columns="4"
							columnClasses="ui-grid-col-3,ui-grid-col-2,ui-grid-col-4,ui-grid-col-3"
							layout="grid">
							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Transaction Type"
									for="transtractionTypeId"></p:outputLabel>
								<p:outputLabel value="*" style="color:red;"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:selectOneMenu id="transtractionTypeId" style="width:70%"
									filter="true" filterMatchMode="contains"
									value="#{paymentTypeMaintenanceBean.selectedTranstractionType}"
									disabled="#{paymentTypeMaintenanceBean.disableTranstractionTypeField}">
									<p:ajax
										listener="#{paymentTypeMaintenanceBean.onTranstractionTypeChange}" />
									<f:selectItem itemLabel="-- Select Transaction Type --"
										itemValue="" noSelectionOption="true" />
									<f:selectItems
										value="#{paymentTypeMaintenanceBean.transtractionTypeList}"
										var="transtractionTypeList"
										itemValue="#{transtractionTypeList.transtractionTypeCode}"
										itemLabel="#{transtractionTypeList.transtractionDescription}" />
								</p:selectOneMenu>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>


							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Charge Type" for="chargeTypeId"></p:outputLabel>
								<p:outputLabel value="*" style="color:red;"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:selectOneMenu id="chargeTypeId" style="width:70%"
									filter="true" filterMatchMode="contains"
									value="#{paymentTypeMaintenanceBean.selectedChargeType}"
									disabled="#{paymentTypeMaintenanceBean.disableChargeTypeField}">
									<p:ajax
										listener="#{paymentTypeMaintenanceBean.onChargeTypeChange}"
										update="accNoId" />
									<f:selectItem itemLabel="-- Select Charge Type --" itemValue=""
										noSelectionOption="true" />
									<f:selectItems
										value="#{paymentTypeMaintenanceBean.paymentTypeList}"
										var="paymentTypeList"
										itemValue="#{paymentTypeList.paymentTypeCode}"
										itemLabel="#{paymentTypeList.paymentTypeDescription}" />
								</p:selectOneMenu>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>

							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Account No." for="accNoId"></p:outputLabel>
								<p:outputLabel value="*" style="color:red;"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:selectOneMenu id="accNoId" style="width:70%"
									value="#{paymentTypeMaintenanceBean.selectedAccountNo}"
									rendered="#{paymentTypeMaintenanceBean.showSearchAccountNoMenu}">
									<p:ajax
										listener="#{paymentTypeMaintenanceBean.onACcountNoChange}"
										update="amountId" />
									<f:selectItem itemLabel="-- Select Account No. --" itemValue=""
										noSelectionOption="true" />
									<f:selectItems
										value="#{paymentTypeMaintenanceBean.accountNoList}"
										var="accountNoList" itemValue="#{accountNoList.accountNo}"
										itemLabel="#{accountNoList.accountNo}" />
								</p:selectOneMenu>
								<p:inputText id="accNoIdEdit" style="width:75%" maxlength="15"
									value="#{paymentTypeMaintenanceBean.inputAccountNo}"
									onkeyup="this.value=this.value.toUpperCase();"
									rendered="#{paymentTypeMaintenanceBean.showInputAccountNoField}">
								</p:inputText>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>

							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Amount" for="amountId"></p:outputLabel>
								<p:outputLabel value="*" style="color:red;"></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:inputNumber id="amountId"
									inputStyle="text-align: right;width:76%" minValue="0"
									value="#{paymentTypeMaintenanceBean.displayAmount}"
									readonly="#{paymentTypeMaintenanceBean.readOnlyAmountField}">
								</p:inputNumber>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>

							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Status" for="statusId"></p:outputLabel>

							</p:panelGrid>
							<p:panelGrid>
								<p:selectOneMenu id="statusId" style="width:70%"
									value="#{paymentTypeMaintenanceBean.selectedStatus}">
									<p:ajax listener="#{paymentTypeMaintenanceBean.onstatusChange}" />
									<f:selectItem itemLabel="-- Select Status --" itemValue=""
										noSelectionOption="true" />
									<f:selectItems value="#{paymentTypeMaintenanceBean.statusList}"
										var="statusList" itemValue="#{statusList.statusCode}"
										itemLabel="#{statusList.statusDescription}" />
								</p:selectOneMenu>
							</p:panelGrid>
							<p:panelGrid></p:panelGrid>

						</p:panelGrid>
						<br />
					</div>
					<center>
						<p:commandButton id="cmdbtnSearch" value="Search"
							class="mainActionbtn" ajax="false"
							action="#{paymentTypeMaintenanceBean.searchDetails}"
							update="dtFunActTable"
							rendered="#{paymentTypeMaintenanceBean.showSearchBtn}">
						</p:commandButton>
						<p:commandButton id="cmdbtnSave" value="Save"
							class="mainActionbtn" ajax="false"
							action="#{paymentTypeMaintenanceBean.updateRecord}"
							update="dtFunActTable"
							rendered="#{paymentTypeMaintenanceBean.showSaveBtn}">
						</p:commandButton>
						<p:commandButton id="cmdbtnClearPage" value="Clear"
							class="mainActionbtn" update="frmPayemntTypeTable,frmAddVIAPM"
							action="#{paymentTypeMaintenanceBean.clearFields}">
						</p:commandButton>
					</center>

					<br></br>
				</h:form>



				<h:form id="frmPayemntTypeTable">
					<br></br>
					<p:growl id="msgs" showDetail="true" />
					<p:dataTable var="funActTable" paginator="true" rows="10"
						id="dtFunActTable" style="width:100%"
						value="#{paymentTypeMaintenanceBean.dataList}"
						paginatorTemplate="{CurrentPageReport} {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
						rowsPerPageTemplate="10,20" resizableColumns="false"
						liveResize="false" rowIndexVar="index">
						<p:column headerText="Transaction Type"
							style="text-align:left;width:15%">
							<h:outputText style="text-align:left;"
								value="#{funActTable.transtractionDescription}" />
						</p:column>
						<p:column headerText="Charge Type"
							style="text-align:left;width:15%">
							<h:outputText style="text-align:left;"
								value="#{funActTable.paymentTypeDescription}" />
						</p:column>
						<p:column headerText="Account No."
							style="text-align:left;width:8%">
							<h:outputText style="text-align:left;"
								value="#{funActTable.accountNo}" />
						</p:column>

						<p:column headerText="Amount Rs:"
							style="text-align:right;width:5%">
							<h:outputText style="text-align:right;"
								value="#{funActTable.amount}" >
								<f:convertNumber pattern="##,###.00" />
							</h:outputText>
						</p:column>
						<p:column headerText="Status" style="text-align:left;width:5%">
							<h:outputText style="text-align:left;"
								value="#{funActTable.statusDescription}" />
						</p:column>
						<p:column headerText="" style="width:5%">
							<p:commandLink id="cmdbtnEdit" update="dtFunActTable,frmAddVIAPM"
								process="dtFunActTable"
								action="#{paymentTypeMaintenanceBean.editActButtonAction}">
								<f:setPropertyActionListener value="#{funActTable}"
									target="#{paymentTypeMaintenanceBean.selectedEditRow}" />
								<p:graphicImage library="images" name="edit.png"
									style="width:24px;height:24px;" title="edit"></p:graphicImage>
							</p:commandLink>
						</p:column>
						<p:column headerText="" style="width:5%">
							<p:commandLink id="cmdbtnRemove" update="dtFunActTable"
								process="dtFunActTable"
								action="#{paymentTypeMaintenanceBean.deleteActButtonAction}">
								<f:setPropertyActionListener value="#{funActTable}"
									target="#{paymentTypeMaintenanceBean.selectedDeleteRow}" />
								<p:graphicImage library="images" name="delete.png"
									style="width:24px;height:24px;" title="delete"></p:graphicImage>
							</p:commandLink>
						</p:column>
					</p:dataTable>

					<br></br>
				</h:form>

			</div>

			<br></br>

		</div>


		<p:dialog styleClass="" id="requiredField" global="true" modal="true"
			header="Error" width="30%" severity="info" widgetVar="requiredField"
			closeOnEscape="true" resizable="false">
			<h:form id="frmrequiredField">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="error-24.png"></p:graphicImage>
						<p:outputLabel value="#{paymentTypeMaintenanceBean.errorMsg}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						process="frmrequiredField"
						value="#{msg['um.employeeprofile.dlmissingclose']}"
						onclick="PF('requiredField').hide()">
					</p:commandButton>

				</center>
			</h:form>
		</p:dialog>
		<p:dialog styleClass="" id="successSve" global="true" modal="true"
			header="#{msg['um.employeeprofile.dlsuccess']}" width="30%"
			severity="info" widgetVar="successSve" closeOnEscape="true"
			resizable="false">
			<h:form id="frmsuccessSve">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="success-24.png"></p:graphicImage>
						<p:outputLabel value="#{paymentTypeMaintenanceBean.sucessMsg}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						process="frmsuccessSve"
						value="#{msg['um.employeeprofile.dlsuccessclose']}"
						onclick="PF('successSve').hide()">
					</p:commandButton>

				</center>
			</h:form>
		</p:dialog>




		<p:dialog styleClass="" id="deleteconfirmationsequence" global="true"
			modal="true" width="30%" severity="info"
			widgetVar="deleteconfirmationsequence" closeOnEscape="true"
			resizable="false" header="Information">
			<h:form id="frmdeleteconfirmationDept">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="warning.png"></p:graphicImage>
						<p:outputLabel value="Do you want to delete this record ?"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton id="yes" value="Yes"
						actionListener="#{paymentTypeMaintenanceBean.deleteRole()}"
						ajax="true" onclick="PF('deleteconfirmationsequence').hide()"></p:commandButton>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						process="frmdeleteconfirmationDept" value="No"
						onclick="PF('deleteconfirmationsequence').hide()">
					</p:commandButton>

				</center>
			</h:form>
		</p:dialog>
	</ui:define>
</ui:composition>