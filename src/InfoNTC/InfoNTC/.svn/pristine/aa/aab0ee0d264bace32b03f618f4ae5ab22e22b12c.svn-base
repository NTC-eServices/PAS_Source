<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:p="http://primefaces.org/ui"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:fn="http://java.sun.com/jsp/jstl/functions"
	template="/WEB-INF/template/template.xhtml">
	<ui:define name="metadata">
	</ui:define>
	<ui:define name="content">
		<style>
.ui-dialog .ui-dialog-titlebar {
	padding: .4em .4em .4em 1em;
	position: relative;
	background: #07295b !important;
	padding: 5px 5px 5px 5px;
	margin: 0px 0px 0px 0px;
	color: #ffffff;
}

.ui-panelgrid .ui-panelgrid-cell {
	background-color: #f1f1f1;
}

.ui-icon.ui-confirm-dialog-severity {
	background-position: 0 0 !important;
	background-image: none !important;
}

.colorHighlight {
	background: yellow !important;
}

.ui-dialog .ui-widget .ui-widget-content .ui-corner-all .ui-shadow .ui-hidden-container .ui-draggable
	{
	width: 50%;
}

.firstColumn {
	width: 100%;
}

.secondColumn {
	width: 100%;
}

.dashboardNRResendDocRecord {
	background-color: #16e5d7 !important;
}

.ui-state-default a, .ui-state-default a:link, .ui-state-default a:visited
	{
	color: #07295b;
}

.mainDiv {
	width: 99%;
	height: auto;
	border-left: solid;
	border-right: solid;
	border-bottom: solid;
	border-top: solid;
	border-color: #07295b;
	border-width: 1px;
	margin-left: 5px;
	margin-top: 5px;
	margin-bottom: 5px;
	/*background-image: linear-gradient(to right bottom, #d9ddfa, #ccd4fb, #bdcafc, #aec2fe,
		#9cb9ff);*/
	background-image: linear-gradient(to right bottom, #f1f1f1, #dfdfe4, #f1f1f1, #e9eaeb,
		#bbb5b5);
}

.ui-inputfield, .ui-widget-content .ui-inputfield, .ui-widget-header .ui-inputfield
	{
	color: #07295b;
}

.mainLinkButton {
	font-weight: bold;
	background: #2571fa !important;
	text-align: center;
	padding: 7px 25px 7px 25px !important;
	height: 35px !important;
	text-decoration: none !important;
	color: white !important;
	white-space: nowrap !important;
	border-radius: 5px !important;
}

.mainLinkButton:hover {
	background: #fba026 !important;
}

.otherLinkButton {
	font-weight: bold;
	background: #296807 !important;
	text-align: center;
	padding: 7px 25px 7px 25px !important;
	height: 35px !important;
	text-decoration: none !important;
	color: white !important;
	white-space: nowrap !important;
	border-radius: 5px !important;
}

.otherLinkButton:hover {
	background: #fba026 !important;
}

.mainActionbtn {
	font-weight: bold;
	background: #2571fa !important;
	height: 30px !important;
	border-radius: 5px !important;
	color: white !important;
	text-align: center;
	width: 80px;
	white-space: nowrap !important;
	-webkit-transition: background-color 0.3s ease-out;
	-moz-transition: background-color 0.3s ease-out;
	-o-transition: background-color 0.3s ease-out;
	transition: background-color 0.3s ease-out;
}

.mainActionbtn:hover {
	background: #fba026 !important;
}

.OthActionbtn {
	font-weight: bold;
	background: #296807 !important;
	height: 30px !important;
	border-radius: 5px !important;
	color: white !important;
	text-align: center;
	width: 80px;
	white-space: nowrap !important;
	-webkit-transition: background-color 0.3s ease-out;
	-moz-transition: background-color 0.3s ease-out;
	-o-transition: background-color 0.3s ease-out;
	transition: background-color 0.3s ease-out;
	margin-bottom: 5px;
}

.OthActionbtn:hover {
	background: #fba026 !important;
}

.subDiv {
	margin: 0 auto;
	background: rgb(254, 255, 255); /* Old browsers */
	background: -moz-linear-gradient(-45deg, rgba(254, 255, 255, 1) 0%,
		rgba(210, 235, 249, 1) 100%); /* FF3.6-15 */
	background: -webkit-linear-gradient(-45deg, rgba(254, 255, 255, 1) 0%,
		rgba(210, 235, 249, 1) 100%); /* Chrome10-25,Safari5.1-6 */
	background: linear-gradient(135deg, rgba(254, 255, 255, 1) 0%,
		rgba(210, 235, 249, 1) 100%);
	/* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#feffff',
		endColorstr='#d2ebf9', GradientType=1);
	/* IE6-9 fallback on horizontal gradient */
}

.nopadd .ui-panelgrid-cell {
	padding: 4px 0px !important;
}

.sm-padding .ui-panelgrid-cell {
	padding-top: 4px !important;
	padding-bottom: 4px !important;
}

.light-disabled .ui-widget-content .ui-state-disabled {
	opacity: 0.6;
}

.ui-chkbox.ui-chkbox-all.ui-widget {
	display: none !important;
}
</style>

		<div class="mainDiv">


			<div style="margin-top: 0%;" class="common_form_header">
				<h1 style="color: #ffffff; text-align: center; font-weight: bold">Maintain
					Driver / Conductor Training Dates</h1>


			</div>

			<div style="width: 95%;" class="subDiv">
				<h:form id="frmTrainingDates" style="background-color :#f1f1f1;">
					<p:spacer height="5px"></p:spacer>

					<div class="ui-widget-content ui-grid ui-grid-responsive">

						<div class="rowpadding ui-grid-row">
							<div class="ui-grid-col-1"></div>
							<div class="ui-grid-col-2">
								<p:outputLabel value="Type of Training"></p:outputLabel>
							</div>
							<div class="ui-grid-col-3">
								<p:selectOneMenu
									value="#{driverConductorTrainingBackingBean.selectedTrainingType}"
									style="width:150px" effect="fold" filter="true"
									filterMatchMode="contains">
									<f:selectItems
										value="#{driverConductorTrainingBackingBean.trainingTypeList}"
										var="type" itemValue="#{type.code}"
										itemLabel="#{type.description}" />
									<p:ajax
										listener="#{driverConductorTrainingBackingBean.changeTrainingType}"
										update="frmTrainingDates" />
								</p:selectOneMenu>
							</div>
						</div>

						<div class="rowpadding ui-grid-row">
							<div class="ui-grid-col-1"></div>
							<div class="ui-grid-col-2">
								<p:outputLabel value="Register Start Date"></p:outputLabel>
							</div>
							<div class="ui-grid-col-3">
								<p:calendar
									value="#{driverConductorTrainingBackingBean.registerStart}"
									styleClass="calendarClass" navigator="true" locale="en_US"
									size="18" inputStyle="width:168px" pattern="dd/MM/yyyy"
									placeholder="dd/MM/yyyy" yearRange="c-100:c+100"
									showButtonPanel="true" showTodayButton="true">
								</p:calendar>
							</div>
							<div class="ui-grid-col-2">
								<p:outputLabel value="Register End Date"></p:outputLabel>
							</div>
							<div class="ui-grid-col-3">
								<p:calendar
									value="#{driverConductorTrainingBackingBean.registerEnd}"
									styleClass="calendarClass" navigator="true" locale="en_US"
									size="18" inputStyle="width:168px" pattern="dd/MM/yyyy"
									placeholder="dd/MM/yyyy" yearRange="c-100:c+100"
									showButtonPanel="true" showTodayButton="true">
								</p:calendar>
							</div>
						</div>



						<div class="rowpadding ui-grid-row">
							<div class="ui-grid-col-1"></div>
							<div class="ui-grid-col-2">
								<p:outputLabel value="Application No"></p:outputLabel>
							</div>
							<div class="ui-grid-col-3">

								<p:autoComplete
									value="#{driverConductorTrainingBackingBean.applicationNo}"
									size="16" dropdown="true"
									onkeyup="this.value=this.value.toUpperCase();"
									completeMethod="#{driverConductorTrainingBackingBean.completeAppNo}"
									forceSelection="true" scrollHeight="500">

								</p:autoComplete>

							</div>
							<div class="ui-grid-col-2">
								<p:outputLabel value="Training Language Medium"></p:outputLabel>
							</div>
							<div class="ui-grid-col-3">

								<p:selectOneMenu style="width:70%; "
									value="#{driverConductorTrainingBackingBean.languageMediumCode}"
									effect="fold" filter="true" filterMatchMode="contains">
									<f:selectItem itemLabel="-- Select Language Medium --" />
									<f:selectItem itemLabel="SINHALA" itemValue="S" />
									<f:selectItem itemLabel="ENGLISH" itemValue="E" />
									<f:selectItem itemLabel="TAMIL" itemValue="T" />
								</p:selectOneMenu>


							</div>
						</div>




						<div class="rowpadding ui-grid-row">
							<div class="ui-grid-col-1"></div>
							<div class="ui-grid-col-2">
								<p:outputLabel value="Driver / Conductor Name"></p:outputLabel>
							</div>
							<div class="ui-grid-col-3">
								<p:inputText
									value="#{driverConductorTrainingBackingBean.driConName}"
									onkeyup="this.value=this.value.toUpperCase();">

								</p:inputText>
							</div>
						</div>

						<div class="rowpadding ui-grid-row">
							<div class="ui-grid-col-1"></div>
							<div class="ui-grid-col-2">
								<p:outputLabel value="Driver ID"></p:outputLabel>
							</div>
							<div class="ui-grid-col-3">
								<p:autoComplete
									value="#{driverConductorTrainingBackingBean.driverId}"
									size="16" dropdown="true"
									onkeyup="this.value=this.value.toUpperCase();"
									completeMethod="#{driverConductorTrainingBackingBean.completeDriverId}"
									forceSelection="true" scrollHeight="500">

								</p:autoComplete>
							</div>
							<div class="ui-grid-col-2">
								<p:outputLabel value="Conductor ID"></p:outputLabel>
							</div>
							<div class="ui-grid-col-3">
								<p:autoComplete
									value="#{driverConductorTrainingBackingBean.conductorId}"
									size="16" dropdown="true"
									onkeyup="this.value=this.value.toUpperCase();"
									completeMethod="#{driverConductorTrainingBackingBean.completeConductorId}"
									forceSelection="true" scrollHeight="500">
								</p:autoComplete>
							</div>
						</div>


						<div class="gridspadding" align="center">
							<p:commandButton value="Search" styleClass="mainActionbtn"
								tabindex="1"
								actionListener="#{driverConductorTrainingBackingBean.searchTraining}"
								alt="Search" update="dtTrainingDates"></p:commandButton>

							<p:spacer width="5px"></p:spacer>

							<p:commandButton value="Clear" styleClass="mainActionbtn"
								tabindex="1"
								actionListener="#{driverConductorTrainingBackingBean.clearSearchView}"
								alt="Clear" update="frmTrainingDates"></p:commandButton>
						</div>


						<p:panel id="myPan">

							<p:dataTable id="dtTrainingDates" widgetVar="dtTrainingDates"
								var="com"
								value="#{driverConductorTrainingBackingBean.dcTrainingDatesList}"
								paginator="true" rows="15" rowsPerPageTemplate="10,20,50"
								paginatorPosition="bottom"
								paginatorTemplate="{CurrentPageReport} {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
								reflow="true" filterBy="#{com.appNo}"
								selection="#{driverConductorTrainingBackingBean.selectedTrainingDatesList}"
								rowKey="#{com.appNo}" selectionMode="checkbox"
								rowSelector="false">

								<f:facet name="header">
									<p:outputPanel id="pnlSetAll" style="text-align:right">

										<p:selectOneMenu
											value="#{driverConductorTrainingBackingBean.allDate}"
											rendered="#{fn:length(driverConductorTrainingBackingBean.dcTrainingDatesList) > 1}"
											style="width:150px" effect="fold" filter="true"
											filterMatchMode="contains">
											<p:ajax update="pnlSetAll" />
											<f:selectItem itemLabel="-- SELECT A DATE " itemValue="" />
											<f:selectItems
												value="#{driverConductorTrainingBackingBean.scheduleDates}"
												var="type" itemValue="#{type}" itemLabel="#{type}" />
										</p:selectOneMenu>
										<p:commandButton update="dtTrainingDates" value="Apply All"
											rendered="#{fn:length(driverConductorTrainingBackingBean.dcTrainingDatesList) > 1}"
											disabled="#{driverConductorTrainingBackingBean.allDate == null or driverConductorTrainingBackingBean.allDate == ''}"
											style="margin-left:5px; background: #77abc5; height: 28px; border-radius: 5px !important;">
											<p:ajax
												listener="#{driverConductorTrainingBackingBean.setAllDate}"
												update="dtTrainingDates" />
										</p:commandButton>
									</p:outputPanel>
								</f:facet>

								<p:ajax event="rowSelectCheckbox"
									listener="#{driverConductorTrainingBackingBean.onRowSelect}"
									update="dtTrainingDates" />
								<p:ajax event="rowUnselectCheckbox"
									listener="#{driverConductorTrainingBackingBean.onRowUnselect}"
									update="dtTrainingDates" />
								<p:column selectionMode="multiple"
									style="width:16px;text-align:center" selectRow="" />

								<p:column headerText="Application No." sortBy="#{com.appNo}"
									style="text-align:left; width:13%">
									<h:outputText value="#{com.appNo}" />
								</p:column>
								<p:column headerText="Driver / Conductor ID"
									sortBy="#{com.driverConductorId}"
									style="text-align:left; width:17%">
									<h:outputText value="#{com.driverConductorId}" />
								</p:column>

								<p:column headerText="Language"
									style="text-align:left; width:10%">
									<h:outputText value="#{com.language}" />
								</p:column>

								<p:column headerText="Full Name" sortBy="#{com.fullName}"
									style="text-align:left">
									<h:outputText value="#{com.fullName}" />
								</p:column>
								<p:column headerText="Registered Date"
									sortBy="#{com.registeredDate}"
									style="text-align:left; width:12%">
									<h:outputText value="#{com.registeredDate}" />
								</p:column>
								<p:column headerText="Training Date"
									sortBy="#{com.trainingDate}" style="text-align:left; width:20%">

									<p:selectOneMenu value="#{com.trainingDate}"
										disabled="#{!com.selected}" style="width:150px" effect="fold"
										filter="true" filterMatchMode="contains">
										<f:selectItem itemLabel="-- SELECT A DATE " itemValue="" />
										<f:selectItems
											value="#{driverConductorTrainingBackingBean.scheduleDates}"
											var="type" itemValue="#{type}" itemLabel="#{type}" />
									</p:selectOneMenu>
								</p:column>
								<p:column>

									<p:commandButton value="Print Letter"
										styleClass="mainActionbtn" style="width: 108px;" tabindex="1"
										disabled="#{!driverConductorTrainingBackingBean.dataSaved or driverConductorTrainingBackingBean.letterPrinted}"
										actionListener="#{driverConductorTrainingBackingBean.printLetters}"
										alt="Print Letters" update="@form"
										oncomplete="window.open('/InfoNTC/showUpload?reportName=Training Letter')"
										process="@this" ajax="true">


									</p:commandButton>

								</p:column>
							</p:dataTable>

							<p:panel id="cmdBtnPalette">
								<div class="gridspadding" align="center">
									<p:commandButton value="Save" styleClass="mainActionbtn"
										tabindex="1"
										actionListener="#{driverConductorTrainingBackingBean.saveTrainingDates}"
										alt="Save" update="cmdBtnPalette,dtTrainingDates" />

									<p:spacer width="5px"></p:spacer>



									<p:spacer width="5px"></p:spacer>

									<p:commandButton value="Print Address Labels"
										styleClass="mainActionbtn" style="width: 155px;" tabindex="1"
										actionListener="#{driverConductorTrainingBackingBean.printAddressLabels}"
										alt="Print Address Labels" update="frmTrainingDates"></p:commandButton>

									<p:spacer width="5px"></p:spacer>

									<p:commandButton value="Reset" styleClass="mainActionbtn"
										tabindex="1"
										actionListener="#{driverConductorTrainingBackingBean.loadTrainingData(true)}"
										alt="Reset" update="frmTrainingDates"></p:commandButton>

								</div>
							</p:panel>

						</p:panel>

					</div>
				</h:form>
			</div>



			<p:dialog id="dialogError" global="true" modal="true" header="Error"
				width="30%" severity="info" widgetVar="errorDialog"
				closeOnEscape="true" resizable="false">
				<h:form id="frmError">
					<center>
						<p:panelGrid columns="2" styleClass="ui-noborder">
							<p:graphicImage library="images" name="error-24.png"></p:graphicImage>
							<p:outputLabel
								value="#{driverConductorTrainingBackingBean.errorMsg}"></p:outputLabel>
						</p:panelGrid>
						<br></br>
						<p:commandButton style="margin-top:10px;margin-bottom:10px"
							process="frmError" value="OK" onclick="PF('errorDialog').hide()">
						</p:commandButton>

					</center>
				</h:form>
			</p:dialog>

			<p:dialog id="dialogSuccess" global="true" modal="true"
				header="Success" width="30%" severity="info"
				widgetVar="successDialog" closeOnEscape="true" resizable="false">
				<h:form id="frmSuccess">
					<center>
						<p:panelGrid columns="2" styleClass="ui-noborder">
							<p:graphicImage library="images" name="success-24.png"></p:graphicImage>
							<p:outputLabel
								value="#{driverConductorTrainingBackingBean.sucessMsg}"></p:outputLabel>
						</p:panelGrid>
						<br></br>
						<p:commandButton style="margin-top:10px;margin-bottom:10px"
							process="frmSuccess" value="OK"
							onclick="PF('successDialog').hide()">
						</p:commandButton>
					</center>
				</h:form>
			</p:dialog>

		</div>



	</ui:define>
</ui:composition>