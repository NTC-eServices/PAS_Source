									listener="#{approveActionChargesBean.onRowUnselect}"
									update=":manageInvsFrm" />

								<p:column headerText="Charge Reference No." width="95"
									style="text-align:left">
									<h:outputText value="#{charge.chargeRefCode}" />
								</p:column>
								<p:column headerText="Permit No." width="60"
									style="text-align:left">
									<h:outputText value="#{charge.permitNo}" />
								</p:column>
								<p:column headerText="Vehicle No." width="70"
