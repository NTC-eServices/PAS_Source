							</p:panelGrid>
							<p:panelGrid></p:panelGrid>

							<p:panelGrid></p:panelGrid>
							<p:panelGrid>
								<p:outputLabel value="Report No."></p:outputLabel>
							</p:panelGrid>
							<p:panelGrid>
								<p:inputText style="width:91%;" id="reportNo"
