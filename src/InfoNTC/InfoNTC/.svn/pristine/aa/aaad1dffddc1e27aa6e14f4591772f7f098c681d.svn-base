									</p:panelGrid>
								
								<p:panelGrid >
									<p:inputNumber value="#{approveActionChargesBean.latePaymentFee}" id="lateFeeId"
									disabled="true"
											inputStyle="width:95%;" styleClass="right" decimalPlaces="2"
											maxValue="9999999999">
											
										</p:inputNumber>
								</p:panelGrid>
								<p:panelGrid></p:panelGrid>
								<p:panelGrid></p:panelGrid>
								<p:panelGrid></p:panelGrid>
							</p:panelGrid>
						</p:panel>

							<p:panelGrid columns="1" columnClasses="ui-grid-col-12"
								layout="grid">
								<h1
									style="margin-top: 3%; margin-bottom: 2%; text-align: left; color: #000000;">Calculate
									Charges</h1>

								<p:dataTable id="dtCharge" var="offence"
									value="#{approveActionChargesBean.chargesList}"
									emptyMessage="No committed offences" paginator="true" rows="5"
									rowsPerPageTemplate="5,10,15" paginatorPosition="bottom"
									paginatorTemplate="{CurrentPageReport} {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
									reflow="true" sortBy="#{1}" editable="true" editMode="cell">

									<p:column headerText="Code" width="110" style="text-align:left">
										<h:outputText value="#{offence.chargeCode}" />
									</p:column>

									<p:column headerText="Offence Description"
										style="text-align:left">
										<h:outputText value="#{offence.chargeDesc}" />
									</p:column>

									<p:column headerText="No of Attempts">
										<p:cellEditor>
											<f:facet name="output">
												<h:outputText value="#{offence.attemptDesc}" />
											</f:facet>
											<f:facet name="input">
												<h:selectOneMenu value="#{offence.attemptDesc}"
													style="width:100%">
													<f:selectItems
														value="#{approveActionChargesBean.attemptList}"
														var="attempt" itemLabel="#{attempt.description}"
														itemValue="#{attempt.description}" />
												</h:selectOneMenu>
											</f:facet>
										</p:cellEditor>
									</p:column>

									<p:column headerText="Charge Amount" width="120"
										style="text-align:right">
										<p:inputNumber value="#{offence.amount}"
											inputStyle="width:95%;" styleClass="right" decimalPlaces="2"
											maxValue="9999999999">
											<p:ajax event="keyup"
												listener="#{approveActionChargesBean.calculateTotalAmount}"
												update="frmChargeFinalize"></p:ajax>
										</p:inputNumber>
									</p:column>

									<p:column headerText="Applicable to Driver" width="80"
										style="text-align:center">
										<p:selectBooleanCheckbox value="#{offence.driverApplicable}"
											disabled="#{approveActionChargesBean.chargeFinalization.driverId == null}">
											<p:ajax
												listener="#{approveActionChargesBean.applyDriver(offence)}"
												update="dtCharge"></p:ajax>
										</p:selectBooleanCheckbox>
									</p:column>

									<p:column headerText="Points" width="72"
										style="text-align:right">
										<p:inputNumber value="#{offence.driverPoints}"
											inputStyle="width:90%;" styleClass="right" decimalPlaces="0"
											maxValue="10000" disabled="#{!offence.driverApplicable}">
											<p:ajax event="keyup"
												listener="#{approveActionChargesBean.calculatePointsDriver}"
												update="frmChargeFinalize"></p:ajax>
										</p:inputNumber>
									</p:column>

									<p:column headerText="Applicable to Conductor" width="80"
										style="text-align:center">
										<p:selectBooleanCheckbox
											value="#{offence.conductorApplicable}"
											disabled="#{approveActionChargesBean.chargeFinalization.conductorId == null}">
											<p:ajax
												listener="#{approveActionChargesBean.applyConductor(offence)}"
												update="dtCharge"></p:ajax>
										</p:selectBooleanCheckbox>
									</p:column>

									<p:column headerText="Points" width="72"
										style="text-align:right">
										<p:inputNumber value="#{offence.conductorPoints}"
											inputStyle="width:90%;" styleClass="right" decimalPlaces="0"
											maxValue="10000" disabled="#{!offence.conductorApplicable}">
											<p:ajax event="keyup"
												listener="#{approveActionChargesBean.calculatePointsConductor}"
												update="frmChargeFinalize"></p:ajax>
										</p:inputNumber>
									</p:column>

									<p:columnGroup type="footer" id="footer">

										<p:row>

											<p:column footerText="" />
											<p:column footerText="" />

											<p:column footerText="Total Amount"
												style="text-align:left; font-size:14px; padding-top: 10px;" />
											<p:column style="text-align:right">
												<f:facet name="footer">
													<h:outputText id="totalChargeAmount"
														style="font-size:16px; padding-top: 10px; color: red;"
														value="#{approveActionChargesBean.totalChargeAmount}">
														<f:convertNumber pattern="##,###.00" />
													</h:outputText>
												</f:facet>
											</p:column>

											<p:column footerText="Total Driver Points"
												style="text-align:left; font-size:14px; padding-top: 10px;" />
											<p:column style="text-align:right">
												<f:facet name="footer">
													<h:outputText id="totalDriverPoints"
														style="font-size:16px; padding-top: 10px; color: red;"
														value="#{approveActionChargesBean.totalDriverPoints}">
														<f:convertNumber pattern="##,###" />
													</h:outputText>
												</f:facet>
											</p:column>

											<p:column footerText="Total Conductor Points"
												style="text-align:left; font-size:14px; padding-top: 10px;" />
											<p:column style="text-align:right">
												<f:facet name="footer">
													<h:outputText id="totalConductorPoints"
														style="font-size:16px; padding-top: 10px; color: red;"
														value="#{approveActionChargesBean.totalConductorPoints}">
														<f:convertNumber pattern="##,###" />
													</h:outputText>
												</f:facet>
											</p:column>

										</p:row>
									</p:columnGroup>
								</p:dataTable>


							</p:panelGrid>

							<p:panelGrid columns="4" style="margin-top:3%;"
								columnClasses="ui-grid-col-1,ui-grid-col-2,ui-grid-col-7,ui-grid-col-2"
								layout="grid">
								<p:panelGrid></p:panelGrid>
								<p:panelGrid></p:panelGrid>
								<p:panelGrid></p:panelGrid>
								<p:panelGrid></p:panelGrid>
							</p:panelGrid>

							<p:panelGrid columns="4"
								columnClasses="ui-grid-col-1,ui-grid-col-2,ui-grid-col-7,ui-grid-col-2"
								layout="grid">
								<p:panelGrid></p:panelGrid>
								<p:panelGrid>
									<p:outputLabel value="Special Remarks"></p:outputLabel>
								</p:panelGrid>
								<p:panelGrid>
									<p:inputText style="width:97%" id="specialRemarkId"
										value="#{approveActionChargesBean.chargeFinalization.specialRemark}"></p:inputText>
								</p:panelGrid>
								<p:panelGrid></p:panelGrid>
							</p:panelGrid>

							<p:panelGrid columns="7"
								columnClasses="ui-grid-col-1,ui-grid-col-1,ui-grid-col-2,ui-grid-col-4,ui-grid-col-2,ui-grid-col-1,ui-grid-col-1"
								layout="grid" style="margin-top:4%;">
								<p:panelGrid></p:panelGrid>
								<p:panelGrid></p:panelGrid>
								<p:panelGrid></p:panelGrid>
								<p:commandButton id="cancelChargeFinalizeBtn"
									styleClass="mainLinkButton" style="width:100%" value="Cancel"
									oncomplete="PF('dlgChargeFinalization').hide()">
								</p:commandButton>
								<p:panelGrid></p:panelGrid>
								<p:panelGrid></p:panelGrid>
								<p:panelGrid></p:panelGrid>
							</p:panelGrid>

						</p:panel>
					</h:form>
				</p:dialog>


				<p:dialog id="errorDialog" global="true" modal="true" header="Error"
					width="30%" severity="info" widgetVar="errorDialog"
					closeOnEscape="true" resizable="false">
					<h:form id="frmError">

						<center>
							<p:panelGrid columns="2" styleClass="ui-noborder">
								<p:graphicImage library="images" name="error-24.png"></p:graphicImage>
								<p:outputLabel value="#{approveActionChargesBean.errorMsg}"></p:outputLabel>
							</p:panelGrid>
							<br></br>
							<p:commandButton style="margin-top:10px;margin-bottom:10px"
								process="frmError" value="OK" onclick="PF('errorDialog').hide()">
							</p:commandButton>

						</center>
					</h:form>
				</p:dialog>

				<p:dialog id="successDialog" global="true" modal="true"
					header="Success" width="30%" severity="info"
					widgetVar="successDialog" closeOnEscape="true" resizable="false">
					<h:form id="frmSuccess">

						<center>
							<p:panelGrid columns="2" styleClass="ui-noborder">
								<p:graphicImage library="images" name="success-24.png"></p:graphicImage>
								<p:outputLabel value="#{approveActionChargesBean.successMsg}"></p:outputLabel>
							</p:panelGrid>
							<br></br>
							<p:commandButton style="margin-top:10px;margin-bottom:10px"
								process="frmSuccess" value="OK"
								onclick="PF('successDialog').hide()">
							</p:commandButton>
						</center>

					</h:form>
				</p:dialog>


			</div>
		</div>
	</ui:define>
</ui:composition>