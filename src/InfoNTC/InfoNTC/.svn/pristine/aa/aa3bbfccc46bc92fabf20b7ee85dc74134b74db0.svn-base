		<div class="mainDiv">
			<h1
				style="margin-top: 0%; text-align: center; color: #ffffff; background-color: #404d6f !important;"
				class="common_form_header">Create Roles</h1>

			<div style="width: 95%;" class="subDiv">

				<h:form id="frmDeptRoleAdd">
					<br></br>
					<p:panelGrid columns="4"
						columnClasses="ui-grid-col-3,ui-grid-col-2,ui-grid-col-4,ui-grid-col-3"
						layout="grid">

						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Department" for="actDesc"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:selectOneMenu id="actDesc" style="width:70%"
								value="#{createNewRoleBean.manageRoleDTO.department}">
								<p:ajax listener="#{createNewRoleBean.ondepartmnetChange}"
									update="depId" />
								<f:selectItem itemLabel="-- Select Department --" itemValue=""
									noSelectionOption="true" />
								<f:selectItems value="#{createNewRoleBean.departmentList}"
									var="br" itemLabel="#{br.description}" itemValue="#{br.code}" />
							</p:selectOneMenu>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>

						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Role Code" style="width:250px"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:inputText id="depId" style="width:15%"
								value="#{createNewRoleBean.manageRoleDTO.depFirstCharForRoleCode}"
								readonly="true"
								disabled="#{createNewRoleBean.disableRoleCodeField}"
								onkeyup="this.value=this.value.toUpperCase();" maxlength="4">
							</p:inputText>
							<p:inputText id="roleCode" style="width:57%"
								value="#{createNewRoleBean.manageRoleDTO.currentRoleCode}"
								disabled="#{createNewRoleBean.disableRoleCodeField}"
								onkeyup="this.value=this.value.toUpperCase();" maxlength="11">
							</p:inputText>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>

						<p:panelGrid></p:panelGrid>
						<p:panelGrid>
							<p:outputLabel value="Role Name" for="funDesc"></p:outputLabel>
							<p:outputLabel value="*" style="color:red;"></p:outputLabel>
						</p:panelGrid>
						<p:panelGrid>
							<p:inputText id="funDesc" style="width:75%" maxlength="50"
								value="#{createNewRoleBean.manageRoleDTO.currentRoleName}"
								onkeyup="this.value=this.value.toUpperCase();">
							
							</p:inputText>
						</p:panelGrid>
						<p:panelGrid></p:panelGrid>
						<br></br>

					</p:panelGrid>

					<center>
						<p:commandButton id="cmdbtnAdd" value="Save" class="mainActionbtn"
							ajax="false" action="#{createNewRoleBean.updateDb}"
							update="frmDeptRoleAdd" process="frmDeptRoleAdd"
							rendered="#{createNewRoleBean.showbtnAddBeforeEdit}">
						</p:commandButton>
						<p:commandButton id="cmdbtnAddAfterEdit" value="Save"
							class="mainActionbtn" ajax="false"
							action="#{createNewRoleBean.editDb}" update="frmDeptRoleAdd"
							process="frmDeptRoleAdd"
							rendered="#{createNewRoleBean.showbtnAddAfterEdit}">
						</p:commandButton>
						<p:commandButton value="Clear" styleClass="mainActionbtn"
							id="btnClearAll" update="frmDeptRoleAdd"
							action="#{createNewRoleBean.clearDetails}"></p:commandButton>

					</center>

					<br></br>
					<br></br>
					<p:growl id="msgs" showDetail="true" />
					<center>
						<p:dataTable var="roleEditTable" paginator="true" rows="5"
							id="dtFunActTable" style="width:96%"
							value="#{createNewRoleBean.dataList}"
							paginatorTemplate="{CurrentPageReport} {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"
							rowsPerPageTemplate="5,10" resizableColumns="false"
							liveResize="false" rowIndexVar="index">

							<p:column headerText="Seq No:" style="text-align:left;width:5%">
								<h:outputText style="text-align:left;" value="#{index + 1}" />
							</p:column>
							<p:column headerText="Role Code" style="text-align:left;width:8%">
								<h:outputText style="text-align:left;"
									value="#{roleEditTable.roleCode}" />
							</p:column>
							<p:column headerText="Role Name"
								style="text-align:left;width:15%">
								<h:outputText style="text-align:left;"
									value="#{roleEditTable.roleName}" />
							</p:column>
							<p:column headerText="Department"
								style="text-align:left;width:15%">
								<h:outputText style="text-align:left;"
									value="#{roleEditTable.departmentDescription}" />
							</p:column>

							<p:column headerText="Status" style="text-align:left;width:15%">
								<h:outputText style="text-align:left;"
									value="#{roleEditTable.roleStatus}" />
							</p:column>
							<p:column headerText="" style="width:7%">
								<p:commandLink id="btnedit"
									action="#{createNewRoleBean.editAction}" update="@form">
									<f:setPropertyActionListener value="#{roleEditTable}"
										target="#{createNewRoleBean.selectedEditRow}" />
									<p:graphicImage library="images" name="edit.png"
										style="width:24px;height:24px;" title="edit"></p:graphicImage>
								</p:commandLink>

							</p:column>
							<p:column headerText="" style="width:7%">

								<p:commandLink id="btnremove"
									action="#{createNewRoleBean.deleteRoleButtonAction}"
									update="@form">
									<f:setPropertyActionListener value="#{roleEditTable}"
										target="#{createNewRoleBean.selectedDeleteRow}" />
									<p:graphicImage library="images" name="delete.png"
										style="width:24px;height:24px;" title="delete"></p:graphicImage>
								</p:commandLink>
							</p:column>

						</p:dataTable>
					</center>
					<br></br>

				</h:form>
			</div>

		</div>
		<p:dialog styleClass="" id="deleteBtn" global="true" modal="true"
			header="Delete Dialog" width="30%" severity="info"
			widgetVar="deleteWid" closeOnEscape="true" resizable="false">
			<h:form id="frmDelete">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="error-24.png"></p:graphicImage>
						<p:outputLabel>Are you sure delete?</p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						value="No" onclick="PF('deleteWid').hide()">
					</p:commandButton>

					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						value="Yes" action="#{createNewRoleBean.removeAction}"
						update="@all" process="@all" onclick="PF('deleteWid').hide()">
					</p:commandButton>

				</center>
			</h:form>
		</p:dialog>


		<p:dialog styleClass="" id="successSve" global="true" modal="true"
			header="Success" width="30%" severity="info" widgetVar="successSve"
			closeOnEscape="true" resizable="false">
			<h:form id="frmsuccessSve">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="success-24.png"></p:graphicImage>
						<p:outputLabel value="#{createNewRoleBean.sucessMsg}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						process="frmsuccessSve" value="OK"
						onclick="PF('successSve').hide()">
					</p:commandButton>

				</center>
			</h:form>
		</p:dialog>
		<p:dialog styleClass="" id="requiredField" global="true" modal="true"
			header="Error" width="30%" severity="info" widgetVar="requiredField"
			closeOnEscape="true" resizable="false">
			<h:form id="frmrequiredField">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="error-24.png"></p:graphicImage>
						<p:outputLabel value="#{createNewRoleBean.errorMsg}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						process="frmrequiredField" value="OK"
						onclick="PF('requiredField').hide()">
					</p:commandButton>

				</center>
			</h:form>
		</p:dialog>

		<p:dialog styleClass="" id="errorMsge" global="true" modal="true"
			header="Error" width="30%" severity="info" widgetVar="errorMsge"
			closeOnEscape="true" resizable="false">
			<h:form id="frmerrorMsge">
				<center>
					<p:panelGrid columns="2" styleClass="ui-noborder">
						<p:graphicImage library="images" name="error-24.png"></p:graphicImage>
						<p:outputLabel value="#{createNewRoleBean.errorMsg}"></p:outputLabel>

					</p:panelGrid>
					<br></br>
					<p:commandButton style="margin-top:10px;margin-bottom:10px"
						process="frmerrorMsge" value="OK" onclick="PF('errorMsge').hide()">
					</p:commandButton>

				</center>
			</h:form>
		</p:dialog>
		<h:form>


			<p:dialog styleClass="" id="deleteconfirmationRole" global="true"
				modal="true" header="Warning" width="30%" severity="info"
				widgetVar="deleteconfirmationRole" closeOnEscape="true"
				resizable="false">
				<h:form id="frmdeleteconfirmationDept">
					<center>
						<p:panelGrid columns="2" styleClass="ui-noborder">
							<p:graphicImage library="images" name="warning.png"></p:graphicImage>
							<p:outputLabel value="Do you want to delete this record ?"></p:outputLabel>

						</p:panelGrid>
						<br></br>
						<p:commandButton id="yes" value="Yes"
							actionListener="#{createNewRoleBean.removeAction()}" ajax="true"
							onclick="PF('deleteconfirmationDept').hide()"></p:commandButton>
						<p:commandButton style="margin-top:10px;margin-bottom:10px"
							process="frmdeleteconfirmationDept" value="No"
							onclick="PF('deleteconfirmationRole').hide()">
						</p:commandButton>

					</center>
				</h:form>
			</p:dialog>
			<p:dialog styleClass="" id="errorMsgeForDel" global="true"
				modal="true" header="Warning" width="30%" severity="info"
				widgetVar="errorMsgeForDel" closeOnEscape="true" resizable="false">
				<h:form id="frmerrorMsgeDel">
					<center>
						<p:panelGrid columns="2" styleClass="ui-noborder">
							<p:graphicImage library="images" name="error-24.png"></p:graphicImage>
							<p:outputLabel value="#{manageRole.errorMsg}"></p:outputLabel>

						</p:panelGrid>
						<br></br>
						<p:commandButton style="margin-top:10px;margin-bottom:10px"
							process="frmerrorMsge" value="OK"
							onclick="PF('errorMsge').hide()" update="@all">
						</p:commandButton>

					</center>
				</h:form>
			</p:dialog>
		</h:form>

	</ui:define>
</ui:composition>